{# var response is an instance of PdmResponse #}

{% set type  = response.has_error() ? 'danger' : 'success' %}
{% set size  = response.fields      ? 'fa-3x' : 'fa-2x'%}
{% set icon  = response.has_error() ? 'fa fa-warning' : 'fa fa-floppy-o' %}
{% set iconclass = icon ~ ' ' ~ size %}

{% set title = response.has_error() ? 'Error!' : 'Success!' %}


<div id="pdm-response-alert" class="mb-3">
	{% include 'util/form/alert.twig' with {'type': type, 'iconclass': iconclass, 'title': title, 'message': response.message, 'fields': response.fields } %}
</div>
