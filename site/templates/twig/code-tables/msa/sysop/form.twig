{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	sysop                  Dplus\Codes\Msa\Sysop
	code                   MsaSysopCode
#}
<form action="{{ page.url }}" method="POST" id="code-edit-form" data-code="{{ code.system }}-{{ code.code }}">
	<input type="hidden" name="action" value="update-code">
	
	<div class="row">
		<div class="col-sm-6">
			<div class="form-group">
				<label for="system">System</label>
				<select name="system" class="form-control form-control-sm" id="system" {{ code.system ? 'disabled' : 'autofocus' }}>
					<option value="">-- Choose --</option>
					{% for key,label in sysop.fieldAttribute('system', 'options') %}
						<option value="{{ key }}" {{ code.system == key ? 'selected' : '' }}>
							{{ key }} - {{ label }}
						</option>
					{% endfor %}
				</select>
			</div>

			<div class="form-group">
				<label for="code">Code</label>
				<input type="text" name="code" class="form-control" value="{{ code.code }}" maxlength="{{ code.get_max_length_code() }}" id="code" {{ code.id ? 'readonly' : 'autofocus' }}>
			</div>

			<div class="form-group">
				<label for="description">Description</label>
				<input type="text" name="description" class="form-control" maxlength="20" value="{{ code.description }}" id="description" autofocus>
			</div>

			<div class="form-group">
				<label for="note_code">Note Code</label>
				<input type="text" name="note_code" class="form-control" value="{{ code.note_code }}" maxlength="4" id="note_code">
			</div>

			<!-- Web -->
			<div class="form-group">
				<label for="web_validate">Web Validate</label>
				{% include 'util/select.twig' with {'name': 'web_validate', 'id': 'web_validate', 'hideblankoption' : 'true', 'selectedvalue': code.web_validate, 'options': {'Y': 'Yes', 'N': 'No'}} %}
			</div>

			<div class="form-group">
				<label for="doc_store_folder">Web Document Storage Folder</label>
				<input type="text" name="doc_store_folder" class="form-control" value="{{ code.doc_store_folder }}" maxlength="8" id="doc_store_folder">
			</div>

			<div class="form-group">
				<label for="web_force">Web Force Entry</label>
				{% include 'util/select.twig' with {'name': 'web_force', 'id': 'web_force', 'hideblankoption' : 'true', 'selectedvalue': code.web_force, 'options': {'Y': 'Yes', 'N': 'No'}} %}
			</div>
			<!-- end web -->
		</div>
		<div class="col-sm-6">
			<div class="row">
				<div class="col-sm-3">
					<div class="form-group">
						<label for="file_name">File Name</label>
						{% include 'util/select.twig' with {'name': 'file_name', 'id': 'file_name', 'hideblankoption' : 'true', 'selectedvalue': code.file_name, 'options': {'Y': 'Yes', 'N': 'No'}} %}
					</div>
				</div>
				<div class="col-sm-3">
					<div class="form-group">
						<label for="validate">Validate</label>
						{% include 'util/select.twig' with {'name': 'validate', 'id': 'validate', 'hideblankoption' : 'true', 'selectedvalue': code.validate, 'options': {'Y': 'Yes', 'N': 'No'}} %}
					</div>
				</div>
				<div class="col-sm-3">
					<div class="form-group">
						<label for="force">Force Entry</label>
						{% include 'util/select.twig' with {'name': 'force', 'id': 'force', 'hideblankoption' : 'true', 'selectedvalue': code.force, 'options': {'Y': 'Yes', 'N': 'No'}} %}
					</div>
				</div>
				<div class="col-sm-3">
					<div class="form-group">
						<label for="adv_search">Advanced Search</label>
						{% include 'util/select.twig' with {'name': 'adv_search', 'id': 'adv_search', 'hideblankoption' : 'true', 'selectedvalue': code.adv_search, 'options': {'Y': 'Yes', 'N': 'No'}} %}
					</div>
				</div>
			</div>

			<div class="form-group">
				<label for="list_seq">List Sequence</label>
				<input type="text" name="list_seq" class="form-control" value="{{ code.list_seq }}" maxlength="3" id="list_seq">
			</div>

			<div class="form-group">
				<label for="field_type">Field Type</label>
				{% include 'util/select.twig' with {'name': 'field_type', 'id': 'field_type', 'hideblankoption' : 'true', 'selectedvalue': code.field_type, 'options': {'C': 'Character', 'N': 'Numeric'}} %}
			</div>

			<!-- if field type = 'N' -->
			<div class="row">
				<div class="col-6">
					<div class="form-group">
						<label for="before_dec">Digits Before Decimal</label>
						<input type="text" name="before_dec" class="form-control" value="{{ code.before_dec }}" maxlength="1" id="before_dec">
					</div>
				</div>
				<div class="col-6">
					<div class="form-group">
						<label for="after_dec">Digits After Decimal</label>
						<input type="text" name="after_dec" class="form-control" value="{{ code.after_dec }}" maxlength="1" id="after_dec">
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="d-flex justify-content-between align-items-center">
		{#
			Only show Edit Actions if the code is
			1. Locked for editing by the User
			2. Is a new code
			NOTE: Only show delete if code already exists.
		#}
		{% if sysop.recordlocker.isLocked(sysop.getRecordlockerKey(code)) == false or sysop.recordlocker.userHasLocked(sysop.getRecordlockerKey(code)) %}
			<button type="submit" class="btn btn-success">
				<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
			</button>
			{% if code.isNew() == false %}
				<a href="{{ page.codeDeleteUrl(code.system, code.code) }}" class="btn btn-danger form_button delete_button">
					<i class="fa fa-trash-o" aria-hidden="true"></i> Delete
				</a>
			{% endif %}
		{% endif %}
		<a href="{{ page.sysopUrl(sysop.getRecordlockerKey(code)) }}" class="btn btn-warning pull-right">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</a>
	</div>
</form>
