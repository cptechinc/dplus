$(function() {
	$('#edit-code-modal').on('hidden.bs.modal', function (event) {
		var modal = $(this);
		var button = $(event.relatedTarget); // Button that triggered the modal
		var code = modal.find('input[name=code]').val().toString();

		$('#code-table-alert').hide();
		$('.bg-success').removeClass('bg-success text-white');
		$('.highlight').removeClass('highlight');
		$('.code[data-code="'+code+'"]').addClass('highlight');
	});

	{% if input.get.offsetExists('focus') and input.get.text('focus') != 'new' %}
		$('.code[data-code="{{ input.get.text('focus') }}"]').addClass('highlight');
		$('html, body').animate({scrollTop: $('.code[data-code="{{ input.get.text('focus') }}"]').offset().top,},700,'linear');
	{% endif %}
});
