$(function() {
	$('#edit-code-modal').on('hidden.bs.modal', function (event) {
		var modal = $(this);
		var button = $(event.relatedTarget); // Button that triggered the modal
		var code = modal.find('input[name=code]').val().toString();

		$('#code-table-alert').hide();
		$('.bg-success').removeClass('bg-success text-white');
		$('.highlight').removeClass('highlight');
		$('.code[data-code="'+code+'"]').addClass('highlight');
	});

	{% if page.focus and page.focus != 'new' %}
		$('.code[data-code="{{ page.focus|urlencode }}"]').addClass('highlight');
		// $('html, body').animate({scrollTop: $('#{{ page.focus }}').offset().top,},700,'linear');
		$('html, body').animate({scrollTop: $('.code[data-code="{{ page.focus|urlencode }}"]').offset().top,},700,'linear');
	{% endif %}
});
