class RcmInputs {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new RcmInputs();
		}
		return this.instance;
	}

	constructor() {
		this.id              = 'code-form',
		this.form            = $('#' + this.id),
		this.code            = this.form.find('input[name=code]');
		this.description     = this.form.find('input[name=description]');
		this.workcenterid    = this.form.find('input[name=workcenterid]');
		this.workcenterdesc  = this.form.find('p.work-center.description');
	}
}
