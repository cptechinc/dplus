<div class="list-group">
	<div class="list-group-item bg-dark text-white">
		<div class="row align-items-center">
			<div class="col-3">
				Code
			</div>
			<div class="col-5">
				Description
			</div>
			<div class="col-1">
				Class
			</div>
			<div class="col-3 text-center">
				{% if page.is_print() == false %}
					<button type="button" class="btn btn-light" data-toggle="modal" data-target="#edit-code-modal" data-code="" data-description="" data-description2="" data-description3="" data-description4="" data-motorclass="">
						<i class="fa fa-plus" aria-hidden="true"></i> Add Code
					</button>
				{% endif %}
			</div>
		</div>
	</div>
	{% for code in codes %}
		{# data-code attribute and class code is for the highlight on close #}
		<div id="code-{{ code.code|urlencode }}" data-code="{{ code.code }}" class="list-group-item code pb-1 pt-1 {{ (response.key == code.code and response.has_success() ) ? 'bg-success text-white' : ''}}">
			<div class="row align-items-center">
				<div class="col-3">
					{{ code.code|shorten(14, '...') }}
				</div>
				<div class="col-5">
					{{ code.description|shorten(40, '...') }}
				</div>
				<div class="col-1">
					{{ code.class }}
				</div>
				<div class="col-3 text-center">
					{% if page.is_print() == false %}
						<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#edit-code-modal" data-code="{{ code.code }}" data-description="{{ code.description }}" data-description2="{{ code.description2 }}" data-description3="{{ code.description3 }}" data-description4="{{ code.description4 }}" data-motorclass="{{ code.class }}">
							<i class="fa fa-pencil" aria-hidden="true"></i> Edit
						</button>
						&nbsp;
						<a href="{{ page.get_codetable_code_deleteURL(page.codetable, code.code) }}" class="btn btn-danger delete_button">
							<i class="fa fa-trash" aria-hidden="true"></i> Delete
						</a>
					{% endif %}
				</div>
			</div>
		</div>
	{% endfor %}
</div>
