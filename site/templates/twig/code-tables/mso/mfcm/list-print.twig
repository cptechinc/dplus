{% extends 'code-tables/list-print.twig' %}

{% block print_headings_row %}
	<tr>
		<th colspan="3">
			<div class="w-100 d-flex justify-content-between">
				<div>{{ 'now'|date('m/d/Y h:i A') }}</div>
				<div>{{ page.headline }}</div>
				<div></div>
			</div>
		</th>
	</tr>
{% endblock %}

{% block headings_row %}
	<tr class="bg-dark text-white column-headers">
		{% block headings_columns %}
			<th>Code</th>
			<th>Description</th>
			<th>Class</th>
		{% endblock %}
	</tr>
{% endblock %}

{% block code_row %}
	<tr>
		<td>
			<span class="">{{ code.code|replace({' ': '&nbsp;'})|raw }}</span>
		</td>
		<td>
			{% for description in [code.description, code.description2, code.description3, code.description4] %}
				{{ description }} {{ loop.last == false and description ? '<br>'|raw : '' }}
			{% endfor %}
		</td>
		<td>{{ code.class }}</td>
	</tr>
{% endblock %}
