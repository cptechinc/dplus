{# lsm is an instance of LostSalesCode #}
<form action="{{ page.url }}" method="POST" id="code-edit-form">
	<input type="hidden" name="table" value="lsm">

	<div class="form-group">
		<label for="code">Code</label>
		<input type="text" name="code" class="form-control" maxlength="{{ max_length_code }}" value="" id="code">
	</div>

	<div class="form-group">
		<label for="description">Description</label>
		<input type="text" name="description" class="form-control" maxlength="20" value="" id="description">
	</div>

	<div class="form-group">
		<label for="updateinventorywatch">Update Inventory Watch?</label>
		{% include 'util/select.twig' with {'name': 'updateinventorywatch', 'id': 'updateinventorywatch', 'selectedvalue': 'N', 'options': {'Y': 'Yes', 'N': 'No'}} %}
	</div>

	<button type="submit" class="btn btn-success">
		<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
	</button>
	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</form>
