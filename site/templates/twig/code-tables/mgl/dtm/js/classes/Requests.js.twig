class DtmRequests {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new DtmRequests();
		}
		return this.instance;
	}

	validateCode(code, callback) {
		var ajax = new AjaxRequest(this.validateCodeUrl());

		ajax.setData({code: code});
		ajax.request(function(response) {
			callback(response)
		});
	}

	getCode(code, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('mgl/dtm/code/') }}');

		ajax.setData({code: code});
		ajax.request(function(response) {
			callback(response)
		});
	}

	validateCodeUrl() {
		return '{{ page.jsonApiUrl('mgl/validate/dtm/code/') }}';
	}

	validateGlCode(code, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('mgl/validate/gl-code/') }}');

		ajax.setData({code: code});
		ajax.request(function(response) {
			callback(response)
		});
	}

	getGlCode(code, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('mgl/gl-code/') }}');

		ajax.setData({code: code});
		ajax.request(function(response) {
			callback(response)
		});
	}
}
