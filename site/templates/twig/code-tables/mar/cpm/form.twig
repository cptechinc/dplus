{# cpm is an instance of CustomerPriceCode #}
<form action="{{ page.url }}" method="POST" id="code-edit-form">
	<input type="hidden" name="table" value="cpm">

	<div class="form-group">
		<label for="code">Code</label>
		<input type="text" name="code" class="form-control" maxlength="{{ max_length_code }}" value="" id="code">
	</div>

	<div class="form-group">
		<label for="description">Description</label>
		<input type="text" name="description" class="form-control" maxlength="20" value="" id="description">
	</div>

	<div class="form-group">
	    <label for="surcharge">Can Add Surcharge?</label>
	    <select name="surcharge" class="form-control" id="surcharge">
	        <option value="Y">Yes</option>
	        <option value="N">No</option>
	    </select>
    </div>

	<div class="form-group">
		<label for="percentage">Surcharge Percentage</label>
		<input type="text" name="percentage" class="form-control" value="" id="percentage">
	</div>

	<div class="modal-footer">
		<button type="submit" class="btn btn-success">
			<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>
		<button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
	</div>
</form>
