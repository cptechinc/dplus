{# data-code is for verifying edit vs new #}
<form action="{{ input.paginateUrl(1) }}" method="POST" id="code-form" data-code="">
	<input type="hidden" name="action" value="update">

	<div class="row">
		<div class="col-sm-3">
			<div class="form-group">
				<label for="code">Code</label>
				<input type="text" name="code" class="form-control" maxlength="{{ manager.fieldAttribute('code', 'maxlength') }}" id="code">
			</div>
		</div>
		<div class="col-sm-8">
			<div class="form-group">
				<label for="description">Description</label>
				<input type="text" name="description" class="form-control" maxlength="{{ manager.fieldAttribute('description', 'maxlength') }}" id="description">
			</div>
		</div>
	</div>
	
	<div class="row mb-3">
		<div class="col-sm-6">
			{% include 'code-tables/mar/crcd/form/gl-account.twig' with {'name' : 'gl_account'} %}
		</div>
		<div class="col-sm-6">
			{% include 'code-tables/mar/crcd/form/custid.twig' %}
		</div>
	</div>

	<legend>Service Charge Information</legend>
	<div class="row mb-3">
		<div class="col-sm-6">
			{% include 'code-tables/mar/crcd/form/gl-account.twig' with {'name' : 'gl_account_charge'} %}
		</div>
	</div>

	<div class="row mb-4">
		<div class="col-sm-4">
			<label for="servicerate">Service Rate</label>
			{% include 'util/bootstrap/form/input.twig' with {
					'input': {
						'name': 'servicerate',
						'size': 'sm',
						'type': 'number',
						'addclasses': ['text-right'],
						'attributes': {
							'placeholder': '',
							'aria-label':  'Service Rate',
							'max': manager.fieldAttribute('servicerate', 'max')
						}
					},
				}
			%}
		</div>
		<div class="col-sm-4">
			<label for="transactioncost">Transaction Cost</label>
			{% include 'util/bootstrap/form/input.twig' with {
					'input': {
						'name': 'transactioncost',
						'size': 'sm',
						'type': 'number',
						'addclasses': ['text-right'],
						'attributes': {
							'placeholder': '',
							'aria-label':  'Transaction Cost',
							'max': manager.fieldAttribute('transactioncost', 'max')
						}
					},
				}
			%}
		</div>
		<div class="col-sm-4">
			<label for="cc_surcharge_percent">Surcharge %</label>
			{% include 'util/bootstrap/form/input.twig' with {
					'input': {
						'name': 'cc_surcharge_percent',
						'size': 'sm',
						'type': 'number',
						'addclasses': ['text-right'],
						'attributes': {
							'placeholder': '',
							'aria-label':  'Surcharge Percent',
							'max': manager.fieldAttribute('cc_surcharge_percent', 'max')
						}
					},
				}
			%}
		</div>
	</div>

	<div class="d-flex justify-content-between align-items-center">
		<button type="submit" class="btn btn-success form_button">
			<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>
		<button type="button" class="btn btn-warning" data-dismiss="modal">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</button>
	</div>
</form>