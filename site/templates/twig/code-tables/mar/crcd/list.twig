{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	manager                Dplus\Codes\Base
#}
{% set response = manager.getResponse() %}

{% set values = input.get %}
{% set segments = input.urlSegments() %}
{% set lastsegment = segments[segments|length] %}

<div class="mb-3">
	{% if page.is_print() %}
		<button onclick="window.history.back();" class="btn btn-primary d-print-none">
			<i class="fa fa-undo" aria-hidden="true"></i> Back
		</button>
		&nbsp;
		<button class="btn btn-primary d-print-none" onclick="window.print();return false;">
			<i class="fa fa-print" aria-hidden="true"></i> Print
		</button>
	{% else %}
		<a href="{{ page.menuUrl() }}" class="btn btn-primary">
			<i class="fa fa-undo" aria-hidden="true"></i> Back to {{ page.menuTitle() }}
		</a>
		&nbsp;
		<a href="{{ page.get_printURL() }}" class="btn btn-primary">
			<i class="fa fa-print" aria-hidden="true"></i> View Printable
		</a>
	{% endif %}
</div>

<table class="table table-sm codes-list">
	<thead>
		<tr>
			<th colspan="4" class="border-0"></th>
			<th colspan="4" class="border-0 bg-dark text-white text-center">
				Service Charge Information
			</th>
			<th class="border-0"></th>
		</tr>
		<tr class="bg-dark text-white">
			<th class="border-0">Digit</th>
			<th class="border-0">Name</th>
			<th class="border-0">GL Account</th>
			<th class="border-0">Cust ID</th>
			<th class="border-0">GL Account</th>
			<th class="border-0 text-right">Rate</th>
			<th class="border-0 text-right">Tranaction Cost</th>
			<th class="border-0 text-right">Surcharge</th>
			<th class="border-0 pt-2 pb-2 text-center">
				{% if page.is_print() == false %}
					<button type="button" class="btn btn-light btn-sm" data-toggle="modal" data-target="#edit-code-modal" data-code="" data-description="">
						<i class="fa fa-plus" aria-hidden="true"></i> Add Code
					</button>
				{% endif %}
			</th>
		</tr>
	</thead>
	<tbody>
		{% for code in codes %}
			<tr data-code="{{ code.code }}" class="code {{ (response.key == code.code and response.hasSuccess() ) ? 'bg-success text-white' : ''}}">
				<td>{{ code.code }}</td>
				<td>{{ code.description }}</td>
				<td>{{ code.glaccountnbr }}</td>
				<td>{{ code.custid }}</td>
				<td>{{ code.glchargeaccountnbr }}</td>
				<td class="text-right">{{ code.servicerate|number_format(manager.fieldAttribute('servicerate', 'precision')) }}</td>
				<td class="text-right">{{ code.transactioncost|number_format(manager.fieldAttribute('transactioncost', 'precision')) }}</td>
				<td class="text-right">{{ code.surchargepercentcc|number_format(manager.fieldAttribute('surchargepercentcc', 'precision')) }}</td>
				<td class="text-center">
					{% if page.is_print() == false %}
						<button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#edit-code-modal" data-code="{{ code.code }}" data-description="{{ code.description }}" data-json="{{ manager.codeJson(code)|json_encode }}">
							<i class="fa fa-pencil" aria-hidden="true"></i> Edit
						</button>
						&nbsp;
						<a href="{{ page.codeDeleteUrl(code.code) }}" class="btn btn-danger btn-sm delete_button">
							<i class="fa fa-trash" aria-hidden="true"></i> Delete
						</a>
					{% endif %}
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
