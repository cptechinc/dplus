<div class="row">
	<div class="col-sm-3 mb-2">
		<label for="priority">Priority</label>
	</div>
	<div class="col-sm-2 mb-2">
		{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'priority',
					'size': 'sm',
					'attributes': {
						'maxlength': manager.fieldAttribute('priority', 'maxlength')
					}
				}
			}
		%}
	</div>
</div>

<div class="row">
	<div class="col-sm-3 mb-2">
