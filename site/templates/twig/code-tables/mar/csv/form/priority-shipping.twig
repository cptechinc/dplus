<div class="row">
	<div class="col-sm-3 mb-2">
		<label for="airshipment">Air Shipment</label>
	</div>
	<div class="col-sm-2 mb-2">
		{% include 'util/bootstrap/form/select-simple.twig' with {
				'select': {
					'name': 'airshipment',
					'size': 'sm',
					'value' : manager.fieldAttribute('airshipment', 'default'),
					'haskeys': true,
					'showvalue': true,
					'options': manager.fieldAttribute('airshipment', 'options')
				}
			}
		%}
	</div>
</div>

