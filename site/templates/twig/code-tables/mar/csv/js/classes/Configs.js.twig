class CodeConfigs {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new CodeConfigs();
		}
		return this.instance;
	}

	constructor() {
		this.fields = {
			code: {
				maxlength: {{ manager.fieldAttribute('code', 'maxlength') }}
			},
			description: {
				maxlength: {{ manager.fieldAttribute('description', 'maxlength') }}
			},
			billing: {
				default: '{{ manager.fieldAttribute('billing', 'default') }}'
			},
			residential: {
				default: '{{ manager.fieldAttribute('residential', 'default') }}'
			},
			airshipment: {
				default: '{{ manager.fieldAttribute('airshipment', 'default') }}'
			},
			commercialflight: {
				default: '{{ manager.fieldAttribute('commercialflight', 'default') }}'
			},
			chargefreight: {
				default: '{{ manager.fieldAttribute('chargefreight', 'default') }}'
			},
			useroute: {
				default: '{{ manager.fieldAttribute('useroute', 'default') }}',
				enabled: {{ manager.fieldAttribute('useroute', 'enabled') ? 'true' : 'false' }}
			},
			addsurcharge: {
				default: '{{ manager.fieldAttribute('addsurcharge', 'default') }}'
			},
			surchargepercent: {
				precision: {{ manager.fieldAttribute('surchargepercent', 'precision') }}
			},
		};
	}
}
