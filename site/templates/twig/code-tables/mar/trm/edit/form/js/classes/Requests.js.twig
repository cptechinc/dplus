class SpmRequests {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new SpmRequests();
		}
		return this.instance;
	}

	validateCode(id, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('mar/validate/spm/code/') }}');

		ajax.setData({code: id});
		ajax.request(function(response) {
			callback(response)
		});
	}

	getLogmUser(id, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('msa/logm/user/') }}');

		ajax.setData({loginID: id});
		ajax.request(function(response) {
			callback(response)
		});
	}

	getGroupCode(id, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('mar/spgpm/code/') }}');

		ajax.setData({code: id});
		ajax.request(function(response) {
			callback(response)
		});
	}

	getVendor(id, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('map/vendor/') }}');

		ajax.setData({vendorID: id});
		ajax.request(function(response) {
			callback(response)
		});
	}
}
