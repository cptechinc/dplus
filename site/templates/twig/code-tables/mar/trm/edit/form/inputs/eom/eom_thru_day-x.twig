{% set value = code.eom_thru_day(x) %}

{% include 'util/bootstrap/form/input.twig' with {
	'input': {
		'name': 'eom_thru_day' ~ x,
		'type': 'number',
		'value': value ? value : '',
		'size': 'sm', 
		'addclasses': [
			'text-right',
			'eom_thru_day'
		],
		'attributes': {
			'tabindex': x ~ '12',
			'readonly': value == 0,
			'min': x == 1,
			'max': manager.fieldAttribute('eom_thru_day', 'max'),
			'required': x == 1,
		}
	}
} %}
