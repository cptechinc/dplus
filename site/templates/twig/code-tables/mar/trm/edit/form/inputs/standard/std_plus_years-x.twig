{% set readonly = code.std_due_date(x) == 0 %}

{% set tabindex = startindex + (x * 10) + 9 %}
{% set tabindex = readonly ? '-' ~ tabindex : tabindex %}

{% include 'util/bootstrap/form/input.twig' with {
	'input': {
		'name': 'std_plus_years' ~ x,
		'type': 'number',
		'value': code.std_plus_years(x),
		'size': 'sm', 
		'addclasses': [
			'text-right',
			'std_due_years'
		],
		'attributes': {
			'tabindex': tabindex,
			'data-error': '.error',
			'readonly': readonly,
			'max':  manager.fieldAttribute('std_plus_years', 'max')
		}
	}
} %}
