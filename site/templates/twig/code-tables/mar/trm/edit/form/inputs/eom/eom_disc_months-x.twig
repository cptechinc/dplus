{% set value = code.eom_disc_months(x) %}
{% set tabindex = startindex + (x * 10) + 4 %}

{% include 'util/bootstrap/form/input.twig' with {
	'input': {
		'name': 'eom_disc_months' ~ x,
		'type': 'number',
		'value': value > 0 ? value : '',
		'size': 'sm', 
		'addclasses': [
			'text-right',
			'eom_disc_months'
		],
		'attributes': {
			'tabindex': tabindex,
			'data-error': '.error',
			'readonly': code.eom_disc_percent(x) == 0,
			'max': 99
		}
	}
} %}