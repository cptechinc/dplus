{% set value = code.eom_disc_day(x) %}
{% set readonly = code.eom_disc_percent(x) == 0 %}
{% set tabindex = startindex + (x * 10) + 3 %}
{% set tabindex = readonly ? '-' ~ tabindex : tabindex %}

{% include 'util/bootstrap/form/input.twig' with {
	'input': {
		'name': 'eom_disc_day' ~ x,
		'type': 'number',
		'value': value > 0 ? value : '',
		'size': 'sm', 
		'addclasses': [
			'text-right',
			'eom_disc_day'
		],
		'attributes': {
			'tabindex': tabindex,
			'data-error': '.error',
			'readonly': readonly,
			'max': 31
		}
	}
} %}
