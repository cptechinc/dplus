{#
	var                    Description / Instance of
	-------------------------------------------------
	code                   CustomerTermsCode
	m_trm                  module CodeTablesTrm
#}

<div class="form-row text-sm">
	<div class="col-2">
		<h5>&nbsp;</h5>
		<div class="list-group">
			<div class="list-group-item">
				<div class="row align-items-center text-center">
					<div class="col-3">
						Split
					</div>
					<div class="col-9">
						Ord %
					</div>
				</div>
			</div>
			{% for x in 1..m_trm.count_standardterms_split() %}
				<div class="list-group-item row{{ x }} percent {{ code.order_percent(x) > 0 ? '' : 'collapse' }}" data-index="{{ x }}">
					<div class="row align-items-center">
						<div class="col-3">
							{{ x }}
						</div>
						<div class="col-9">
							<input type="text" name="order_percent{{ x }}" id="order_percent{{ x }}" maxlength="6" class="form-control order_percent" value="{{ code.order_percent(x) }}">
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<div class="col">
		<h5 class="text-center">Discount</h5>
		<div class="list-group">
			<div class="list-group-item bg-dark text-white">
				<div class="row align-items-center text-center">
					<div class="col">
						Percent
					</div>
					<div class="col">
						Days
					</div>
					<div class="col">
						Day
					</div>
					<div class="col">
						Date
					</div>
				</div>
			</div>
			{% for x in 1..m_trm.count_standardterms_split() %}
				<div class="list-group-item row{{ x }} discount {{ code.order_percent(x) > 0 ? '' : 'collapse' }}" data-index="{{ x }}">
					<div class="row align-items-center">
						<div class="col">
							<input type="text" name="percent{{ x }}" id="percent{{ x }}" maxlength="5" class="form-control" value="{{ code.percent(x) }}">
						</div>
						<div class="col">
							<input type="text" name="days{{ x }}" id="days{{ x }}" maxlength="3" class="form-control" value="{{ code.days(x) }}">
						</div>
						<div class="col">
							<input type="text" name="day{{ x }}" id="day{{ x }}" maxlength="2" class="form-control" value="{{ code.day(x) }}">
						</div>
						<div class="col">
							<input type="text" name="date{{ x }}" id="date{{ x }}" maxlength="5" class="form-control" value="{{ code.date(x) }}">
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<div class="col">
		<h5 class="text-center">Due</h5>
		<div class="list-group">
			<div class="list-group-item bg-dark text-white">
				<div class="row align-items-center text-center">
					<div class="col">
						Days
					</div>
					<div class="col">
						Day
					</div>
					<div class="col-3">
						Plus Mnths
					</div>
					<div class="col">
						Date
					</div>
					<div class="col">
						Plus Yr
					</div>
				</div>
			</div>
			{% for x in 1..m_trm.count_standardterms_split() %}
				<div class="list-group-item row{{ x }} due {{ code.order_percent(x) > 0 ? '' : 'collapse' }}" data-index="{{ x }}">
					<div class="row align-items-center">
						<div class="col">
							<input type="text" name="due_days{{ x }}" id="due_days{{ x }}" maxlength="3" class="form-control" value="{{ code.due_days(x) }}">
						</div>
						<div class="col">
							<input type="text" name="due_day{{ x }}" id="due_day{{ x }}" maxlength="2" class="form-control" value="{{ code.due_day(x) }}">
						</div>
						<div class="col-3">
							<input type="text" name="due_months{{ x }}" id="due_months{{ x }}" maxlength="2" class="form-control" value="{{ code.due_months(x) }}">
						</div>
						<div class="col">
							<input type="text" name="due_date{{ x }}" id="due_date{{ x }}" maxlength="5" class="form-control" value="{{ code.due_date(x) }}">
						</div>
						<div class="col">
							<input type="text" name="due_year{{ x }}" id="due_year{{ x }}" maxlength="1" class="form-control" value="{{ code.due_year(x) }}">
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
