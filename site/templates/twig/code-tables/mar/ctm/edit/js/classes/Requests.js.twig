class CtmRequests {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new CtmRequests();
		}
		return this.instance;
	}

	validateCode(code, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('mar/validate/ctm/code/') }}');

		ajax.setData({code: code});
		ajax.request(function(response) {
			callback(response)
		});
	}

	getCode(code, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('mar/ctm/code/') }}');

		ajax.setData({code: code});
		ajax.request(function(response) {
			callback(response)
		});
	}

	getGlAcct(id, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('mgl/gl-code/') }}');

		ajax.setData({code: id});
		ajax.request(function(response) {
			callback(response)
		});
	}
}
