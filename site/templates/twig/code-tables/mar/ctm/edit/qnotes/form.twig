<form action="{{ input.paginateUrl(1) }}" method="POST" id="notes-form">
	<input type="hidden" name="code" value="{{ code.code }}">
	<input type="hidden" name="type" id="type" value="">
	<input type="hidden" name="action" value="update-notes">


	<div class="form-group">
		{% include 'msa/noce/ajax/button.twig' with {'input': '#note'} %}
	</div>
	<div class="form-group">
		{% include 'util/qnotes-textarea.twig' with {'readonly': ctm.recordlocker.userHasLocked(code.code) == false or code.code == '' } %}
	</div>
	<div class="d-flex justify-content-between align-items-center">
		{% if ctm.recordlocker.userHasLocked(code.code) or code.code == '' %}
			<button type="submit" name="action" value="update-notes" class="btn btn-success">
				<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
			</button>
			<button type="submit" name="action" value="delete-notes" class="btn btn-danger">
				<i class="fa fa-trash-o" aria-hidden="true"></i> Delete
			</button>
		{% endif %}
		<button type="button" class="btn btn-warning pull-right" data-dismiss="modal">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</button>
	</div>
</form>
