<div class="input-parent">
	<label for="groupid">Group ID</label>
	{% include 'util/bootstrap/form/input-group.twig' with {
			'inputgroup': {
				'type': 'prepend',
				'size': 'sm',
				'input': {
					'name': 'groupid',
					'attributes': {
						'placeholder': '',
						'aria-label':  'Group ID',
						'data-jqv': 'true'
					}
				},
				'button': {
					'colorclass': 'btn-secondary',
					'text': 'fa fa-search'|icon,
					'attributes': {
						'title': 'Search Salesperson Groups',
						'data-toggle': 'modal',
						'data-target': '#ajax-modal',
						'data-lookupurl': page.searchLookupUrl('mar/spgpm'),
						'data-input': '#groupid'
					}
				}
			}
		}
	%}
	<small class="text-muted group-description"></small>
</div>