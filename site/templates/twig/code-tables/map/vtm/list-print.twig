{% extends 'code-tables/list-print.twig' %}

{% block print_headings_row %}
	<tr>
		<th colspan="3">
			<div class="w-100 d-flex justify-content-between">
				<div>{{ 'now'|date('m/d/Y h:i A') }}</div>
				<div>{{ page.headline }}</div>
				<div></div>
			</div>
		</th>
	</tr>
{% endblock %}

{% block headings_row %}
	<tr class="bg-dark text-white column-headers">
		{% block headings_columns %}
			<th>Code</th>
			<th>Description</th>
			<th>Fabricator</th>
			<th>Production</th>
			<th>Competitor</th>
		{% endblock %}
	</tr>
{% endblock %}

{% for code in codes %}
	{% block code_columns %}
		<td>
			<span class="">{{ code.code|replace({' ': '&nbsp;'})|raw }}</span>
		</td>
		<td>{{ code.description }}</td>
		<td>{{ code.fabricator|capitalize }}</td>
		<td>{{ code.production|capitalize }}</td>
		<td>{{ code.competitor|capitalize }}</td>
	{% endblock %}
{% endfor %}