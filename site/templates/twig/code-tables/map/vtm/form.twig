{# vtm is an instance of ApTypeCode #}
<form action="{{ input.paginateUrl(1) }}" method="POST" id="code-form" data-code="">
	<input type="hidden" name="action" value="update">

	<div class="form-group">
		<label for="code">Code</label>
		<input type="text" name="code" class="form-control form-control-sm" maxlength="{{ manager.fieldAttribute('code', 'maxlength') }}" id="code">
	</div>

	<div class="form-group">
		<label for="description">Description</label>
		<input type="text" name="description" class="form-control form-control-sm" maxlength="{{ manager.fieldAttribute('description', 'maxlength') }}" id="description">
	</div>

	<div class="row mb-3">
		<div class="col-sm-4 mb-3">
			<label for="fabricator">Fabricator</label>
			{% include 'util/bootstrap/form/select-simple.twig' with {
					'select': {
						'name': 'fabricator',
						'value' : manager.fieldAttribute('fabricator', 'default'),
						'haskeys': true,
						'options': {'Y': 'Yes', 'N': 'No'},
						'attributes': {
							'readonly': manager.fieldAttribute('fabricator', 'disabled'),
							'disabled': manager.fieldAttribute('fabricator', 'disabled'),
						}
					}
				}
			%}
		</div>
		<div class="col-sm-4 mb-3">
			<label for="production">Production</label>
			{% include 'util/bootstrap/form/select-simple.twig' with {
					'select': {
						'name': 'production',
						'value' : manager.fieldAttribute('production', 'default'),
						'haskeys': true,
						'options': {'Y': 'Yes', 'N': 'No'}

					}
				}
			%}
		</div>
		<div class="col-sm-4 mb-3">
			<label for="competitor">Competitor</label>
			{% include 'util/bootstrap/form/select-simple.twig' with {
					'select': {
						'name': 'competitor',
						'value' : manager.fieldAttribute('competitor', 'default'),
						'haskeys': true,
						'options': {'Y': 'Yes', 'N': 'No'}
					}
				}
			%}
		</div>
	</div>

	<div class="d-flex justify-content-between align-items-center">
		<button type="submit" class="btn btn-success form_button">
			<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>
		<button type="button" class="btn btn-warning" data-dismiss="modal">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</button>
	</div>
</form>
