{# iarn is an instance of InventoryAdjustmentReason #}
<form action="{{ page.url }}" method="POST" id="code-edit-form">
	<input type="hidden" name="table" value="iarn">

	<div class="form-group">
		<label for="code">Code</label>
		<input type="text" name="code" class="form-control" maxlength="{{ max_length_code }}" value="" id="code">
	</div>

	<div class="form-group">
		<label for="description">Description</label>
		<input type="text" name="description" class="form-control" maxlength="30" value="" id="description">
	</div>

	<div class="form-group">
		<label for="sys_defined">System Defined ?</label>
		<select name="sys_defined" class="form-control" id="sys_defined">
			<option value="N">No</option>
			<option value="Y">Yes</option>
		</select>
	</div>

	<div class="modal-footer">
		<button type="submit" class="btn btn-success">
			<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>
		<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	</div>
</form>
