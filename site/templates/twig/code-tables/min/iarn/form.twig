{# iarn is an instance of InventoryAdjustmentReason #}
<form action="{{ page.url }}" method="POST" id="code-edit-form">
	<input type="hidden" name="table" value="iarn">

	<div class="form-group">
		<label for="code">Code</label>
		<input type="text" name="code" class="form-control" maxlength="{{ max_length_code }}" value="" id="code">
	</div>

	<div class="form-group">
		<label for="description">Description</label>
		<input type="text" name="description" class="form-control" value="" id="description">
	</div>

	<div class="form-group">
		<label for="sys_defined">System Defined ?</label>
		{% include 'util/select.twig' with {'name': 'sys_defined', 'id': 'sys_defined', 'selectedvalue': code.sys_defined, 'options': {'Y': 'Yes', 'N': 'No'}} %}
	</div>

	<div class="modal-footer">
		<button type="submit" class="btn btn-success">
			<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>
		<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	</div>
</form>
