{# csccm is an instance of CustomerStockingCell #}
<div class="container">
    <div class="row justify-content-md-center my-5">
	    <div class="col-sm-6">
			<form action="{{ page.url }}" method="POST" id="code-edit-form">
				<input type="hidden" name="table" value="csccm">

				<div class="form-group">
					<label for="code">Code</label>
					<input type="text" name="code" class="form-control" maxlength="{{ max_length_code }}" value="" id="code">
				</div>

				<div class="form-group">
					<label for="description">Description</label>
					<input type="text" name="description" class="form-control" value="" id="description">
				</div>

				<div class="modal-footer">
					<button type="submit" class="btn btn-success">
						<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
					</button>
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</form>
	    </div>
	</div>
</div>
