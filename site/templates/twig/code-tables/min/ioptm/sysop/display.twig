{% set response = ioptm.getResponse() %}

<div class="mb-3">
	{% include 'code-tables/min/ioptm/bread-crumbs.twig' %}
</div>

{% if response %}
	<div class="mb-3">
		{% include 'code-tables/response.twig' %}
	</div>
{% endif %}

<div class="card">
	<div class="card-header bg-light">
		AR Optional Codes for {{ sysop.id }}
	</div>

	{% include 'code-tables/min/ioptm/sysop/list/list.twig' %}

	<div class="card-body">
		{% include 'util/paginator/propel.twig' with {'pager': codes} %}
	</div>

	<div class="card-footer">
		<div class="d-flex justify-content-between align-items-center">
			<div></div>
			<div></div>
			<div>
				<a href="{{ page.ioptmUrl(sysop.id) }}" class="btn btn-sm btn-warning">
					<i class="fa fa-times" aria-hidden="true"></i> Close
				</a>
			</div>
		</div>
	</div>
</div>

