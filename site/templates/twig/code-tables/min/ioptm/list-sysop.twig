<div class="list-group">
	<div class="list-group-item bg-dark text-white">
		<div class="row align-items-center">
			<div class="col-2">
				Code
			</div>
			<div class="col-3">
				Description
			</div>
			<div class="col-1">
				Validate?
			</div>
			<div class="col-1">
				Force?
			</div>
			<div class="col-2">
				Note Code
			</div>
			<div class="col-1">
				List Seq
			</div>
			<div class="col-2 text-center">
				{% if page.is_print() == false %}
					<!-- <a href="{# page.url ~ '?code=new' #}" class="btn btn-light">
						<i class="fa fa-plus" aria-hidden="true"></i> Add Code
					</a> -->
				{% endif %}
			</div>
		</div>
	</div>
	{% for code in codes %}
		<div id="code-{{ code.code }}" class="list-group-item pb-1 pt-1 {{ (response.key == code.code and response.has_success() ) ? 'bg-success text-white' : ''}}">
			<div class="row align-items-center">
				<div class="col-2">
					{{ code.code }}
				</div>
				<div class="col-3">
					{{ code.description }}
				</div>
				<div class="col-1">
					{{ code.validate|yesorno|capitalize }}
				</div>
				<div class="col-1">
					{{ code.force|yesorno|capitalize }}
				</div>
				<div class="col-2">
					{{ code.note_code }}
				</div>
				<div class="col-1">
					{{ code.list_seq == '' ? '' : code.list_seq }}
				</div>
				<div class="col-2 text-center">
					{% if page.is_print() == false %}
						<a href="{{ page.get_sysopURL(code.code) }}" class="btn btn-warning">
							<i class="fa fa-pencil" aria-hidden="true"></i> Edit
						</a>
					{% endif %}
				</div>
			</div>
		</div>
	{% endfor %}
</div>
