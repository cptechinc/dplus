class IgcmRequests {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new IgcmRequests();
		}
		return this.instance;
	}

	validateCode(code, callback) {
		var ajax = new AjaxRequest(this.validateCodeUrl());

		ajax.setData({code: code});
		ajax.request(function(response) {
			callback(response)
		});
	}

	getCode(code, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('inv/igcm/code/') }}');

		ajax.setData({code: code});
		ajax.request(function(response) {
			callback(response)
		});
	}

	validateCodeUrl() {
		return '{{ page.jsonApiUrl('inv/validate/igcm/code/') }}';
	}
}
