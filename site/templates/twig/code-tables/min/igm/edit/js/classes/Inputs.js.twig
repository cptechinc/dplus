class IgmInputs {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new IgmInputs();
		}
		return this.instance;
	}

	constructor() {
		this.id            = 'code-form',
		this.form          = $('#' + this.id),
		this.code          = this.form.find('input[name=code]');
		this.description   = this.form.find('input[name=description]');
		this.surchargetype = this.form.find('select[name=surchargetype]');
		this.surchargeamount   = this.form.find('input[name=surchargeamount]');
		this.surchargepercent  = this.form.find('input[name=surchargepercent]');
	}
}
