class IgmRequests {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new IgmRequests();
		}
		return this.instance;
	}

	validateCode(code, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('inv/validate/igm/code/') }}');

		ajax.setData({code: code});
		ajax.request(function(response) {
			callback(response)
		});
	}

	getCode(code, callback) {
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('inv/igm/code/') }}');

		ajax.setData({code: code});
