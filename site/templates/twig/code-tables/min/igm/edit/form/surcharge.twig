<div class="form-group">
	<label for="surcharge">Can Add Surcharge</label>
	{% include 'util/bootstrap/form/select-simple.twig' with {
			'select': {
				'name': 'surcharge',
				'value' : invgroup.surcharge,
				'haskeys': true,
				'options': {'Y': 'Yes', 'N': 'No'}
			}
		}
	%}
</div>
<div class="form-group">
	<div class="row">
		<div class="col-sm-4">
			<label for="surchargetype">Dollar or Percent</label>
			{% include 'util/bootstrap/form/select-simple.twig' with {
					'select': {
						'name': 'surchargetype',
						'value' : invgroup.surchargetype,
						'haskeys': true,
						'options': igm.fieldAttribute('surchargetype', 'options'),
						'attributes': {
							'readonly': invgroup.hasSurcharge() == false
						}
					}
				}
			%}
		</div>
		<div class="col-sm-4">
			<div class="form-group">
				<label for="surchargeamount">Dollar Amount</label>
				{% include 'util/bootstrap/form/input.twig' with {
						'input': {
							'name': 'surchargeamount', 'value': invgroup.surchargeamount|number_format(igm.fieldAttribute('surchargeamount', 'precision')),
							'addclasses': ['text-right'],
							'attributes': {
								'precision': igm.fieldAttribute('surchargeamount', 'precision'),
								'readonly': invgroup.hasSurcharge() == false or invgroup.surchargetype != 'D'
							}
						}
					}
				%}
			</div>
		</div>
		<div class="col-sm-4">
			<div class="form-group">
				<label for="surchargepercent">Percent</label>
				{% include 'util/bootstrap/form/input.twig' with {
						'input': {
							'name': 'surchargepercent', 'value': invgroup.surchargepercent|number_format(igm.fieldAttribute('surchargepercent', 'precision')),
							'addclasses': ['text-right'],
							'attributes': {
								'precision': igm.fieldAttribute('surchargepercent', 'precision'),
								'readonly': invgroup.hasSurcharge() == false or invgroup.surchargetype == 'D'
							}
						}
					}
				%}
			</div>
		</div>
	</div>
</div>
