<div class="form-row form-group">
	<div class="col">
		<label for="cash_customer">Cash Customer</label>
	</div>
	<div class="col">
		<div class="input-group">
			<span class="input-group-prepend">
				<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#ajax-modal">
					<i class="fa fa-search" aria-hidden="true"></i> <span class="sr-only">Search Customers</span>
				</button>
			</span>
			<input type="text" name="cash_customer" class="form-control" maxlength="6" value="{{ warehouse.cash_customer }}" id="cash_customer">

		</div>

	</div>
</div>
<div class="form-row form-group">
	<div class="col">
		<label for="pickdetail">Pick Detail</label>
	</div>
	<div class="col">
		{% include 'util/select.twig' with {'name': 'pickdetail', 'id': 'pickdetail', 'options': {'A': 'Available', 'S': 'Selected', 'N': 'No'}, 'selectedvalue': (warehouse.pickdetail ? warehouse.pickdetail : '')} %}
	</div>
</div>

{% if config_in.use_controlbin() %}
	<div class="form-row form-group">
		<div class="col">
			<label for="bin_production">Production Bin</label>
		</div>
		<div class="col">
			<input type="text" name="bin_production" class="form-control" value="{{ warehouse.bin_production }}" id="bin_production">
		</div>
	</div>
{% endif %}

<div class="form-row form-group">
	<div class="col">
		<label for="bin_qcrga">QC / RGA Bin</label>
	</div>
	<div class="col">
		<input type="text" name="bin_qcrga" class="form-control" maxlength="8" value="{{ warehouse.bin_qcrga }}" id="bin_qcrga">
	</div>
</div>
<div class="form-row form-group">
	<div class="col">
		<label for="consignment">Consignment</label>
	</div>
	<div class="col">
		{% include 'util/select.twig' with {'name': 'consignment', 'id': 'consignment', 'options': {'N': 'No', 'Y': 'Yes'}, 'selectedvalue': (warehouse.consignment ? warehouse.consignment : '')} %}
	</div>
</div>

{% include 'code-tables/min/iwhm/select-whse.twig' with {'name': 'whse_profit', 'label': 'Profit Whse', 'value': warehouse.whse_profit, 'warehouses': warehouses} %}
{% include 'code-tables/min/iwhm/select-whse.twig' with {'name': 'whse_asset', 'label': 'Asset Whse', 'value': warehouse.whse_asset, 'warehouses': warehouses} %}
{% include 'code-tables/min/iwhm/select-whse.twig' with {'name': 'whse_supply', 'label': 'Supply Whse', 'value': warehouse.whse_supply, 'warehouses': warehouses} %}

<div class="form-row form-group">
	<div class="col">
		<label for="arrangement">Bin Arrangement</label>
	</div>
	<div class="col">
		{% include 'util/select.twig' with {'name': 'arranged', 'id': 'arranged', 'selectedvalue': (warehouse.arranged ? warehouse.arranged : 'R'), 'options': warehouse.get_arrangement_options()} %}
	</div>
</div>
