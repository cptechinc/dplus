<div class="form-row form-group whse">
	<div class="col-sm-4">
		<label for="{{ name }}">{{ label }}</label>
	</div>
	<div class="col-sm-3">
		{% include 'util/bootstrap/form/input-group.twig' with {
				'inputgroup': {
					'type': 'prepend',
					'size': 'sm',
					'input': {
						'name': name,
						'value': value,
						'attributes': {
							'placeholder': '',
							'aria-label':  label
						}
					},
					'button': {
						'colorclass': 'btn-secondary',
						'text': 'fa fa-search'|icon,
						'attributes': {
							'title': 'Search Warehouses',
							'data-toggle': 'modal',
							'data-target': '#ajax-modal',
							'data-lookupurl': page.searchLookupUrl('warehouses'),
							'data-input': '#' ~ name
						}
					}
				}
			}
		%}
	</div>
	<div class="col-sm-5">
		<p class="form-control-plaintext form-control-sm text-muted whse-name">{{ whsename }}</p>
	</div>
</div>
