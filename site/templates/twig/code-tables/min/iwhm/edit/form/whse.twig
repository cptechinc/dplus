<div class="form-row form-group">
	<div class="col-sm-4">
		<label for="custID">Cash Customer</label>
	</div>
	<div class="col-sm-3">
		{% include 'util/bootstrap/form/input-group.twig' with {
				'inputgroup': {
					'type': 'prepend',
					'size': 'sm',
					'input': {
						'name': 'custid',
						'value': warehouse.custid,
						'attributes': {
							'placeholder': '',
							'aria-label':  'Customer ID'
						}
					},
					'button': {
						'colorclass': 'btn-secondary',
						'text': 'fa fa-search'|icon,
						'attributes': {
							'title': 'Search Customers',
							'data-toggle': 'modal',
							'data-target': '#ajax-modal',
							'data-lookupurl': page.searchLookupUrl('customers'),
							'data-input': '#custid'
						}
					}
				}
			}
		%}
		<small class="text-muted customer-name">{{ warehouse.cashCustomer.name }}</small>
	</div>
</div>

<div class="form-row form-group">
	<div class="col-sm-4">
		<label for="pickdetail">Pick Detail</label>
	</div>
	<div class="col-sm-3">
		{% include 'util/bootstrap/form/select-simple.twig' with {
				'select': {
					'name': 'pickdetail',
					'value' : warehouse.pickdetail,
					'size': 'sm',
					'haskeys': true,
					'options': iwhm.fieldAttribute('pickdetail', 'options')
				}
			}
		%}
	</div>
</div>

<div class="form-row form-group">
	<div class="col-sm-4">
		<label for="productionbin">Production Bin</label>
	</div>
	<div class="col-sm-3">
		{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'productionbin', 'value': warehouse.productionbin,
					'size': 'sm',
					'attributes': {
						'maxlength': iwhm.fieldAttribute('productionbin', 'maxlength'),
						'readonly': iwhm.fieldAttribute('productionbin', 'disabled')
					}
				}
			}
		%}
	</div>
</div>

<div class="form-row form-group">
	<div class="col-sm-4">
		<label for="qcbin">QC / RGA Bin</label>
	</div>
	<div class="col-sm-3">
		{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'qcbin', 'value': warehouse.qcbin,
					'size': 'sm',
					'attributes': {
						'maxlength': iwhm.fieldAttribute('qcbin', 'maxlength')
					}
				}
			}
		%}
	</div>
</div>

<div class="form-row form-group">
	<div class="col-sm-4">
		<label for="consignment">Consignment</label>
	</div>
	<div class="col-sm-3">
		{% include 'util/bootstrap/form/select-simple.twig' with {
				'select': {
					'name': 'consignment',
					'value' : warehouse.consignment,
					'size': 'sm',
					'haskeys': true,
					'options': {'Y': 'Yes', 'N': 'No'}
				}
			}
		%}
	</div>
</div>

