{% include 'code-tables/min/iwhm/js/classes.js.twig' %}
{% include 'code-tables/min/iwhm/notes/js.twig' %}

{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	warehouse              Warehouse
	m_iwhm                 module CodeTablesIwhm
#}

$(function() {
	var form = $('#code-edit-form');
	var modal_ajax = $('#ajax-modal');

	if ($('#whseID').val() == '') {
		$('#pickdetail').val('N');
		$('#C').val('N');
	}

	var server = IwhmRequests.getInstance();
	var alert  = IwhmAlerts.getInstance();
	var inputs = IwhmInputs.getInstance();

/* =============================================================
	Event Functions
============================================================= */
	$("body").on("change", "input[name=custID]", function(e) {
		inputs.cashname.val('');
		var custID = $(this).val();
		custID = custID.toUpperCase();
		server.getCustomer(custID, function(customer) {
			if (customer) {
				inputs.cashname.val(customer.name);
			}
		});
	});

	$("body").on("change", "input[name=whseID]", function(e) {
		var input = $(this);
		var whseID = input.val();

		if (whseID == '') {
			$('.notes_button').prop('disabled', true);
		} else {
			if (input.val() == input.closest('form').data('whseID')) {
				return true;
			}
			server.validateWhseid(whseID, function(exists) {
				if (exists) {
					alert.whseExists(whseID, function(goEdit) {
						if (goEdit) {
							var url = URI('{{ page.url }}');
							url.addQuery('code', whseID);
							window.location.href = url.toString();
							return true;
						} else {
							window.location.href = '{{ page.url }}';
						}
					});
				}
			});
		}
	});

	{% if warehouse.isNew() %}
		$("body").on('change', 'input[name=whseID], input[name=name]', function(e) {

			var option_whse_profit = $('#whse_profit_self');
			var option_whse_supply = $('#whse_supply_self');
			var option_whse_asset  = $('#whse_asset_self');

			option_whse_profit.attr('value', inputs.whseid.val());
			option_whse_profit.text(inputs.whseid.val() + ' - ' + inputs.name.val());

			option_whse_supply.attr('value', inputs.whseid.val());
			option_whse_supply.text(inputs.whseid.val() + ' - ' + inputs.name.val());

			option_whse_asset.attr('value', inputs.whseid.val());
			option_whse_asset.text(inputs.whseid.val() + ' - ' + inputs.name.val());
		});
	{% endif %}

/* =============================================================
	Unsaved Fields Alert
============================================================= */
	origForm = inputs.form.serialize();

	$("body").on("click", "a:not(#code-edit-form .form_button, #ajax-modal a, .swal2-modal a, a.dropdown-item)", function(e) {
		if (inputs.form.serialize() !== origForm) {
			e.preventDefault();
			var a = $(this);
			var href = a.attr('href');

			alert.unsavedChanges(function(save) {
				if (save) {
					inputs.form.find('button[type=submit]').click();
				} else {
					$.get('{{ page.url }}', function() {
						window.location.href = href;
					});
				}
			});
		}
	});

/* =============================================================
	Lookup Modal Functions
============================================================= */
	modal_ajax.on('show.bs.modal', function (event) {
		var button = $(event.relatedTarget); // Button that triggered the modal
		var modal = $(this);
		var url = button.data('lookupurl');
		modal.attr('data-input', button.data('input'));
		modal.find('.modal-title').text(button.attr('title'));
		modal.resizeModal('xl');
		modal.find('.modal-body').loadin(url, function() {

		});
	});

	$("body").on('click', '.customer-link', function(e) {
		e.preventDefault();
		var custid = $(this).data('custid');
		var cust_name = $(this).data('cust_name');
		var modal = $(this).closest('.modal');
		var input = $(modal.attr('data-input'));
		input.val(custid);
		inputs.cashname.val(cust_name);
		modal.modal('hide');
	});

	$("body").on('submit', '#lookup form', function(e) {
		e.preventDefault();
		var form = $(this);
		var query = form.serialize();
		var action = form.attr('action');
		var search = form.find('input[name=q]').val();
		var url = action + '?' + query;
		form.closest('.modal').find('.modal-title').text('Searching for ' + search);
		form.closest('.modal').find('.modal-body').loadin(url, function() {

		});
	});

	$("body").on('click', '.page-link', function(e) {
		e.preventDefault();
		var href = $(this).attr('href');
		modal_ajax.find('.modal-body').load(href);
	});

/* =============================================================
	Validation Functions
============================================================= */
	var validator = inputs.form.validate({
		errorClass: "is-invalid",
		validClass: "is-valid",
		errorPlacement: function(error, element) {
			error.insertAfter(element).addClass('invalid-feedback');
		},
		ignore: ".validate-ignore",
		rules: {
			whseID: {
				required: true,
				maxlength: {{ warehouse.get_max_code_length() }},
			},
			select_pick: 'required',
			select_consign: 'required',
			custID: {
				remote: {
					url: '{{ page.jsonApiUrl('mar/validate/custid/') }}',
					type: "get",
					data: {
						jqv: 'true'
					}
				}
			},
		},
		messages: {
			whseID: "Please review the Warehouse Code value, (Max Characters {{ warehouse.get_max_code_length() }})",
		},
		submitHandler: function(form) {
			var jform = $(form);
			var whseID = jform.find('input[name=whseID]').val();

			if (input.val() == input.closest('form').data('whseID')) {
				form.submit();
			}
			server.validateWhseid(whseID, function(exists) {
				if (exists) {
					alert.whseExists(whseID, function(goEdit) {
						if (goEdit) {
							var url = URI('{{ page.url }}');
							url.addQuery('code', whseID);
							window.location.href = url.toString();
							return true;
						} else {
							window.location.href = '{{ page.url }}';
						}
					});
				} else {
					form.submit();
				}
			});
	});

	$("body").on("focusin", "#code-edit-form input:not(#whseID),#code-edit-form select", function(e) {
		if (inputs.whseid.val() == '') {
			validator.element( "#whseID" );
			inputs.whseid.focus();
		} else {
			$('#code-edit-form .customer_button').prop('disabled', false);
			$('.notes_button').prop('disabled', false);
		}
	});
});
