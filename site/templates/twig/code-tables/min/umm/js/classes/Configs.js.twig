class UmmConfigs {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new UmmConfigs();
		}
		return this.instance;
	}

	constructor() {
		this.fields = {
			code: {
				maxlength: {{ manager.fieldAttribute('code', 'maxlength') }}
			},
			description: {
				maxlength: {{ manager.fieldAttribute('description', 'maxlength') }}
			},
			pricebyweight: {
				default: '{{ manager.fieldAttribute('pricebyweight', 'default') }}'
			},
			stockbycase: {
				default: '{{ manager.fieldAttribute('stockbycase', 'default') }}'
			},
			conversion: {
				default: '{{ manager.fieldAttribute('conversion', 'default') }}',
				precision: '{{ manager.fieldAttribute('conversion', 'precision') }}',
				max: '{{ manager.fieldAttribute('conversion', 'max') }}',
			},
		};
	}
}
