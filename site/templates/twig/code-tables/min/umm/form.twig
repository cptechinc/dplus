{# umm is an instance of UnitofMeasureSale #}
<form action="{{ page.url }}" method="POST" id="code-edit-form">
	<input type="hidden" name="table" value="umm">

	<div class="form-group">
		<label for="code">Code</label>
		<input type="text" name="code" class="form-control" maxlength="{{ max_length_code }}" value="" id="code">
	</div>

	<div class="form-group">
		<label for="description">Description</label>
		<input type="text" name="description" class="form-control" maxlength="20" value="" id="description">
	</div>

	<div class="form-group">
		<label for="conversion">Conversion</label>
		<input type="text" name="conversion" class="form-control" value="" id="conversion">
	</div>

	<div class="form-group">
	    <label for="pricebyweight">Price by Weight?</label>
	    {% include 'util/select.twig' with {'name': 'pricebyweight', 'id': 'pricebyweight', 'options': {'S': 'Standard Weight', 'C': 'Catch Weight', 'N': 'Neither'}} %}
    </div>

	<div class="modal-footer">
		<button type="submit" class="btn btn-success">
			<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>
		<button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
	</div>
</form>
