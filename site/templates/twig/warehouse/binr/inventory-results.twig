{#
	var                    Description / Instance of
	-------------------------------------------------
	config                 module ConfigsBinr
	page                   ProcessWire\Page
	resultscount           number of results
	items                  Invsearch[]|Objectcollection
	resultscount           number of results
	inventory              InvsearchQuery
	warehouse              Warehouse
#}
<div class="form-group">
	<a href="{{ page.url }}" class="btn btn-primary">
		<i class="fa fa-arrow-left" aria-hidden="true"></i> Back
	</a>
</div>
<div class="row">
	<div class="col-sm-8">
		<div class="list-group">
			{% if (resultscount) %}
				{% for item in items %}
					{% include 'warehouse/binr/inventory-results/item.twig' %}
				{% endfor %}
			{% else %}
				<div class="list-group-item">
					<h3 class="list-group-item-heading">No items found for "{{ page.scan }}"</h3>
				</div>
			{% endif %}
		</div>
	</div>
</div>
