{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	item                   Whseitemphysicalcount
	m_receiving            module Receiving or Custom module Receiving
#}
<h3>Add Reference for Item ID</h3>
<form action="{{ page.url }}" method="post" class="form-reset allow-enterkey-submit mb-4" id="ilookup-create-form">
	<input type="hidden" name="action" value="create-ilookup">
	<input type="hidden" name="ponbr" value="{{ m_receiving.getPonbr() }}">
	<input type="hidden" name="scan" value="{{ item.scan }}">

	<div class="form-row">
		<div class="col-sm-6">
			<div class="form-group">
				<label for="reference">Cross Reference ID</label>
				<div class="input-group">
					<input type="text" class="form-control" id="reference" name="reference" value="{{ item.scan }}">
				</div>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="form-group">
				<label for="itemID">Item ID</label>
				<div class="item-div">
					<div class="input-group">
						<span class="input-group-prepend">
							<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#ajax-modal" title="Search for / Choose Item" aria-label="Search for / Choose Item">
								<span class="fa fa-search" aria-hidden="true"></span> <span class="sr-only">Search for / Choose Item</span>
							</button>
						</span>
						<input type="text" class="form-control" name="itemID" id="itemID">
					</div>
					<small class="form-text text-muted description"></small>
				</div>
			</div>
		</div>
	</div>

	<div class="d-flex w-100 justify-content-between">
		<button type="submit" class="btn btn-success btn-lg">
			<i class="fa fa-floppy-o" aria-hidden="true"></i> Submit
		</button>
		<a href="{{ page.receivingUrl(m_receiving.getPonbr()) }}" class="btn-clear btn btn-danger btn-lg">
			<i class="fa fa-window-close" aria-hidden="true"></i> Cancel
		</a>
	</div>
</form>
