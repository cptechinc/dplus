<form action="{{ page.formurl }}" method="post" class="allow-enterkey-submit">
	<input type="hidden" name="action" value="receiving-search">
	<input type="hidden" name="ponbr" value="{{ ponbr }}">
	<input type="hidden" name="page" value="{{ page.fullURL.getUrl() }}">
	<label>Scan Barcode, UPC, Item ID, or  Lot / Serial #</label>
	<div class="form-group">
		<div class="input-group">
			<input class="form-control" name="scan" placeholder="Barcode, UPC, Item ID, Lot / Serial #" type="text">
			<span class="input-group-append">
				<button type="submit" class="btn btn-primary">
					<i class="fa fa-search" aria-hidden="true"></i> Submit
				</button>
			</span>
		</div>
	</div>
</form>
