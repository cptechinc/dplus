<form action="{{ page.formurl }}" method="post" class="allow-enterkey-submit" id="item-search-form">
	<input type="hidden" name="action" value="receiving-search">
	<input type="hidden" name="ponbr" value="{{ ponbr }}">
	<input type="hidden" name="page" value="{{ page.fullURL.getUrl() }}">

	<div class="form-group">
		<label for="binID">Bin ID</label>
		<div class="input-group">
			<input type="text" class="form-control" name="binID" id="binID" placeholder="Bin ID">
		</div>
	</div>
	<div class="form-group">
		<label for="scan">Scan Barcode, UPC, Item ID, or  Lot / Serial #</label>
		<div class="input-group">
			<input type="text" class="form-control" name="scan" id="scan" placeholder="Barcode, UPC, Item ID, Lot / Serial #">
			<span class="input-group-append">
				<button type="submit" class="btn btn-primary">
					<i class="fa fa-search" aria-hidden="true"></i> Submit
				</button>
			</span>
		</div>
	</div>
</form>
