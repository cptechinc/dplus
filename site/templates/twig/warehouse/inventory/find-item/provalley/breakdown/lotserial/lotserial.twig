<div class="list-group-item p-1">
	<div class="row">
		<div class="col-sm-2">

		</div>
		<div class="col-sm-2">
			<strong>Bin:</strong> {{ lotserial.bin }}
		</div>
		<div class="col-sm-2">
			<strong>Weight:</strong> <span class="pull-right">{{ lotserial.qty|number_format(config.decimal_places()) }}</span>
		</div>
		<div class="col">
			<strong>Production Date:</strong> {{ lotserial.expirationdate|convertdate }}
		</div>
		<div class="col-sm-2">
			<strong>Lot #:</strong> {{ lotserial.get_itemidentifier() }}
		</div>
		<div class="col-sm-2">
			<strong>Lot Ref:</strong> {{ lotserial.lotreference }}
		</div>
		<div class="col">
			{% if (not warehouse.validate_bin(lotserial.bin)) %}
				<span class="badge badge-danger pull-right">Invalid Bin</span>
			{% endif %}
		</div>
	</div>
</div>
