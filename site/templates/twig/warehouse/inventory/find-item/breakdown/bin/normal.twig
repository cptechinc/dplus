<div class="list-group-item p-1">
	<div class="row">
		<div class="col-sm-1">
		</div>
		<div class="col-sm-2">
			<strong>Bin:</strong> {{ binitem.bin }}
		</div>
		<div class="col-sm-2">
			<strong>Qty:</strong> <span class="pull-right">{{ inventory.get_qty_itemid(item.itemid, binitem.bin)|number_format(config.decimal_places()) }}</span>
		</div>
		<div class="col-sm-2">
			{% if (not warehouse.validate_bin(binitem.bin)) %}
				<span class="badge badge-danger">Invalid Bin</span>
			{% endif %}
		</div>
	</div>
</div>
