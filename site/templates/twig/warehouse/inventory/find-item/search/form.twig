<form action="{{ input.url() }}" method="GET" class="allow-enterkey-submit">
	<label for="q">Scan Barcode, UPC, Item ID, or  Lot / Serial #</label>

	<div class="form-group">
		<div class="input-group">
			<span class="input-group-prepend">
				<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#ajax-modal" title="Search Items" data-lookupurl="{{ page.search_lookupURL('items') }}" data-input="#q">
					<i class="fa fa-search" aria-hidden="true"></i>
				</button>
			</span>

			<input type="text" class="form-control" name="q" id="q" placeholder="Barcode, UPC, Item ID, Lot / Serial #">

			<span class="input-group-append">
				<button type="submit" class="btn btn-primary">
					<i class="fa fa-arrow-circle-right" aria-hidden="true"></i> Search
				</button>
			</span>
		</div>
	</div>
</form>
