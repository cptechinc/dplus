$(function() {
	var modalAjax = $('#ajax-modal');

/* =============================================================
	Lookup Modal Functions
============================================================= */

	$("body").on('click', '.printer-link', function(e) {
		e.preventDefault();
		var button = $(this);
		var modal  = button.closest('.modal');
		var input  = $(modal.attr('data-input'));
		input.val(button.data('printer') + button.data('pitch'));
		modal.modal('hide');
	});

	$("body").on('click', '.label-link', function(e) {
		e.preventDefault();
		var button = $(this);
		var modal  = button.closest('.modal');
		var input  = $(modal.attr('data-input'));
		input.val(button.data('format'));
		modal.modal('hide');
	});
});
