<div class="form-group">
	<a href="{{ page.url ~ '?ordn=' ~ ordn }}" class="btn btn-primary not-round">
		<i class="fa fa-arrow-left" aria-hidden="true"></i> Return to Packing
	</a>
</div>
<div class="row">
	<div class="col-sm-6">
		<form action="{{ page.formurl }}" id="print-form" method="post">
			<input type="hidden" name="action" value="print-packing">
			<input type="hidden" name="page" value="{{ page.fullURL.getUrl() }}">
			<div>
				<h3>Print Invoice </h3>
				<div class="form-group">
					<div class="form-check">
						<input class="form-check-input printer-check" data-printer="printer-invoice" type="checkbox" value="Y" id="print-invoice" name="print-invoice" {{ labelsession.qty_box > 0 ? 'checked' : ''}}>
						<label class="form-check-label" for="print-invoice">
							Print Invoice?
						</label>
					</div>
				</div>
				<div class="form-group collapse" id="printer-invoice">
					<label for="invoice-printer">Printer</label>
					<div class="printer-input">
						<div class="input-group">
							<input type="text" class="form-control input-sm required" name="invoice-printer" id="invoice-printer" value="{{ labelsession.printer_box }}">
							<div class="input-group-append">
								<button type="button" class="btn btn-dark" data-toggle="modal" data-target="#labelprinters-modal" data-input="invoice-printer">
									<span class="fa fa-search"></span>
								</button>
							</div>
						</div><br>
						<p class="printer-desc">
							{{ labelsession.printer_box is not empty ? printers.get_description(whsesession.whseid, labelsession.printer_box) : '' }}
						</p>
					</div>
				</div>
			</div>
			<div>
				<h3>Packet Ticket</h3>
				<div class="form-group">
					<div class="form-check">
						<input class="form-check-input printer-check" data-printer="printer-packticket" type="checkbox" value="Y" id="print-packticket" name="print-packticket" {{ labelsession.qty_master > 0 ? 'checked' : ''}}>
						<label class="form-check-label" for="print-packticket">
							Print Pack Ticket?
						</label>
					</div>
				</div>
				<div class="form-group collapse" id="printer-packticket">
					<label for="invoice-printer">Printer</label>
					<div class="printer-input">
						<div class="input-group">
							<input type="text" class="form-control input-sm" name="packticket-printer" id="packticket-printer" value="{{ labelsession.printer_master }}">
							<div class="input-group-append">
								<button type="button" class="btn btn-dark" data-toggle="modal" data-target="#labelprinters-modal" data-input="packticket-printer">
									<span class="fa fa-search"></span>
								</button>
							</div>
						</div><br>
						<p class="printer-desc">
							{{ labelsession.printer_master is not empty ? printers.load_desc(whsesession.whseid, labelsession.printer_master) : '' }}
						</p>
					</div>
				</div>
			</div>
			<button type="submit" class="btn btn-lg btn-success">
				<i class="fa fa-print" aria-hidden="true"></i> Print Labels
			</button>
		</form>
	</div>
</div>
