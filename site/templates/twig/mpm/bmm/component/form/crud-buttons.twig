{#
	Only show Edit Actions if the Item is
	1. Locked for editing by the User
	2. Is a new Item
	NOTE: Only show delete if item already exists.
#}
{% if bmm.recordlocker.userHasLocked(bomItem.itemid) or bomItem.isNew() %}
	<button type="submit" class="btn btn-success">
		<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
	</button>

	{% if component.isNew() == false %}
		<a href="{{ page.bomComponentDeleteUrl(bomItem.itemid, component.itemid) }}" class="btn btn-danger delete_button">
			<i class="fa fa-trash" aria-hidden="true"></i> Delete
		</a>
	{% endif %}
{% endif %}
