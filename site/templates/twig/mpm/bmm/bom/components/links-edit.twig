{% if bmm.recordlocker.isLocked(bomItem.itemid) == false or bmm.recordlocker.userHasLocked(bomItem.itemid) %}
	<a href="{{ page.bomComponentUrl(bomItem.itemid, component.itemid) }}" class="btn btn-sm btn-warning">
		<i class="fa fa-pencil" aria-hidden="true"></i> Edit
	</a>
	&nbsp;
	<a href="{{ page.bomComponentDeleteUrl(bomItem.itemid, component.itemid) }}" class="btn btn-sm btn-danger delete_button" data-component="{{ component.itemid }}">
		<i class="fa fa-trash" aria-hidden="true"></i> Delete
	</a>
{% else %}
	<span class="badge badge-secondary">
		<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ bmm.recordlocker.getLockingUser(bomItem.itemid) }}
	</span>
{% endif %}
