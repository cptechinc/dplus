<table class="table table-sm">
	<thead>
		<tr>
			<th>Date</th>
			<th>Amount</th>
		</tr>
	</thead>
	<tbody>
		{% for booking in bookings %}
			<tr>
				<td>
					<a href="{{ page.get_bookings_dayURL(booking.bookingdate|convertdate('m/d/Y')) }}" class="link">
						{{ booking.bookingdate|convertdate('m/d/Y') }}
					</a>
				</td>
				<td>$ {{ booking.amount|currency }}</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
