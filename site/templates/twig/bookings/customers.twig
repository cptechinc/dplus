<table class="table table-sm">
	<thead>
		<tr>
			<th>Date</th>
			<th>Amount</th>
		</tr>
	</thead>
	<tbody>
		{% for customer in customers %}
		<tr>
			<td>
				<a href="{{ page.get_bookings_customerURL(customer.custid) }}" class="link">{{ customer.customer_name() }}</a>
			</td>
			<td>$ {{ customer.amount|currency }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
