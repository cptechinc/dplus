<form action="{{ input.paginateUrl(1) }}" method="POST" id="logm-form">
	<div class="row">
		<div class="col-sm-6">
			{% include 'msa/logm/user/contact/form/key.twig' %}
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
			{% include 'msa/logm/user/contact/form/send-from.twig' %}
		</div>
		<div class="col-sm-2"></div>
		<div class="col-sm-4">
			{% include 'msa/logm/user/contact/form/send-time.twig' %}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-sm-6">
			{% include 'msa/logm/user/contact/form/fax.twig' %}
		</div>
	</div>

	<div class="d-flex justify-content-between align-items-center">
		{% if logm.recordlocker.userHasLocked(duser.id) or duser.isNew() %}
			<button type="submit" name="action" value="update" class="btn btn-success">
				<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
			</button>
			{% if duser.isNew() == false %}
				<button type="submit" name="action" value="delete" class="btn btn-danger delete_button">
					<i class="fa fa-trash-o" aria-hidden="true"></i> Delete
				</button>
			{% endif %}
		{% endif %}

		<a href="{{ page.logmUrl(duser.id) }}" class="btn btn-warning">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</a>
	</div>
</form>
