{% set CONTACTM = logm.getContactM() %}
{% set contact = CONTACTM.user(duser.id) %}

{% set tabindex = 100 %}

<form action="{{ page.userEditContactUrl(duser.id) }}" method="POST" id="logm-contact-form">
	<div class="col-sm-8 px-0">
		<div class="row mb-2">
			<div class="col-sm-3">
				<label for="faxUserid">Login ID</label>
			</div>
			<div class="col-sm-2">
				{% include 'msa/logm/user/contact/form/inputs/id.twig' %}
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-8">
			<legend class="text-center">Send From</legend>
			{% include 'msa/logm/user/contact/form/send-from.twig' %}
		</div>
		<div class="col-sm-4">
			<legend class="text-center">Send Time</legend>
			{% include 'msa/logm/user/contact/form/send-time.twig' %}
		</div>
	</div>

	<hr>

	<div class="row">
		<div class="col-sm-8">
			<div class="row mb-2">
				<div class="col-sm-3">
					<label for="coversheet">Cover Sheet</label>
				</div>
				<div class="col-sm-9">
					{% set tabindex = tabindex + 1 %}
					{% include 'msa/logm/user/contact/form/inputs/coversheet.twig' %}
				</div>
			</div>

			<div class="row mb-2">
				<div class="col-sm-3">
					<label for="faxsubject">Subject</label>
				</div>
				<div class="col-sm-6">
					{% set tabindex = tabindex + 1 %}
					{% include 'msa/logm/user/contact/form/inputs/faxsubject.twig' %}
				</div>
			</div>

			<div class="row mb-2">
				<div class="col-sm-3">
					<label>Notify</label>
				</div>
				<div class="col-sm-6">
					{% set tabindex = tabindex + 1 %}
					{% include 'msa/logm/user/contact/form/inputs/notifysuccess.twig' %}
					{% set tabindex = tabindex + 1 %}
					{% include 'msa/logm/user/contact/form/inputs/notifyfailure.twig' %}
				</div>
			</div>

			<div class="row mb-2">
				<div class="col-sm-3">
					<label for="email">Email</label>
				</div>
				<div class="col-sm-6">
					{% set tabindex = tabindex + 1 %}
					{% include 'msa/logm/user/contact/form/inputs/email.twig' %}
				</div>
			</div>
		</div>
	</div>

	<div class="d-flex justify-content-between align-items-center">
		{% if logm.recordlocker.userHasLocked(duser.id) or duser.isNew() %}
			<button type="submit" name="action" value="update" class="btn btn-success">
				<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
			</button>
		{% endif %}

		<a href="{{ page.userEditUrl(duser.id) }}" class="btn btn-warning">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</a>
	</div>
</form>