<legend>Send From</legend>

<div class="row mb-2">
	<div class="col-sm-3">
		<label for="faxname">Name</label>
	</div>
	<div class="col-sm-9">
		{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'faxname',
					'value': duser.faxname,
					'size': 'sm',
					'attributes': {
						'placeholder': 'Fax Name',
						'aria-label':  'Fax Name',
						'maxlength': logm.fieldAttribute('faxname', 'maxlength')
					}
				}
			}
		%}
	</div>
</div>

<div class="row mb-2">
	<div class="col-sm-3">
		<label for="faxcompany">Company</label>
	</div>
