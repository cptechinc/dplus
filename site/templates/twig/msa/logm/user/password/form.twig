{% set type = type ? type : 'password' %}

<form action="{{ input.url() ~ type }}/" method="POST" class="logm-password-form">
	<input type="hidden" name="action" value="update">
	<input type="hidden" name="id" value="{{ duser.id }}">


	<div class="row mb-3">
		<div class="col-sm-3">
			<label for="password">Password</label>
		</div>
		<div class="col-sm-9">
			{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'password',
					'value': '',
					'size': 'sm',
					'attributes': {
						'placeholder': '',
						'aria-label':  'Password',
						'required': true
					}
				}
			} %}
		</div>
	</div>

	<hr class="mb-3">

	<div class="d-flex justify-content-between align-items-center">
		{% if logm.recordlocker.userHasLocked(duser.id) or duser.isNew() %}
			<button type="submit" name="action" value="update" class="btn btn-success">
				<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
			</button>
		{% endif %}
		<button type="button" class="btn btn-warning" data-dismiss="modal">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</button>
	</div>
</form>
