{% set formatter = module_formatter.get_formatter() %}
{% set fields = module_formatter.get_fields() %}

<table class="table table-striped table-sm">
	<thead>
		<tr>
			<th>Field / Label</th>
			<th>Type</th>
			<th>Line</th>
			<th>Column</th>
			<th>Column Length</th>
			<th>Label Justify</th>
			<th>Data Justify</th>
		</tr>
	</thead>
	<tbody>
		{% for column, definition in fields[section] %}
			{% set name = column|replace({' ': ''}) %}
			{% set columndefinition = formatter[section]['columns']|array_key_exists(column) ? formatter[section]['columns'][column] : module_formatter.get_defaultformattercolumn() %}

			<tr>
				<td class="field">
					<b>{{ column }}</b> <br>
					<input type="text" class="form-control form-control-sm col-label" name="{{ name ~ '-label' }}" value="{{ columndefinition['label'] }}">
				</td>
				<td>
					<small>
						{% if (fields[section][column]['type'] == 'D') %}
							<div class="row">
								<div class="col-auto">
									Date:
								</div>
								<div class="col-auto">
									<select class="form-control form-control-sm" name="{{ name ~ '-date-format' }}">
										{% for key, value in module_formatter.get_datetypes() %}
											<option value="{{ key }}" {{ key == formatter[section]['columns'][column]['date-format'] ? 'selected' : ''}}>
												{{ value ~ ' - ' ~ 'now'|date(key) }}
											</option>
										{% endfor %}
									</select>
								</div>
							</div>
						{% elseif fields[section][column]['type'] == 'I' %}
							Integer
						{% elseif fields[section][column]['type'] == 'C' %}
							Text
						{% elseif fields[section][column]['type'] == 'N' %}
							<div class="form-row">
								<div class="col">
									Decimal:
								</div>
								<div class="col">
									Before &nbsp;
									<input type="text" class="form-control form-control-sm text-right before-decimal" name="{{ name ~ '-before-decimal' }}" value="{{ columndefinition['before-decimal'] }}">
								</div>
								<div class="col">
									After &nbsp;
									<input type="text" class="form-control form-control-sm text-right after-decimal" name="{{ name ~ '-after-decimal' }}" value="{{ columndefinition['after-decimal'] }}">
								</div>
							</div>
						{% endif %}
					</small>
				</td>
				<td>
					<input type="text" class="form-control form-control-sm text-right qty-sm {{ section }}-line" name="{{ name ~ '-line' }}" value="{{ columndefinition['line'] }}">
				</td>
				<td>
					<input type="text" class="form-control form-control-sm text-right column" name="{{ name ~ '-column' }}" value="{{ columndefinition['column'] }}">
				</td>
				<td>
					<input type="text" class="form-control form-control-sm text-right column-length" name="{{ name ~ '-length' }}" value="{{ columndefinition['col-length'] }}">
				</td>
				<td>
					{% include 'util/select.twig' with {'name': name ~ '-label-justify', 'id': name ~ '-label-justify', 'selectedvalue': columndefinition['label-justify'] ? columndefinition['label-justify'] : 'l', 'options': module_formatter.get_justifyclasses() } %}
				</td>
				<td>
					{% include 'util/select.twig' with {'name': name ~ '-data-justify', 'id': name ~ '-data-justify', 'selectedvalue': columndefinition['data-justify'] ? columndefinition['data-justify'] : 'l', 'options': module_formatter.get_justifyclasses() } %}
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
