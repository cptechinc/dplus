<div id="documents">
	<h3 class="font-weight-bold text-secondary">Documents <i class="fa fa-file-text" aria-hidden="true"></i></h3>
	<table class="table table-striped">
		<tr class="bg-dark text-white">
			<th>Folder</th>
			<th>Title</th>
			<th>Filename</th>
			<th>Date</th>
			<th>Time</th>
		</tr>
		{% if documents.count() %}
			{% for document in documents %}
				<tr id="doc-{{ document.filename }}">
					<td>{{ document.folderDescription() }}</td>
					<td>{{ document.title }}</td>
					<td>
						<a href="{{ page.documentUrl(ordn, document.folder, document.filename) }}" class="link" target="_blank">
							{{ document.filename }}
						</a>
					</td>
					<td>{{ document.date|convertdate("m/d/Y") }}</td>
					<td>{{ (document.date ~ document.time[:4])|convertdate("h:i A") }}</td>
				</tr>
			{% endfor %}
		{% else %}
			<td colspan="5" class="bg-warning text-white text-center">No Documents Found for Sales Order # {{ input.get.text('ordn') }}</td>
		{% endif %}
	</table>
</div>
