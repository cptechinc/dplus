<hr>

<form id="edit-sales-order-form" action="{{ page.url }}" method="post">
	<input type="hidden" name="action" value="update-header">
	<input type="hidden" name="ordn" value="{{ order.ordernumber }}">

	<div class="row">
		<div class="col-sm-6">
			<h3 class="font-weight-bold text-secondary mt-4">Edit Shipping Information</h3>
			{% include 'sales-orders/sales-order/edit/form-shipto.twig' %}

			<h3 class="font-weight-bold text-secondary mt-4">Edit Contact Information</h3>
			{% include 'sales-orders/sales-order/edit/form-contact.twig' %}
		</div>
		<div class="col-sm-6">
			<h3 class="font-weight-bold text-secondary mt-4">Edit Sales Order Information</h3>
			{% include 'sales-orders/sales-order/edit/form-sales-order.twig' %}
		</div>
	</div>

	<div class="d-flex w-100 justify-content-between mt-4">
		<button type="submit" class="btn btn-success">
			 <i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>
		
		<button type="submit" class="btn btn-info" name="exit" value="unlock-order">
			 <i class="fa fa-floppy-o" aria-hidden="true"></i> Save and <i class="fa fa-sign-out" aria-hidden="true"></i> Exit
		</button>
	</div>
</form>
