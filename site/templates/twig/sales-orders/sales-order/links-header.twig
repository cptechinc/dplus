<div class="mb-3">
	<div class="row">
		<div class="col-sm-7">
			&nbsp;
			<a href="{{ list == 'history'? page.orderHistoryListUrl(order.ordernumber) : page.orderListUrl(order.ordernumber) }}" class="btn btn-light">
				<i class="fa fa-list" aria-hidden="true"></i> Sales {{ list|capitalize }} List
			</a>
			&nbsp;
			<a href="{{ page.ciUrl(order.custid) }}" class="btn btn-primary">
				<i class="fa fa-user" aria-hidden="true"></i> {{ order.customer.name }}
			</a>
			&nbsp;
			{% if order.isInvoiced() or order.isVerified() %}
				<a href="{{ page.printInvoiceUrl(order.ordernumber) }}" class="btn btn-primary" aria-label="Print Invoice" title="Print Invoice">
					<i class="fa fa-print" aria-hidden="true"></i> Print Invoice
				</a>
			{% else %}
				<button class="btn btn-primary" disabled>
					<i class="fa fa-print" aria-hidden="true"></i> Print Invoice
				</button>
			{% endif %}
		</div>
		<div class="col-sm-5 text-right">
			{% if order.has_tracking() %}
				<a href="#tracking" title="View Tracking" aria-label="View Tracking">
					<i class="fa fa-truck fa-2x" aria-hidden="true"></i>
				</a>
			{% else %}
				<span title="View Tracking">
					<i class="fa fa-truck fa-2x text-light" aria-hidden="true"></i>
					<span class="sr-only">View Tracking</span>
				</span>
			{% endif %}

			{% if docm.countDocuments(order.ordernumber) %}
				<a href="#documents" title="View Documents" aria-label="View Documents">
					<i class="fa fa-file-text fa-2x" aria-hidden="true"></i>
				</a>
			{% else %}
				<span title="View Documents" aria-label="View Documents">
					<i class="fa fa-file-text fa-2x text-light" aria-hidden="true"></i>
				</span>
			{% endif %}
			<a href="#notes" class="{{ order.count_notes() ? 'text-success' : 'text-muted'}}" title="View Notes" aria-label="View Notes">
				<i class="fa fa-sticky-note-o fa-2x" aria-hidden="true"></i>
			</a>
		</div>
	</div>
</div>
