<div class="mb-4">
	{% include 'util/alert.twig' with {'type': 'info','iconclass': 'fa fa-info-circle fa-2x', 'title': 'This Order has been Invoiced', 'message': 'Sales Order #' ~ order.ordernumber ~ ' has been invoiced.'} %}
</div>

{% include 'sales-orders/sales-order/links-header.twig' with {'list': 'history'} %}

{% include 'sales-orders/sales-history/sales-history-header.twig' %}

<div class="row mt-3">
	<div class="col-sm-6">
		<h3 class="font-weight-bold text-danger">Order Items</h3>
	</div>
	<div class="col-sm-6 text-right">
		<button class="btn btn-info" type="button" data-toggle="collapse" data-target=".lotserial" aria-expanded="false" aria-controls="lotserial">
			Show Lot/Serials
		</button>
	</div>
</div>

{% if loader.exists('sales-orders/sales-history/' ~ company ~ '/items.twig') %}
	{% include 'sales-orders/sales-history/' ~ company ~ '/items.twig' %}
{% else %}
	{% include 'sales-orders/sales-history/items.twig' %}
{% endif %}
