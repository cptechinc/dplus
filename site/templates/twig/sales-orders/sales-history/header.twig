<div class="row">
	<div class="col-sm-4">
		<legend class="font-weight-bold text-danger">
			Billing
			<a href="{{ page.ci_customerURL(order.custid) }}" class="text-secondary link" target="_blank" aria-label="View Customer in CI" title="View Customer in CI">
				({{ order.custid }})
			</a>
		</legend>
		<address>
			<a href="{{ page.ci_customerURL(order.custid) }}" class="link" target="_blank" aria-label="View Customer in CI" title="View Customer in CI">
				{{ order.customer.name }}
			</a>
			<br>
			{{ customer.address1 }} <br>
			{% if customer.address2 %}
				{{ customer.address2 }} <br>
			{% endif %}
			{{ customer.city ~ ', ' ~ customer.state ~ ' ' ~ customer.zip}}
		</address>

		<legend class="font-weight-bold text-danger">
			Shipping
			<a href="{{ page.ci_customershiptoURL(order.custid, order.shiptoid) }}" class="text-secondary link" target="_blank" aria-label="View Customer Shipto in CI" title="View Customer Shipto in CI">
				({{ order.shiptoid }})
			</a>
		</legend>
		<address>
			<a href="{{ page.ci_customershiptoURL(order.custid, order.shiptoid) }}" class="link" target="_blank" aria-label="View Customer Shipto in CI" title="View Customer Shipto in CI">
				{{ order.shipto_name }}
			</a>
			<br>
			{{ order.shipto_address1 }} <br>
			{% if (order.shipaddress2) %}
				{{ order.shipaddress2 }} <br>
			{% endif %}
			{{ order.shipto_city ~ ', ' ~ order.shipto_state ~ ' ' ~ order.shipto_zip}}
		</address>

		<legend class="font-weight-bold text-secondary">Contact</legend>
		<div class="row">
			<div class="col-sm-5">Contact:</div>
			<div class="col-sm-7 text-right">{{ order.contact }}</div>
		</div>
		<div class="row">
			<div class="col-sm-5">Phone:</div>
			<div class="col-sm-7 text-right">
				<a href="tel:{{ order.phone }}" class="link">{{ order.phone|phone_us }}</a>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-5">Fax:</div>
			<div class="col-sm-7 text-right">
				<a href="tel:{{ order.fax }}" class="link">{{ order.fax|phone_us }}</a>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-5">Email:</div>
			<div class="col-sm-7">
				<a href="mailto:{{ order.email }}" class="link">{{ order.email }}</a>
			</div>
		</div>
	</div>
	<div class="col-sm-8">
		<legend class="font-weight-bold text-danger text-center">Order Summary</legend>

		<div class="row">
			<div class="col-sm-6">
				<div class="row">
					<div class="col-sm-7">Items on Order</div>
					<div class="col-sm-5 text-right">{{ order.count_items() }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Invoice Date:</div>
					<div class="col-sm-5 text-right">{{ order.date_invoiced|convertdate }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Order Date:</div>
					<div class="col-sm-5 text-right">{{ order.date_ordered|convertdate }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Subtotal:</div>
					<div class="col-sm-5 text-right">$ {{ order.subtotal_tax|number_format(config.decimal_places_price) }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Shipping:</div>
					<div class="col-sm-5 text-right">$ {{ order.total_freight|currency }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Tax:</div>
					<div class="col-sm-5 text-right">$ {{ order.total_tax|number_format(config.decimal_places_price) }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Total:</div>
					<div class="col-sm-5 text-right">$ {{ order.total_total|number_format(config.decimal_places_price) }}</div>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="row">
					<div class="col-sm-7">Status</div>
					<div class="col-sm-5 text-right">{{ order.status()|capitalize }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Cust PO</div>
					<div class="col-sm-5 text-right">{{ order.custpo }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Release #</div>
					<div class="col-sm-5 text-right">{{ order.releasenumber }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Shipvia</div>
					<div class="col-sm-5 text-right">{{ order.shipvia }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Terms Code</div>
					<div class="col-sm-5 text-right">{{ order.termscode }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Ship Complete</div>
					<div class="col-sm-5 text-right">{{ order.is_shipcomplete|yesorno|capitalize }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Salesperson 1:</div>
					<div class="col-sm-5 text-right">{{ order.salesperson_1 }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Salesperson 2:</div>
					<div class="col-sm-5 text-right">{{ order.salesperson_2 }}</div>
				</div>
				<div class="row">
					<div class="col-sm-7">Salesperson 3:</div>
					<div class="col-sm-5 text-right">{{ order.salesperson_3 }}</div>
				</div>
			</div>
		</div>
	</div>
</div>
