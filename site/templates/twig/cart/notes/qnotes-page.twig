<div class="mb-3">
	<a href="{{ page.parent.url }}" class="btn btn-primary">
		<i class="fa fa-arrow-left" aria-hidden="true"></i> Go back to Cart
	</a>
</div>

<div class="mb-4">
	<div class="row mb-1">
		<div class="col">
			<h4>Header Notes</h4>
		</div>
		<div class="col">
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-note-modal" data-linenbr="0" data-sequence="0">
				<i class="fa fa-plus" aria-hidden="true"></i> Add Note
			</button>
		</div>
	</div>
	{% include 'cart/notes/qnotes-list.twig' with {'notes': cart.get_notes(0) } %}
</div>

{% for item in items %}
	<div class="row mb-1">
		<div class="col">
			<h4>Line Number {{ item.linenbr ~ ': ' ~ item.itemid }}</h4>
		</div>
		<div class="col">
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-note-modal" data-linenbr="{{ item.linenbr }}" data-sequence="0">
				<i class="fa fa-plus" aria-hidden="true"></i> Add Note
			</button>
		</div>
	</div>
	<div class="mb-3">
		{% include 'cart/notes/qnotes-list.twig' with {'notes': cart.get_notes(item.linenbr) } %}
	</div>
{% endfor %}
