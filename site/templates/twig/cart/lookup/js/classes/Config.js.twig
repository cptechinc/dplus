{% set customer = cart.getCustomer() %}

class LookupConfig {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new LookupConfig();
		}
		return this.instance;
	}

	constructor() {
		this.custid = '{{ cart.getCustid() }}';
		this.shiptoid = '{{ cart.getShiptoid() }}';
		this.addToPrice = 0.00,
		
		this.fields = {
			qty: {
				precision: {{  cart.decimalPlacesQty() }}
			},
			price: {
				precision: {{  cart.decimalPlacesPrice() }}
			},
			totalprice: {
				precision: 2
			}
		}
	}

}
