{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
#}

<form action="{{ page.url }}" class="p-3 allow-enterkey-submit" id="add-item-form">
	<input type="hidden" name="action" value="add-item">

	<div class="form-row">
		<div class="col-sm-3 mb-2">
			<div class="form-group">
				<label>Item</label>
				{% include 'cart/lookup/form/input-itemid.twig' %}
			</div>
			<div class="mt-1">
				<ul class="list-unstyled">
					<li>
						<small class="desc1"></small>
					</li>
					<li>
						<small class="desc2"></small>
					</li>
					<li>
						<small class="weight-desc collapse">Weight: <span class="item-weight"></span></small>
					</li>
				</ul>
			</div>
		</div>
		<div class="col-sm-1 col-6 mb-2 text-right">
			<div class="form-group">
				<label>Qty</label>
				{% include 'util/bootstrap/form/input.twig' with {
						'input': {
							'name': 'qty',
							'id': 'addqty',
							'type': 'number',
							'value': '',
							'addclasses': [
								'text-right',
							]
						}
					}
				%}
				<small class="text-muted" id="qty-weight"></small>
			</div>
		</div>
		<div class="col-6 col-sm-1 mb-2 text-right">
			<label>Weight</label>
			<div class="form-group">
				{% include 'util/bootstrap/form/input.twig' with {
						'input': {
							'name': 'weight',
							'id': 'addweight',
							'type': 'number',
							'value': '',
							'addclasses': [
								'text-right',
								'ignore'
							],
							'attributes': {
								'disabled': false
							}
						}
					}
				%}
			</div>
		</div>
		<div class="col-sm-2 text-right">
			<label>Price</label>
			<div class="form-group">
				{% include 'util/bootstrap/form/input-group.twig' with {
						'inputgroup': {
							'type': 'prepend',
							'input': {
								'name': 'price',
								'id': 'addprice',
								'addclasses': [
									'text-right',
									'qty-input',
									'ignore'
								],
								'attributes': {}
							},
							'span': {
								'colorclass': 'bg-light',
								'text': '$'
							}
						}
					}
				%}
			</div>
		</div>
		<div class="col-sm-2 text-right">
			<label>&nbsp;</label><br>
			<button type="submit" class="btn btn-primary">
				<i class="fa fa-plus" aria-hidden="true"></i> Add
			</button>
			&nbsp; &nbsp;
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#pricingModal" disabled>
				<i class="fa fa-table" aria-hidden="true"></i> Pricing
			</button>
		</div>
		<div class="col-sm-5"></div>
	</div>
</form>
