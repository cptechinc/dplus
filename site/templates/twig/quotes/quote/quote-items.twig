{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	config                 ProcessWire\Config
	config.so              ConfigSalesOrder
	quote                  Quote
	order.items            QuoteDetail[]|ObjectCollection
#}
<table class="table table-striped table-borderless">
	<thead class="bg-dark text-white font-weight-bold">
		<tr>
			<th>Item ID</th>
			<th class="text-right">Qty</th>
			<th class="text-right">Price</th>
			<th class="text-right">Total Price</th>
			<th class="text-right">Notes</th>
		</tr>
	</thead>
	<tbody>
		{% for detail in quote.items %}
			<tr>
				<td>
					<a href="{{ page.ii_itemURL(detail.itemid)}}" class="link" target="_blank" aria-label="View item in II" title="View item in II">
						{{ detail.itemid }}
					</a>
					</br>
					<small>{{ detail.description }}</small>
				</td>
				<td class="text-right">{{ detail.qty|number_format(config.so.decimal_places) }}</td>
				<td class="text-right">$ {{ detail.price|currency }}</td>
				<td class="text-right">$ {{ detail.price_total|currency }}</td>
				<td class="text-right">
					<a href="{{ page.view_notesURL(quote.quotenumber, detail.linenumber) }}" class="h4 {{ detail.count_notes() ? 'text-success' : 'text-muted'}}">
						<i class="fa fa-sticky-note" aria-hidden="true"></i>
					</a>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
