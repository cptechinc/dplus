<div class="modal fade" id="add-note-modal" tabindex="-1" role="dialog" aria-labelledby="add-note-modal-label" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="add-note-modal-label">Add Quote Note to </h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form action="" method="post" id="add-qnote-form">
					<input type="hidden" name="action" value="add-note">
					<input type="hidden" name="qnbr" value="{{ qnbr }}">
					<input type="hidden" name="linenbr" value="">
					<input type="hidden" name="sequence" value="">

					<div class="row mb-3">
						<div class="col">
							<div class="custom-control custom-checkbox">
								<input type="checkbox" name="check_quote" class="custom-control-input" id="check-quote" value="Y">
								<label class="custom-control-label" for="check-quote">Quote</label>
							</div>
						</div>
						<div class="col">
							<div class="custom-control custom-checkbox">
								<input type="checkbox" name="check_pick" class="custom-control-input" id="check-pick-ticket" value="Y">
								<label class="custom-control-label" for="check-pick-ticket">Pick Ticket</label>
							</div>
						</div>
						<div class="col">
							<div class="custom-control custom-checkbox">
								<input type="checkbox" name="check_pack" class="custom-control-input" id="check-pack-ticket" value="Y">
								<label class="custom-control-label" for="check-pack-ticket">Pack Ticket</label>
							</div>
						</div>
						<div class="col">
							<div class="custom-control custom-checkbox">
								<input type="checkbox" name="check_invoice" class="custom-control-input" id="check-invoice" value="Y">
								<label class="custom-control-label" for="check-invoice">Invoice Ticket</label>
							</div>
						</div>
						<div class="col">
							<div class="custom-control custom-checkbox">
								<input type="checkbox" name="check_acknowledgement" class="custom-control-input" id="check-acknowledgement" value="Y">
								<label class="custom-control-label" for="check-acknowledgement">Acknowledgment</label>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="q-notes-text">Notes</label>
						<textarea name="notes" class="form-control" id="q-notes-text"></textarea>
					</div>
					<button type="submit" class="btn btn-success">
						<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
					</button>
				</form>
			</div>
		</div>
	</div>
</div>
