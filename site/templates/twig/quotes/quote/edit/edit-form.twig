<hr>

<form id="edit-quote-form" action="{{ page.wire('input').url() }}">
	<input type="hidden" name="action" value="edit-quote">
	<input type="hidden" name="qnbr" value="{{ quote.quotenumber }}">

	<div class="row">
		<div class="col-sm-6">
			<h3 class="font-weight-bold text-secondary mt-4">Edit Shipping Information</h3>
			{% include 'quotes/quote/edit/form-shipto.twig' %}

			<h3 class="font-weight-bold text-secondary mt-4">Edit Contact Information</h3>
			{% include 'quotes/quote/edit/form-contact.twig' %}
		</div>
		<div class="col-sm-6">
			<h3 class="font-weight-bold text-secondary mt-4">Edit Quote Information</h3>
			{% include 'quotes/quote/edit/form-quote.twig' %}
		</div>
	</div>

	<div class="d-flex w-100 justify-content-between mt-4">
		<button type="submit" class="btn btn-success">
			 <i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>
		<button type="submit" class="btn btn-info" name="exit" value="unlock-quote">
			 <i class="fa fa-floppy-o" aria-hidden="true"></i> Save and <i class="fa fa-sign-out" aria-hidden="true"></i> Exit
		</button>
	</div>
</form>
