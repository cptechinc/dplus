var shiptos = {{ varshiptos|json_encode|raw }};



$(function() {
	var form = $('#edit-quote-form');

	$("body").on("change", 'select[name=shiptoid]', function () {
		var select   = $(this);
		var shiptoid = select.val();
		var custID   = form.find('input[name=custID]').val();

		var ajax = new AjaxRequest('{{ page.jsonApiUrl('mar/customer/shipto/') }}');
		ajax.setData({custID: custID, shiptoID: shiptoid});
		ajax.request(function(shipto) {
			if (shipto === false) {
				shipto = {
					name: '',
					address: {
						address1: '',
						address2: '',
						city: '',
						state: '',
						zip: '',
					}
				}
			}
			var form = $('#edit-quote-form');
			form.find('input[name=shipto_name]').val(shipto.name);
			form.find('input[name=shipto_address]').val(shipto.address.address1);
			form.find('input[name=shipto_address2]').val(shipto.address.address2);
			form.find('input[name=shipto_city]').val(shipto.address.city);
			form.find('select[name=shipto_state]').val(shipto.address.state);
			form.find('input[name=shipto_zip]').val(shipto.address.zip);
		});
	});
});
