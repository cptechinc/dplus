{#
	var                    Description / Instance of
	-------------------------------------------------
	quote                  Quotehed
	eqo                    modules\Eqo
#}
{% set configSo = eqo.getConfigSo() %}
<form action="{{ input.url() }}" class="pt-3 px-3 detail-line-form allow-enterkey-submit" method="post">
	<input type="hidden" name="action" value="update-item-quick">
	<input type="hidden" name="qnbr" value="{{ quote.quotenumber }}">
	<input type="hidden" name="linenbr" value="{{ detail.linenbr }}">
	<div class="form-row">
		<div class="col-sm-4">
			{{ detail.itemid }}<br>
			<small>{{ detail.description }}</small>
		</div>
		<div class="col-sm-1 text-right">
			<input type="text" class="form-control form-control-sm text-right underlined" size="4" name="qty" value="{{ detail.qty|number_format() }}">
		</div>
		<div class="col-sm-2 text-right">
			<div class="input-group input-group-sm">
				<div class="input-group-prepend">
					<span class="input-group-text">$</span>
				</div>
				<input type="text" name="price" id="price" class="form-control form-control-sm text-right qty-input" value="{{ detail.price|number_format(3) }}" data-value="{{ detail.price|number_format(3) }}">
			</div>
		</div>
		<div class="col-sm-1 text-right">
			<p class="form-control-plaintext">$ {{ detail.price_total|number_format(3) }}</p>
		</div>
		<div class="col-sm-2 text-right">
			<div class="pull-right">
				{% include 'util/date-picker.twig' with {'name': 'date_requested', 'id': 'date_requested', 'value': detail.date_requested} %}
			</div>
		</div>
		<div class="col-sm-2 text-right">
			<button type="submit" class="btn btn-warning" aria-label="Save Line" title="Save Line">
				<i class="fa fa-floppy-o" aria-hidden="true"></i>
			</button>
			<a href="{{ page.deleteItemUrl(quote.quotenumber, detail.linenbr) }}" class="btn btn-danger exclude" aria-label="Remove Line" title="Remove Line">
				<i class="fa fa-trash-o" aria-hidden="true"></i>
			</a>
		</div>
	</div>
</form>
