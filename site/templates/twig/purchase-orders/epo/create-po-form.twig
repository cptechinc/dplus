{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	vendor                 Vendor
#}
<form action="{{ page.url }}" method="post">
	<input type="hidden" name="action" value="create-po">
	<input type="hidden" name="ponbr" value="new">
	<h3>Confirm your selection: </h3>
	
	<div class="form-group">
		<label for="vendorID">Vendor ID</label>
		<input type="text" name="vendorID" id="vendorID" class="form-control form-control-sm" value="{{ vendor.id }}" aria-describedby="vendorname">
		 <small id="vendorname" class="form-text text-muted">{{ vendor.name }}</small>
	</div>

	<div class="d-flex justify-content-between align-items-center">
		<button type="submit" class="btn btn-success">
			<i class="fa fa-plus" aria-hidden="true"></i> Create PO
		</button>
		<a href="{{ page.url }}" class="btn btn-warning">
			<i class="fa fa-times" aria-hidden="true"></i> Cancel
		</a>
	</div>
</form>
