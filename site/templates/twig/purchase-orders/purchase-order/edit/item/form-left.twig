<div class="row form-group">
	<div class="col-sm-4">
		<label for="itemID">Item ID</label>
	</div>
	<div class="col-sm-8">
		<div class="input-group input-group-sm">
			<span class="input-group-prepend">
				<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#ajax-modal" title="Search for / Choose Item" aria-label="Search for / Choose Item" data-search="item">
					<span class="fa fa-search" aria-hidden="true"></span> <span class="sr-only">Search for / Choose Item</span>
				</button>
			</span>
			<input type="text" class="form-control" name="itemID" id="itemID">
		</div>
	</div>
</div>
<div class="row form-group">
	<div class="col-sm-4">
		<label for="description">Description</label>
	</div>
	<div class="col-sm-8">
		<input type="text" class="form-control form-control-sm" name="description" id="description">
	</div>
</div>
<div class="row form-group">
	<div class="col-sm-4">
		<label for="vendoritemID">Vendor Item ID</label>
	</div>
	<div class="col-sm-8">
		<div class="input-group input-group-sm">
			<span class="input-group-prepend">
				<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#ajax-modal" title="Search for / Choose Item" aria-label="Search for / Choose Item" data-search="item">
					<span class="fa fa-search" aria-hidden="true"></span> <span class="sr-only">Search for / Choose Item</span>
				</button>
			</span>
			<input type="text" class="form-control" name="vendoritemID" id="vendoritemID">
		</div>
	</div>
</div>
<div class="row form-group">
	<div class="col-sm-4">
		<label for="whse">Warehouse</label>
	</div>
	<div class="col-sm-8">
		<select class="form-control form-control-sm" name="whse" id="whse">
			{% for warehouse in epo.get_warehouses() %}
				<option value="{{ warehouse.id }}">{{ warehouse.id }} - {{ warehouse.name }}</option>
			{% endfor %}
		</select>
	</div>
</div>
<div class="row form-group">
	<div class="col-sm-4">
		<label for="whse">Special Order</label>
	</div>
	<div class="col-sm-8">
		<select class="form-control form-control-sm" name="whse" id="whse">

		</select>
	</div>
</div>
