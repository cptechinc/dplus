<form action="{{ page.url }}" method="post" id="edit-item-form">
	<input type="hidden" name="ponbr" value="{{ po.ponbr }}">
	<input type="hidden" name="vendorID" value="{{ po.vendorid }}">
	<input type="hidden" name="linenbr" value="">

	<div class="row mb-4">
		<div class="col-sm-6">
			{% include 'purchase-orders/purchase-order/edit/item/form-left.twig' %}
		</div>
		<div class="col-sm-6">
			{% include 'purchase-orders/purchase-order/edit/item/form-right.twig' %}
		</div>
	</div>
	<div class="d-flex justify-content-between align-items-center">
		<button type="submit" name="action" value="update-item" class="btn btn-success">
			<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
		</button>

		<button type="submit" name="action" value="delete-item" class="btn btn-danger">
			<i class="fa fa-trash" aria-hidden="true"></i> Delete
		</button>

		<button type="button" class="btn btn-warning" data-dismiss="modal">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</button>
	</div>
</form>
