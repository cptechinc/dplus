{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	q                      string search Query
	results                Pricing[]|ObjectCollection
#}
<div class="pt-3 mb-4" id="results">
	<h4>Showing Results for <span class="highlight">{{ q }}</span></h4>
	<div class="list-group">
		<div class="list-group-item bg-dark text-white font-weight-bold">
			<div class="row">
				<div class="col-sm-6">
					Item ID / Description
				</div>
				<div class="col-sm-2">
					Unit of Measure
				</div>
				<div class="col-sm-2">
					Cost
				</div>
				<div class="col-sm-2">
					Inventory
				</div>
			</div>
		</div>
		{% for item in results %}
			<a href="#" class="list-group-item list-group-item-action item-lookup-result" data-itemid="{{ item.itemid }}">
				<div class="row">
					<div class="col-sm-6">
						{{ item.itemid }} <br>
						<small>{{ item.name1|raw }}</small>
					</div>
					<div class="col-sm-2">
						{{ item.unitofmeasure }}
					</div>
					<div class="col-sm-2">
						{{ item.cost|currency }}
					</div>
					<div class="col-sm-2">
						{{ item.qty|currency }}
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
</div>
