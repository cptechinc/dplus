<h4 class="font-weight-bold text-secondary">Pay-To Contact</h4>
<div class="form-group">
	<div class="row">
		<div class="col-sm-4">
			<label for="contact">Contact</label>
		</div>
		<div class="col-sm-8">
			<input type="text" class="form-control form-control-sm" name="contact" id="contact" value="{{ po.contact }}">
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-sm-4">
			<label for="phone">Phone</label>
		</div>
		<div class="col-sm-8">
			<input type="text" class="form-control-plaintext form-control-sm" name="phone" id="phone" value="{{ po.phone|phone_us_x }}" readonly>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-sm-4">
			<label for="fax">Fax</label>
		</div>
		<div class="col-sm-8">
			<input type="text" class="form-control-plaintext form-control-sm" name="fax" id="fax" value="{{ po.fax|phone_us }}" readonly>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-sm-4">
			<label for="email">Email</label>
		</div>
		<div class="col-sm-8">
			<input type="email" class="form-control-plaintext form-control-sm " id="email" value="{{ po.email }}" readonly>
		</div>
	</div>
</div>
