{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	po                     EditPoHead
	epo                    PurchaseOrderEdit
#}
<h4 class="font-weight-bold text-secondary">Contact</h4>
<div class="form-group">
	<div class="row">
		<div class="col-sm-4">
			<label for="contact">Contact</label>
		</div>
		<div class="col-sm-8">
			{% include 'util/bootstrap/form/input-group.twig' with {
					'inputgroup': {
						'type': 'prepend',
						'size': 'sm',
						'input': {
							'name': 'contact',
							'value': po.contact,
							'attributes': {
								'placeholder': 'Contact',
								'aria-label':  'Contact',
							}
						},
						'button': {
							'colorclass': 'btn-secondary',
							'text': 'fa fa-search'|icon,
							'attributes': {
								'title': 'Search Vendor Contacts',
								'data-toggle': 'modal',
								'data-target': '#ajax-modal',
								'data-lookupurl': page.search_lookupURL('vendor/contacts/', {'vendorID': po.vendorid}),
								'data-search': 'vendor-contacts'
							}
						}
					}
				}
			%}
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-sm-4">
			<label for="phone">Phone</label>
		</div>
		<div class="col-sm-8">
			<input type="text" class="form-control-plaintext form-control-sm" name="phone" id="phone" value="{{ po.phone|phone_us_x }}" readonly>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-sm-4">
			<label for="fax">Fax</label>
		</div>
		<div class="col-sm-8">
			<input type="text" class="form-control-plaintext form-control-sm" name="fax" id="fax" value="{{ po.fax|phone_us }}" readonly>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-sm-4">
			<label for="email">Email</label>
		</div>
		<div class="col-sm-8">
			<input type="email" class="form-control-plaintext form-control-sm " id="email" value="{{ po.email }}" readonly>
		</div>
	</div>
</div>
