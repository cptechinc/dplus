{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	epo                    module PurchaseOrderEdit
	epo.configs            module PurchaseOrderEditConfigs
	epo.configs.po         ConfigPo
#}
$(function() {
	var modal_ajax    = $('#ajax-modal');
	var scrollto = '{{ session.getFor('epo', 'scrollto') }}';

	if (scrollto.length && $('#'+scrollto).length) {
		$('html, body').animate({scrollTop: $('#'+scrollto).offset().top,},700,'linear');
	}

/* =============================================================
	Lookup Modal Functions
============================================================= */
	modal_ajax.on('show.bs.modal', function (event) {
		var button = $(event.relatedTarget); // Button that triggered the modal
		var modal = $(this);
		var url = '';

		modal.attr('data-input', button.data('input'));

		switch (button.data('search')) {
			case 'item':
				url = '{{ page.search_itemsURL() }}';
				break;
			case 'vendoritem':
				uri = URI('{{ page.search_vxmURL() }}');
				uri.setQuery('vendorID', $('input#vendorID').val());
				url = uri.toString();
				break;
			case 'shipfrom':
				uri = URI('{{ page.search_shipfromURL() }}');
				uri.setQuery('vendorID', $('input#vendorID').val());
				url = uri.toString();
				break;
			case 'country':
				url = '{{ page.search_countriesURL() }}';
				break;
			case 'vendor':
				url = '{{ page.search_lookupURL('vendors') }}';
				break;
			case 'documents':
				url = '{{ page.po_documentsURL(page.ponbr) }}';
				break;
			case 'vendor-contacts':
				uri = URI(button.data('lookupurl'));
				uri.setQuery('vendorID', $('input#vendorID').val());
				url = uri.toString();
				break;
			default:
				url = button.data('lookupurl');
				break;
		}

		modal.find('.modal-title').text(button.attr('title'));
		modal.resizeModal('xl');
		modal.find('.modal-body').loadin(url, function() {});
	});

	$("body").on('submit', '#ajax-modal form', function(e) {
		e.preventDefault();
		var form = $(this);
		var query = form.serialize();
		var action = form.attr('action');
		var search = form.find('input[name=q]').val();
		var url = action + '?' + query;
		form.closest('.modal').find('.modal-title').text('Searching for ' + search);
		form.closest('.modal').find('.modal-body').loadin(url, function() {});
	});

	$("body").on('click', '#ajax-modal .paginator-link', function(e) {
		e.preventDefault();
		var href = $(this).attr('href');
		modal_ajax.find('.modal-body').load(href);
	});
});
