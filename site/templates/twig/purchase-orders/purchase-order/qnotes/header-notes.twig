<div class="mb-3">
	<a href="{{ page.view_purchaseorderURL(ponbr) }}" class="btn btn-primary">
		<i class="fa fa-arrow-left" aria-hidden="true"></i> Go back to Purchase Order
	</a>
</div>

<h3>Header Notes</h3>
<div class="card">
	<div class="card-header bg-primary text-white">
		Notes
	</div>
	<div class="card-body">
		{% if notes.count > 0 %}
			{% for note in notes %}
				<p class="card-text">{{ note.note }}</p>
			{% endfor %}
		{% else %}
			<p class="card-text">
				No notes found
			</p>
		{% endif %}
	</div>
</div>
