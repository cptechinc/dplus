$(function() {
	var modal_ajax = $('#ajax-modal');

/* =============================================================
	AJAX Lookup Modal Functions
============================================================= */

	$("body").on('click', '.ponbr-link', function(e) {
		e.preventDefault();
		var button = $(this);
		var ponbr = button.data('ponbr');
		var modal = button.closest('.modal');
		$(modal.attr('data-input')).val(ponbr).change();
		modal.modal('hide');
	});
});
