				<hr>
				<div class="row mt-4">
                    <div class="col-sm-3">
						<h5>Order Date</h5>
						<label for="afterdate">From Date</label>
						{% set name = 'date_ordered_from' %}
						{% set value = input.get.text('date_ordered_from') %}
						{% include 'util/date-picker.twig' %}

						<label for="beforedate">Through Date</label>
						{% set name = 'date_ordered_through' %}
						{% set value = input.get.text('date_ordered_through') %}
						{% include 'util/date-picker.twig' %}
					</div>
                    <div class="col-sm-3">
						<h5>Expected Date</h5>
						<label for="afterdate">From Date</label>
						{% set name = 'date_expected_from' %}
						{% set value = input.get.text('date_expected_from') %}
						{% include 'util/date-picker.twig' %}

						<label for="beforedate">Through Date</label>
						{% set name = 'date_expected_through' %}
						{% set value = input.get.text('date_expected_through') %}
						{% include 'util/date-picker.twig' %}
					</div>
					<div class="col-sm-3">
						<h5>Status</h5>
						<label>New</label>
						<input class="pull-right" type="checkbox" name="status[]" value="N" {{ 'N' in input.get.status ? 'checked' : '' }} ></br>

						<label>Closed</label>
						<input class="pull-right" type="checkbox" name="status[]" value="C" {{ 'C' in input.get.status ? 'checked' : '' }} ></br>
					</div>
				</div>
				<br>
				<div class="row mt-3">
					<div class="col-sm-12 form-group">
						<button class="btn btn-success btn-block" type="submit">Search <i class="fa fa-search" aria-hidden="true"></i></button>
					</div>
					{% if input.get.text('filter') %}
						<div class="col-sm-12 form-group">
							<div>
								<a href="{{ page.url }}" class="btn btn-warning btn-block">
									Clear Search <i class="fa fa-search-minus" aria-hidden="true"></i>
								</a>
							</div>
						</div>
					{% endif %}
