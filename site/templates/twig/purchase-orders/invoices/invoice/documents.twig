<div id="documents">
	<table class="table table-striped">
		<tr class="bg-dark text-white">
			<th>Title</th>
			<th>Filename</th>
			<th>Date</th>
			<th>Time</th>
		</tr>
		{% if documents.count() %}
			{% for document in documents %}
				<tr id="doc-{{ document.filename }}">
					<td>{{ document.title }}</td>
					<td>
						<a href="{{ page.documentUrl(input.get.text('invnbr'), document.folder, document.filename) }}" class="link" target="_blank">
							{{ document.filename }}
						</a>
					</td>
					<td>{{ document.date|convertdate }}</td>
					<td>{{ (document.date ~ document.time[:4])|convertdate("h:i A") }}</td>
				</tr>
			{% endfor %}
		{% else %}
			<td colspan="4" class="bg-warning text-white text-center">No Documents Found for AP Invoice # {{ invnbr }}</td>
		{% endif %}
	</table>
</div>
