<table class="table table-striped table-borderless">
	<thead class="bg-dark text-white font-weight-bold">
		<tr>
			<th>Item</th>
			<th class="text-right">Qty Received</th>
			<th class="text-right">Total Price</th>
		</tr>
	</thead>
	<tbody>
		{% for item in invoice.get_details() %}
			<tr>
				<td>
					<a href="{{ page.ii_itemURL(item.itemid) }}" class="link" target="_blank">{{ item.itemid }}</a></br>
					<small>{{ item.description }}</small>
				</td>
				<td class="text-right">{{ item.qty_received|number_format() }}</td>
				<td class="text-right">$ {{ item.total_price|currency }}</td>
			</tr>
		{% endfor %}
	</tbody>
	<tfoot>
		{% for item in invoice.get_details_misc() %}
			<tr class="bg-gray">
				<td colspan="2" class="text-right"><b>{{ item.itemid }}</b></td>
				<td class="text-right">$ {{ item.total_price|currency }}</td>
			</tr>
		{% endfor %}
	</tfoot>
</table>
