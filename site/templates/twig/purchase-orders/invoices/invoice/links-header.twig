<div class="mb-3">
	<div class="row">
		<div class="col col-sm-9">
			<a href="#" class="btn btn-light" aria-label="Return to last page" onclick="window.history.back();">
				<i class="fa fa-undo" aria-hidden="true"></i> Back
			</a>
			&nbsp;
			<a href="{{ page.get_purchasehistoryURL() }}" class="btn btn-light">
				<i class="fa fa-list" aria-hidden="true"></i> Invoices List
			</a>
			&nbsp;
			<a href="{{ page.get_purchasehistory_vendorURL(invoice.vendorid) }}" class="btn btn-light">
				<i class="fa fa-list" aria-hidden="true"></i> {{ invoice.vendorid }} Invoices List
			</a>
			&nbsp;
			<a href="{{ page.get_printURL() }}" class="btn btn-primary" target="_blank" aria-label="View Printable" title="View Printable">
				<i class="fa fa-print" aria-hidden="true"></i> View Print
			</a>
			&nbsp;
			<a href="{{ page.view_purchaseorderURL(invoice.ponbr) }}" class="btn btn-secondary">
				View Purchase Order
			</a>
		</div>
		<div class="col col-sm-3 text-right">
			{% if docm.count_documents_invoice(invoice.invoicenumber) %}
				<a href="#documents" title="View Documents" aria-label="View Documents">
					<i class="fa fa-file-text fa-2x" aria-hidden="true"></i>
				</a>
			{% else %}
				<span title="View Documents" aria-label="View Documents">
					<i class="fa fa-file-text fa-2x text-light" aria-hidden="true"></i>
				</span>
			{% endif %}
			<a href="#notes" class="{{ invoice.count_notes() ? 'text-success' : 'text-muted'}}" title="View Notes" aria-label="View Notes">
				<i class="fa fa-sticky-note-o fa-2x" aria-hidden="true"></i>
			</a>
		</div>
	</div>
</div>
