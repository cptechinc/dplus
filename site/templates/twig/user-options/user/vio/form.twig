{% extends 'user-options/user/form.twig' %}

{% block inputs %}
	<div class="row mb-2">
		<div class="col-sm-2">
			<label for="userID">User ID</label>
		</div>
		<div class="col-sm-3 input-parent">
			{% include 'util/bootstrap/form/input-group.twig' with {
				'inputgroup': {
					'type': 'prepend',
					'size': 'sm',
					'input': {
						'name': 'userID',
						'value': u.userid,
						'attributes': {
							'placeholder': '',
							'aria-label':  'User ID',
							'data-jqv': 'true'
						}
					},
					'button': {
						'colorclass': 'btn-secondary',
						'text': 'fa fa-search'|icon,
						'attributes': {
							'title': 'Search Users',
							'data-toggle': 'modal',
							'data-target': '#ajax-modal',
							'data-lookupurl': page.searchLookupUrl('users'),
							'data-input': '#userID'
						}
					}
				}
			} %}
			<small class="text-muted name">{{ u.user.name }}</small>
		</div>
	</div>
	{% for option in manager.screens() %}
		<div class="row mb-2">
			<div class="col-sm-2">
				<label for="{{ option }}">{{ manager.fieldAttribute(option, 'label') }}</label>
			</div>
			<div class="col-sm-1">
				{% include 'util/bootstrap/form/select-simple.twig' with {
					'select': {
						'name': option,
						'value' : attribute(u, option),
						'size': 'sm',
						'haskeys': true,
						'options': {'Y': 'Yes', 'N': 'No'}
					}
				} %}
			</div>
		</div>
	{% endfor %}
{% endblock %}