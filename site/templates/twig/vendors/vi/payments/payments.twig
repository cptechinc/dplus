<table class="table table-striped table-sm">
	<thead>
		{% for x in 1..blueprint['detail']['rowcount'] %}
			<tr>
				{% set columncount = 0 %}
				{% for i in 1..blueprint['cols'] + 1 %}
					{% set colspan = 0 %}
					{% if blueprint['detail']['rows'][x]['columns'][i] %}
						{% set column = blueprint['detail']['rows'][x]['columns'][i] %}
						{% set colspan = column['col-length'] %}
						<th colspan="{{ colspan }}" class="{{ module_formatter.get_justifyclass(column['label-justify']) }}">
							{{ column['label'] }}
						</th>
					{% else %}
						{% if columncount < blueprint['cols'] %}
							{% set colspan = 1 %}
							<th></th>
						{% endif %}
					{% endif %}
					{% set columncount = columncount + colspan %}
				{% endfor %}
			</tr>
		{% endfor %}
	</thead>
	<tbody>
		{% if json['data']['payments']|length == 0 %}
			<tr>
				<td colspan="{{ blueprint['cols'] }}" class="text-center"> No Purchase History Available</td>
			</tr>
		{% endif %}

		{% for invoice in json['data']['payments'] %}
			{% for x in 1..blueprint['detail']['rowcount']  %}
				<tr>
					{% set columncount = 0 %}
					{% for i in 1..blueprint['cols'] + 1 %}
						{% set colspan = 0 %}
						{% if blueprint['detail']['rows'][x]['columns'][i] %}
							{% set column = blueprint['detail']['rows'][x]['columns'][i] %}
							{% set colspan = column['col-length'] %}
							<td colspan="{{ colspan }}" class="{{ module_formatter.get_justifyclass(column['data-justify']) }}">
								{{ module_formatter.format_celldata(invoice, column) }} &nbsp;
							</td>
						{% else %}
							{% if columncount < blueprint['cols'] %}
								{% set colspan = 1 %}
								<td></td>
							{% endif %}
						{% endif %}
						{% set columncount = columncount + colspan %}
					{% endfor %}
				</tr>
			{% endfor %}
		{% endfor %}
	</tbody>
</table>
