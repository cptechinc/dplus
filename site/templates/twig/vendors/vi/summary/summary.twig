<div class="p-2">
	<h2>24-Month Graph</h2>
</div>
<div class="mb-3" id="summary-graph"></div>

<div class="p-2">
	<h2>24-Month Data</h2>
</div> 
<table class= 'table table-striped table-bordered table-sm table-excel' id='monthsum'>
	<thead>
		{% for column in json['columns']['monthsum'] %}
			{% set class = column['headingjustify'] %}
			<th class="{{ class }}">
				{{ column['heading'] }}
			</th>
		{% endfor %}
	</thead>
	<tbody>
		{% if json['data']['monthsum']|length == 0 %}
			<tr>
				<td colspan="{{ json['columns']|length }}" class="text-center"> No Open Invoices Available</td>
			</tr>
		{% endif %}

		{% set maxrows = json['data']['monthsum']|length %}
		{% for x in 1..maxrows %}
			<tr>
				{% for key, value in json['data']['monthsum'][x] %}
					{% set class = json['columns']['monthsum'][x]['datajustify'] %}
					<td class="{{ class }}">
						{{ key == 'month' ? value|convertdate('M Y') : value }}
					</td>
				{% endfor %}
			</tr>
		{% endfor %}
	</tbody>
</table>
