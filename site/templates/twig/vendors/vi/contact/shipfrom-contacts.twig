<table class="table table-striped table-sm">
	<thead>
		<tr>
			<th>Contact</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Fax</th>
			<th>Cellphone</th>
			<th>Website</th>
		</tr>
	</thead>
	<tbody>
		{% for shipfrom in vendor.getVendorShipfroms() %}
			<tr>
				<td colspan="6" class="text-center bg-secondary text-white">
					<span class="h5">Shipfrom: {{ shipfrom.name }}</span>
				</td>
			</tr>
			{% for contact in shipfrom.contacts %}
				<tr>
					<td>
						{{ contact.contact ? contact.contact : 'Contact ' ~ contact.sequence }}
					</td>
					<td>
						<a href="mailto:{{ contact.email }}" class="link">{{ contact.email }}</a>
					</td>
					<td>
						<a href="tel:{{ contact.phone }}" class="link">
							{{ contact.phone|phone_us }} {{ contact.extension ? 'Ext: ' ~ contact.extension : ''}}
						</a>
					</td>
					<td>
						<a href="tel:{{ contact.fax }}" class="link">{{ contact.fax|phone_us }}</a>
					</td>
					<td>
						<a href="tel:{{ contact.cellphone }}" class="link">{{ contact.cellphone|phone_us }}</a>
					</td>
					<td>
						<a href="{{ contact.website|purl }}" class="link">{{ contact.website }}</a>
					</td>
				</tr>
			{% endfor %}
		{% endfor %}
	</tbody>
</table>
