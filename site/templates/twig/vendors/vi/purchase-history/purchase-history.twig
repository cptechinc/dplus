<table class="table table-striped table-sm">
	<thead>
		{% for x in 1..blueprint['detail']['rowcount'] %}
			<tr>
				{% set columncount = 0 %}
				{% for i in 1..blueprint['cols'] + 1 %}
					{% set colspan = 0 %}
					{% if blueprint['detail']['rows'][x]['columns'][i] %}
						{% set column = blueprint['detail']['rows'][x]['columns'][i] %}
						{% set colspan = column['col-length'] %}
						<th colspan="{{ colspan }}" class="{{ module_formatter.get_justifyclass(column['label-justify']) }}">
							{{ column['label'] }}
						</th>
					{% else %}
						{% if columncount < blueprint['cols'] %}
							{% set colspan = 1 %}
							<th></th>
						{% endif %}
					{% endif %}
					{% set columncount = columncount + colspan %}
				{% endfor %}
			</tr>
		{% endfor %}
	</thead>
	<tbody>
		{% if json['data']['purchaseorders']|length == 0 %}
			<tr>
				<td colspan="{{ blueprint['cols'] }}" class="text-center"> No Purchase History Available</td>
			</tr>
		{% endif %}

		{% for purchaseorder in json['data']['purchaseorders'] %}
			{% for detail in purchaseorder['details'] %}
				{% for x in 1..blueprint['detail']['rowcount']  %}
					<tr class="first-txn-row">
						{% set columncount = 0 %}
						{% for i in 1..blueprint['cols'] + 1 %}
							{% set colspan = 0 %}
							{% if blueprint['detail']['rows'][x]['columns'][i] %}
								{% set column = blueprint['detail']['rows'][x]['columns'][i] %}
								{% set colspan = column['col-length'] %}
								<td colspan="{{ colspan }}" class="{{ module_formatter.get_justifyclass(column['data-justify']) }}">
									{{ module_formatter.format_celldata(detail, column) }} &nbsp;

									{% if column['id'] == 'Invoice Number' %}
										{% set invnbr = detail['Invoice Number'] %}
										{% if invnbr != '' %}
											{% if docm.count_count_documents_invoice(invnbr) %}
												<a href="{{ page.documentsview_apinvoice(json['vendid'], invnbr)}}" class="text-success" title="View Documents for Invoice # {{ invnbr }}">
													<i class="fa fa-file-text" aria-hidden="true"></i> <span class="sr-only">View Documents for Invoice # {{ invnbr }}</span>
												</a>
											{% endif %}
										{% endif %}
									{% endif %}
								</td>
							{% else %}
								{% if columncount < blueprint['cols'] %}
									{% set colspan = 1 %}
									<td></td>
								{% endif %}
							{% endif %}
							{% set columncount = columncount + colspan %}
						{% endfor %}
					</tr>
				{% endfor %}
			{% endfor %}

			{# Purchase Order total #}
			{% for x in 1..blueprint['detail']['rowcount']  %}
				<tr class="bg-gray font-weight-bold">
					{% set columncount = 0 %}
					{% for i in 1..blueprint['cols'] + 1 %}
						{% set colspan = 0 %}
						{% if blueprint['detail']['rows'][x]['columns'][i] %}
							{% set column = blueprint['detail']['rows'][x]['columns'][i] %}
							{% set colspan = column['col-length'] %}
							<td colspan="{{ colspan }}" class="{{ module_formatter.get_justifyclass(column['data-justify']) }}">
								{{ module_formatter.format_celldata(purchaseorder['pototals'], column) }}
							</td>
						{% else %}
							{% if columncount < blueprint['cols'] %}
								{% set colspan = 1 %}
								<td></td>
							{% endif %}
						{% endif %}
						{% set columncount = columncount + colspan %}
					{% endfor %}
				</tr>
			{% endfor %}
		{% endfor %}

	</tbody>
	<tfoot>
		{% for x in 1..blueprint['detail']['rowcount']  %}
			<tr class="bg-secondary text-white font-weight-bold">
				{% set columncount = 0 %}
				{% for i in 1..blueprint['cols'] + 1 %}
					{% set colspan = 0 %}
					{% if blueprint['detail']['rows'][x]['columns'][i] %}
						{% set column = blueprint['detail']['rows'][x]['columns'][i] %}
						{% set colspan = column['col-length'] %}

						<td colspan="{{ colspan }}" class="{{ module_formatter.get_justifyclass(column['data-justify']) }}">
							{{ module_formatter.format_celldata(json['data']['vendortotals'], column) }}
						</td>
					{% else %}
						{% if columncount < blueprint['cols'] %}
							{% set colspan = 1 %}
							<td></td>
						{% endif %}
					{% endif %}
					{% set columncount = columncount + colspan %}
				{% endfor %}
			</tr>
		{% endfor %}
	</tfoot>
</table>
