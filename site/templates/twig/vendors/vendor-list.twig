<table id="vendor-index" class="table table-bordered">
	<thead>
		<tr>
			<th scope="col">
				<a href="{{ page.get_sortURL('vendorID') }}" class="link">ID</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('name') }}" class="link">Name</a>
			</th>
			<th scope="col">Address</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('city') }}" class="link">City</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('state') }}" class="link">State</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('zip') }}" class="link">Zip</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('date_lastpurchased') }}" class="link">Last Purchase Date</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if vendors.count() %}
			{% for vendor in vendors %}
				<tr>
					<td scope="row">
						<a href="{{ page.get_vi_vendorURL(vendor.id) }}" class="link">
							<strong>{{ vendor.id }}</strong>
						</a>
					</td>
					<td>{{ vendor.name }}</td>
					<td>{{ vendor.address }}</td>
					<td>{{ vendor.city }}</td>
					<td>{{ vendor.state }}</td>
					<td>{{ vendor.zip }}</td>
					<td>{{ vendor.date_lastpurchased|convertdate }}</td>
				</tr>
			{% endfor %}
		{% else %}
			<tr>
				<td colspan="7" class="bg-secondary text-white text-center">
					No Results found
				</td>
			</tr>
		{% endif %}
	</tbody>
</table>
