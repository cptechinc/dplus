<div class="list-group">
	<div class="list-group-item bg-dark text-white">
		<div class="row">
			<div class="col">Due</div>
			<div class="col">Customer</div>
			<div class="col">Regarding / Title</div>
			<div class="col">View</div>
		</div>
	</div>

	{% for action in actions %}
		<div class="list-group-item bg-warning text-white">
			<div class="row">
				<div class="col">
					<h5>{{ action.title }}</h5>
				</div>
				<div class="col">
					<small>Due: {{ action.duedate ? action.duedate.format('m/d/Y') : 'N/A' }}</small>
				</div>
				<div class="col">
					<span>
						Type: {{ action.subtype_description()|capitalize  }}
						<i class="{{ module_useraction.get_iconclass(action.actionsubtype) }}" aria-hidden="true"></i>
					</span>
				</div>
				<div class="col">
					<a href="{{ module_useraction.get_actionURL(action) }}" class="btn btn-sm btn-primary">
						<i class="fa fa-external-link-square" aria-hidden="true"></i> View
					</a>
				</div>
			</div>
			<p class="mb-0">Customer: {{ action.customerlink }}</p>
		</div>
	{% endfor %}
</div>
