{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	kim                    module Kim
	kits                   InvKit[]|ObjectCollection
#}
<table class="table table-sm">
	<thead>
		<tr class="bg-dark text-white p-3">
			<th class="pt-3 pb-3 align-middle">Kit Item ID</th>
			<th class="pt-3 pb-3 align-middle">Description</th>
			<th class="pt-3 pb-3 text-center">
				{% if page.has('custID') and page.custID %}
					<a href="{# page.cxm_item_newURL(page.custID) #}" class="btn btn-secondary">
						<i class="fa fa-plus" aria-hidden="true"></i> Add New
					</a>
				{% else %}
					<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#ajax-modal" title="Choose Customer to Add CXM" aria-label="Choose Customer to Add CXM" data-custid="{{ page.has('custID') ? page.custID : '' }}" data-search="customers">
						<i class="fa fa-plus" aria-hidden="true"></i> Add New
					</button>
				{% endif %}
			</th>
		</tr>
	</thead>
	<tbody>
		{% if kits.count() %}
			{% for kit in kits %}
				{% set class = kit.itemid == page.focus ? 'highlight' : '' %}
				{# set class = (response.key == kit.itemid and response.has_success()) ? 'bg-success text-white' : class #}
				<tr class="{{ class }}" data-kit="{# kit.itemid #}">
					<td>{{ kit.itemid }}</td>
					<td>{{ kit.item.description }}</td>
					<td class="text-center">
						{% if kim.recordlocker.function_locked(kit.itemid) == false or kim.recordlocker.function_locked_by_user(kit.itemid) %}
							<a href="{{ page.kitURL(kit.itemid) }}" class="btn btn-warning btn-sm">
								<i class="fa fa-pencil" aria-hidden="true"></i> Edit
							</a>
							<a href="{# page.cxm_item_deleteURL(item.itemid, item.custid, item.custitemid) #}" class="btn btn-danger btn-sm remove-cxm-item">
								<i class="fa fa-trash" aria-hidden="true"></i> Delete
							</a>
						{% else %}
							<span class="badge badge-secondary">
								<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ kim.recordlocker.get_locked_user(kit.itemid) }}
							</span>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>
