{% if kim.recordlocker.isLocked(kit.itemid) == false or kim.recordlocker.userHasLocked(kit.itemid) %}
	<a href="{{ page.kitComponentUrl(kit.itemid, component.itemid) }}" class="btn btn-sm btn-warning">
		<i class="fa fa-pencil" aria-hidden="true"></i> Edit
	</a>
	&nbsp;
	<a href="{{ page.kitComponentDeleteUrl(kit.itemid, component.itemid) }}" class="btn btn-sm btn-danger delete_button" data-component="{{ component.itemid }}">
		<i class="fa fa-trash" aria-hidden="true"></i> Delete
	</a>
{% else %}
	<span class="badge badge-secondary">
		<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ kim.recordlocker.getLockingUser(kit.itemid) }}
	</span>
{% endif %}
