{#
	Only show Edit Actions if the Item is
	1. Locked for editing by the User
	2. Is a new Item
	NOTE: Only show delete if item already exists.
#}
{% if kim.recordlocker.userHasLocked(kit.itemid) or component.isNew() %}
	<button type="submit" class="btn btn-success">
		<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
	</button>
	{% if component.isNew() == false %}
		<a href="{{ page.kitComponentDeleteUrl(kit.itemid, component.itemid) }}" class="btn btn-danger form-link delete_button" data-component="{{ component.itemid }}">
			<i class="fa fa-trash-o" aria-hidden="true"></i> Delete
		</a>
	{% endif %}
{% endif %}
