<form action="{{ page.fullURL.getURL() }}" method="POST" id="vxm-item-form">
	<input type="hidden" name="action" value="update-vxm">
	<input type="hidden" name="vendorID" id="vendorID" value="{{ item.vendorID }}">

	<div class="row mb-3">
		{% include 'items/vxm/vendor/item/header.twig' %}
	</div>
	<div class="row">
		<div class="col-sm-6">
			{% include 'items/vxm/vendor/item/details.twig' %}
		</div>
		<div class="col-sm-6">
			{% include 'items/vxm/vendor/item/unit-costs.twig' %}
		</div>
	</div>
	<div class="mt-1 text-center">
		<div class="row">
			<div class="col-sm-6">
				<button type="submit" class="btn btn-danger btn-block" name="action" value="remove-vxm-item">
					<i class="fa fa-trash" aria-hidden="true"></i> Remove
				</button>
			</div>
			<div class="col-sm-6">
				<button type="submit" class="btn btn-success btn-block" name="action" value="update-vxm">
					<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
				</button>
			</div>
		</div>

	</div>
</form>
