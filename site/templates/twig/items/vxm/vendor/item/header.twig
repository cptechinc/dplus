{#
	var                    Description / Instance of
	-------------------------------------------------
	vxm                    module XrefVxm
	recordlocker           module RecordLockerUser
	item                   ItemXrefVxm
#}
{%
	set vendor = vxm.get_vendor(item.vendorID)
%}
<div class="col-sm-6">
	<div class="row form-group">
		<div class="col-sm-6">
			<label for="Vendor ID">Vendor ID</label>
		</div>
		<div class="col-sm-6">
			<div class="input-group">
				<span class="input-group-prepend">
					<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#ajax-modal" title="Search for / Choose Vendor" aria-label="Search for / Choose Vendor">
						<span class="fa fa-search" aria-hidden="true"></span> <span class="sr-only">Search for / Choose Vendor</span>
					</button>
				</span>
				<input type="text" name="vendorID" id="vendorID" class="form-control" value="{{ item.vendorID }}">
			</div>
		</div>
	</div>
	<div class="row form-group">
		<div class="col-sm-6">
			<label for="vendoritemID"><b>Vendor Item ID</b></label>
		</div>
		<div class="col-sm-6">
			<input type="text" name="vendoritemID" class="form-control form-control-sm" id="vendoritemID" value="{{ item.vendoritemID }}">
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
			<b>Our Item ID</b>
		</div>
		<div class="col-sm-6">
			{% if item.isNew() %}
				<input type="text" class="form-control form-control-sm" name="ouritemID" id="ouritemID" value="{{ item.ouritemid }}">
			{% else %}
				<input type="text" class="form-control-plaintext form-control-sm" name="ouritemID" value="{{ item.ouritemid }}" readonly>
			{% endif %}
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6"></div>
		<div class="col-sm-6">
			<p>{{ item.description }}</p>
		</div>
	</div>
</div>
<div class="col-sm-6">
	<div class="row form-group">
		<div class="col-sm-6">
			<label for="uom_purchase"><b>Purchase UoM</b></label>
		</div>
		<div class="col-sm-6">
			<select name="uom_purchase" class="form-control mb-1" id="uom_purchase">
				<option value="">-- Choose --</option>
				{% for uom in vxm.get_unitsofm_purchases() %}
					<option value="{{ uom.code }}" data-conversion="{{ uom.conversion }}" {{ uom.code == item.uom_purchase ? 'selected' : ''}}>
						{{ uom.code }} - {{ uom.description }}
					</option>
				{% endfor %}
			</select>
			<p>
				Conversion: <span class="conversion-description">{{ item.uompurchase.conversion + 0 }}</span>
			</p>
		</div>
	</div>
	<div class="row form-group">
		<div class="col-sm-6">
			<label for="listprice"><b>List Price</b></label>
		</div>
		<div class="col-sm-6">
			<div class="input-group input-group-sm mb-2">
				<input type="number" name="listprice" class="form-control" id="listprice" value="{{ item.listprice }}">
				<div class="input-group-append">
					<div class="input-group-text">{{ item.uom_purchase }}</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row form-group">
		<div class="col-sm-6">

		</div>
		<div class="col-sm-6">
			<div class="input-group input-group-sm mb-2">
				<input type="number" name="eachlistprice" class="form-control" id="eachlistprice" value="{{ item.get_listprice_uom_sale() }}" step="any">
				<div class="input-group-append">
					<div class="input-group-text">{{ item.imitem.uom_sale }}</div>
				</div>
			</div>
		</div>
	</div>
</div>
