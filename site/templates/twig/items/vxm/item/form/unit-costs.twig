{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	vxm                    module XrefVxm
	recordlocker           module RecordLockerUser
	item                   ItemXrefVendor
#}
<table class="table table-striped table-sm">
	<thead>
		<tr>
			<th>Qty Break</th>
			<th class="text-right">Unit</th>
			<th class="text-right">Unit Cost</th>
			<th class="text-right">Margin %</th>
		</tr>
	</thead>
	<tbody>
		<tr class="unit-row" data-break="{{ 0 }}">
			<td>Base</td>
			<td>
				<input type="hidden" class="form-control form-control-sm unit-qty" value="1">
			</td>
			<td>
				{% include 'util/form/input.twig' with {
						'name': 'unitcost_base', 'value': item.unitcost_base|number_format(vxm.decimal_places_cost()),
						'class_add': [
							'unit-cost',
							'w-50',
							'text-right',
							'pull-right'
						]
					}
				%}
			</td>
			<td class="text-right">
				{% include 'util/form/input.twig' with {
						'name': 'unitmargin_base', 'value': item.get_unitmargin(0)|number_format(vxm.decimal_places_margin()),
						'class_add': [
							'unit-margin',
							'w-50',
							'text-right',
							'pull-right'
						]
					}
				%}
			</td>
		</tr>
		{% for i in 1..item.get_unitsavailable() %}
			<tr class="unit-row" data-break="{{ i }}">
				<td>
					Qty {{ i }}
				</td>
				<td>
					{% set readonly_qty = i - 1 > 0 ? item.get_unitqty(i - 1) == '' or item.get_unitqty(i - 1) == 0 : false %}
					{% include 'util/form/input.twig' with {
							'name': 'unit_qty' ~ i, 'value': item.get_unitqty(i),
							'class_add': [
								'unit-qty',
								'w-50',
								'text-right',
								'pull-right'
							],
							'attributes': {
								'readonly': readonly_qty,
								'tabindex': readonly_qty ? '-1' : ''
							}
						}
					%}
				</td>
				<td>
					{% include 'util/form/input.twig' with {
							'name': 'unit_cost' ~ i, 'value': item.get_unitcost(i)|number_format(vxm.decimal_places_cost()),
							'class_add': [
								'unit-cost',
								'w-50',
								'text-right',
								'pull-right'
							],
							'attributes': {
								'readonly': item.get_unitqty(i) == '' or item.get_unitqty(i) == 0,
								'tabindex': item.get_unitqty(i) == '' or item.get_unitqty(i) == 0 ? '-1' : '',
							}
						}
					%}
				</td>
				<td class="text-right">
					{% include 'util/form/input.twig' with {
							'name': 'unit_margin' ~ i, 'value': item.get_unitmargin(i)|number_format(vxm.decimal_places_margin()),
							'class_add': [
								'unit-margin',
								'w-50',
								'text-right',
								'pull-right'
							],
							'attributes': {
								'readonly': item.get_unitqty(i) == '' or item.get_unitqty(i) == 0,
								'tabindex': item.get_unitqty(i) == '' or item.get_unitqty(i) == 0 ? '-1' : '',
							}
						}
					%}
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
