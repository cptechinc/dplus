{% extends 'util/bread-crumbs.twig' %}

{% set values = page.wire('input').get %}

{% block current_page %}
	{% if values.offsetExists('vendorID') %}
		<li class="breadcrumb-item">
			<a href="{{ page.vendorListUrl(values.text('vendorID')) }}">
				<i class="fa fa-arrows" aria-hidden="true"></i> {{ page.has('dplus_function') ? page.dplus_function|upper : page.title }}
			</a>
		</li>
		{% if (values.offsetExists('vendoritemID')) %}
			<li class="breadcrumb-item">
				<a href="{{ page.vendorUrl(values.text('vendorID')) }}">Vendor: {{ values.text('vendorID') }}</a>
			</li>
			{% if values.text('vendoritemID') == 'new' %}
				<li class="breadcrumb-item active" aria-current="page">New Item X-Ref</li>
			{% else %}
				<li class="breadcrumb-item active" aria-current="page">X-Ref Item: {{ values.text('vendoritemID') }}</li>
			{% endif %}
		{% else %}
			<li class="breadcrumb-item active" aria-current="page">Vendor: {{ values.text('vendorID') }}</li>
		{% endif %}
	{% elseif values.offsetExists('itemID') %}
		<li class="breadcrumb-item">
			<a href="{{ page.url }}">{{ page.title }}</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">Item: {{ values.text('itemID') }}</li>
	{% else %}
		<li class="breadcrumb-item active" aria-current="page">{{ page.title }}</li>
	{% endif %}
{% endblock %}
