<table id="vendor-index" class="table table-bordered">
	<thead>
		<tr>
			<th scope="col">
				<a href="{{ page.get_sortURL('vendorID') }}" class="link">ID
					{% if page.orderby_column == 'vendorID' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('name') }}" class="link">Name
					{% if page.orderby_column == 'name' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('address') }}" class="link">Address
					{% if page.orderby_column == 'address' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('city') }}" class="link">City
					{% if page.orderby_column == 'city' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('state') }}" class="link">State
					{% if page.orderby_column == 'state' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('zip') }}" class="link">Zip
					{% if page.orderby_column == 'zip' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if vendors.count() %}
			{% for vendor in vendors %}
				<tr data-vendorid="{{ vendor.id }}">
					<td scope="row">
						<a href="{{ page.vendorUrl(vendor.id) }}" class="link text-monospace">
							<strong>{{ vendor.id|replace({' ': '&nbsp;'})|raw }}</strong>
						</a>
					</td>
					<td>{{ vendor.name }}</td>
					<td>{{ vendor.address }}</td>
					<td>{{ vendor.city }}</td>
					<td>{{ vendor.state }}</td>
					<td>{{ vendor.zip }}</td>
				</tr>
			{% endfor %}
		{% else %}
			<tr>
				<td colspan="8" class="bg-secondary text-white text-center">
					No Results found
				</td>
			</tr>
		{% endif %}
	</tbody>
</table>
