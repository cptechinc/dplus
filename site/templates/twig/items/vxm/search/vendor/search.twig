<div class="mb-3">
	{% include 'items/vxm/search/vendor/form.twig' %}
	{% if input.get.text('q') %}
		<a href="{{ input.url() }}" class="btn btn-warning mt-2">
			<i class="fa fa-times"></i> Clear Search
		</a>
	{% endif %}
</div>
<div>
	<div class="row">
		<div class="col-sm-8">
			<h4>{{ vendors.getNbResults() }} Vendors</h4>
		</div>
		<div class="col-sm-4 text-right">
			<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#new-xref-modal">
				<i class="fa fa-plus" aria-hidden="true"></i> Add X-Ref
			</button>
		</div>
	</div>
	{% include 'items/vxm/search/vendor/list.twig' %}
</div>
