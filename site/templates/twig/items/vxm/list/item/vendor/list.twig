{#
	var                    Description / Instance of
	-------------------------------------------------
	vxm                    module XrefVxm
	recordlocker           module RecordLockerUser
	items                  ItemXrefVxm[]|ObjectCollection
#}
<table class="table table-sm">
	<thead>
		<tr class="bg-dark text-white p-3">
			<th class="pt-3 pb-3 align-middle">Vendor Item ID</th>
			<th class="pt-3 pb-3 align-middle">Our Item ID</th>
			<th class="pt-3 pb-3 align-middle">Description</th>
			<th class="pt-3 pb-3 align-middle text-right">Base Cost</th>
			<th class="pt-3 pb-3 align-middle text-right">Changed Date</th>
			<th class="pt-3 pb-3 align-middle text-center">
				{% if page.has('vendorID') and page.vendorID %}
					<a href="{{ page.vxm_itemURL(page.vendorID, 'new') }}" class="btn btn-secondary">
						<i class="fa fa-plus" aria-hidden="true"></i> Add New
					</a>
				{% else %}
					<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#ajax-modal" title="Choose Vendor to Add VXM" aria-label="Choose Vendor to Add VXM" data-vendorid="{{ page.has('vendorID') ? page.vendorID : '' }}" data-search="vendor">
						<i class="fa fa-plus" aria-hidden="true"></i> Add New
					</button>
				{% endif %}
			</th>
		</tr>
	</thead>
	<tbody>
		{% if items.count() %}
			{% for item in items %}
				<tr>
					<td>{{ item.vendoritemID }}</td>
					<td>{{ item.ouritemid }}</td>
					<td>{{ item.imitem.description }}</td>
					<td class="text-right">$ {{ item.unitcost_base|currency }}</td>
					<td class="text-right">{{ item.date_changed|convertdate }}</td>
					<td class="text-center">
						{% if recordlocker.function_locked('vxm', vxm.get_recordlocker_key(item)) == false or recordlocker.function_locked_by_user('vxm', vxm.get_recordlocker_key(item)) %}
							<a href="{{ page.vxm_itemURL(item.vendorID, item.vendoritemID) }}" class="btn btn-sm btn-warning">
								<i class="fa fa-pencil" aria-hidden="true"></i> Edit
							</a>
							&nbsp;
							<a href="{{ page.vxm_item_deleteURL(item.ouritemid, item.vendorid, item.vendoritemid) }}" class="btn btn-sm btn-danger remove-vxm-item">
								<i class="fa fa-trash" aria-hidden="true"></i> Remove
							</a>
						{% else %}
							<span class="badge badge-secondary">
								<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ recordlocker.get_locked_user('vxm', vxm.get_recordlocker_key(item)) }}
							</span>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>
