{% include 'items/vxm/bread-crumbs.twig' %}

{% set response = session.getFor('response', 'vxm') %}

{% if response and response.has_error() %}
	{% include 'items/itm/response-alert.twig' with {'response': response} %}
{% endif %}

<div class="card">
	<div class="mb-3">
		{% include 'items/vxm/search/xref/vendor/form.twig' %}
		{% if input.get.text('q') %}
			<a href="{{ page.vendorUrl(input.get.text('vendorID')) }}" class="btn btn-warning mt-2">
				<i class="fa fa-times"></i> Clear Search
			</a>
		{% endif %}
	</div>

	{% include 'items/vxm/list/xref/vendor/list.twig' %}

	{% include 'util/paginator/propel.twig' with {'pager': items} %}
</div>
