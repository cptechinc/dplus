{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	item                   ItemXrefVendor
	qnotes                 module QnotesItemVxm
	qnotes.detail          module QnotesItemVxmDetail
#}
<div class="modal fade" id="notes-detail-modal" tabindex="-1" role="dialog" aria-labelledby="notes-detail-modal-label" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="notes-detail-modal-label"><span class="action-desc">Adding</span> {{ item.itemid }} Vendor {{ item.vendorid }} Detail Notes</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form action="{{ page.fullURL.getURL() }}" method="post">
					<input type="hidden" name="itemID" value="{{ item.ouritemid }}">
					<input type="hidden" name="vendorID" value="{{ item.vendorid }}">
					<input type="hidden" name="vendoritemID" value="{{ item.vendoritemid }}">
					<input type="hidden" name="type" value="detail">

					<div class="form-group">
						{% include 'msa/noce/ajax/button.twig' with {'input': '#detail-notes'} %}
					</div>

					<div class="form-group">
						<label for="internal-notes">Notes</label>
						<div class="d-flex justify-content-between align-items-center">
							<textarea class="form-control w-auto qnotes" name="note" id="detail-notes" rows="10" cols="{{ qnotes.notes.detail.get_column_count() }}" wrap="hard"></textarea>
						</div>
					</div>

					<div class="d-flex justify-content-between align-items-center">
						<button type="submit" name="action" value="update-notes" class="btn btn-success">
							<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
						</button>
						{# TODO: add confirmation for deletion 'delete_button' #}
						<button type="submit" name="action" value="delete-notes" class="btn btn-danger">
							<i class="fa fa-trash-o" aria-hidden="true"></i> Delete
						</button>
						<button type="button" class="btn btn-warning pull-right" data-dismiss="modal">
							<i class="fa fa-times" aria-hidden="true"></i> Close
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
