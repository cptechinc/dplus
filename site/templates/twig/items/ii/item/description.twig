<div class="row mb-3">
	<div class="col-sm-8">
		<form action="{{ page.url }}" method="GET" class="allow-enterkey-submit">
			<div class="form-row">
				<div class="col-sm-4">
					<b>Item ID</b>
				</div>
				<div class="col-sm-8">
					<div class="input-group form-group">
						<input type="text" class="form-control" name="q" value="{{ item.itemid }}">
						<span class="input-group-btn">
							<button type="submit" class="btn btn-default"> <i class="fa fa-search"></i> <span class="sr-only">Search</span> </button>
						</span>
					</div>
				</div>
			</div>
		</form>
		<div class="row">
			<div class="col-sm-4"><b>Description</b></div>
			<div class="col-sm-8">{{ item.desc }}</div>
		</div>
		{% if item.has_desc2() %}
			<div class="row">
				<div class="col-sm-4"><b>Description 2</b></div>
				<div class="col-sm-8">{{ item.desc2 }}</div>
			</div>
		{% endif %}
	</div>

	{% if page.item_image_exists(item.itemid) %}
		<div class="col-sm-4">
			<a href="{{ page.item_imageURL(item.itemid) }}" class="image-link" target="_blank">
				<img src="{{ page.item_imageURL(item.itemid) }}" alt="image of {{ item.itemid }}" height="200">
			</a>
		</div>
	{% endif %}
</div>
