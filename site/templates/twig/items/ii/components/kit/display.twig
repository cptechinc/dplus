{% extends 'items/ii/display.twig' %}

{% block body %}
	<div class="mt-3">
		<ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
			<li class="nav-item" role="presentation">
				<a class="nav-link active" id="supply-tab" data-toggle="tab" href="#supply" role="tab" aria-controls="supply" aria-selected="true">
					Supply
				</a>
			</li>
			<li class="nav-item" role="presentation">
				<a class="nav-link" id="breakdown-tab" data-toggle="tab" href="#breakdown" role="tab" aria-controls="breakdown" aria-selected="false">
					Breakdown
				</a>
			</li>
		</ul>
		<div class="tab-content" id="kitTabContent">
			<div class="tab-pane fade show active" id="supply" role="tabpanel" aria-labelledby="supply-tab">
				{% include 'items/ii/components/kit/supply.twig' %}
			</div>
			<div class="tab-pane fade" id="breakdown" role="tabpanel" aria-labelledby="breakdown-tab">
				{% include 'items/ii/components/kit/component-breakdown.twig' %}
			</div>
		</div>
	</div>
{% endblock %}

{% block footer %}
	<div class="card-footer">
		<div class="d-flex justify-content-between align-items-center">
			<a href="{{ page.subfunctionUrl(item.itemid, 'kit') }}" class="btn btn-primary">
				<i class="fa fa-undo" aria-hidden="true"></i> Kit
			</a>
		</div>
	</div>
{% endblock %}
