<div class="table-responsive">
	<table class="table table-striped table-sm">
		<thead>
			<tr>
				{% for column in json['columns']['lots'] %}
					<th class="{{ module_json.get_justifyclass(column['headingjustify']) }}">
						{{ column['heading'] }}
					</th>
				{% endfor %}
			</tr>
		</thead>
		<tbody>
			{% for lot in warehouse['lots'] %}
				<tr>
					{% for column, properties in json['columns']['lots'] %}
						<td class="{{ module_json.get_justifyclass(properties['datajustify']) }}">
							{{ lot[column] }}
						</td>
					{% endfor %}
				</tr>
				{% if lot['orders'] %}
					<tr>
						{% for column in json['columns']['orders'] %}
							<th class="{{ module_json.get_justifyclass(column['headingjustify']) }}">
								{{ column['heading'] }}
							</th>
						{% endfor %}
					</tr>
					{% for order in lot['orders'] %}
					<tr>
						{% for column, properties in json['columns']['orders'] %}
							<td class="{{ module_json.get_justifyclass(properties['datajustify']) }}">
								{{ order[column] }}
							</td>
						{% endfor %}
					</tr>
					{% endfor %}
				{% endif %}
			{% endfor %}
		</tbody>
	</table>
</div>
