{% extends 'items/ii/display.twig' %}

{% block body %}
	<div class="mt-3">
		{% if json['data']['kit'] %}
			<h4 class="px-3">Kits</h4>
			{% include 'items/ii/where-used/kit.twig' %}
		{% endif %}

		{% if json['data']['bom'] %}
			<h4 class="px-3">BoMs</h4>
			{% include 'items/ii/where-used/bom.twig' %}
		{% endif %}
	</div>
{% endblock %}

{% block footer %}
	<div class="card-footer">
		<div class="d-flex justify-content-between align-items-center">
			<a href="{{ page.get_itemwhereusedURL(item.itemid) }}" class="btn btn-primary">
				<i class="fa fa-undo" aria-hidden="true"></i> Where Used
			</a>
		</div>
	</div>
{% endblock %}
