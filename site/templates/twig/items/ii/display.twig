<div class="card">
	{% block header %}
		<div class="card-header bg-primary text-white">
			<div class="row">
				<div class="col-sm-1">
					<strong>Item ID:</strong>
				</div>
				<div class="col-sm-6">
					{{ item.itemid }} - {{ item.description }}
				</div>
			</div>
		</div>
	{% endblock %}

	{% block links %}
		<div class="p-2 px-3 bg-light">
			<div class="d-flex justify-content-between align-items-center">
				{% if page.is_print() %}
					<a href="{{ page.get_backURL() }}" class="btn btn-primary d-print-none">
						<i class="fa fa-arrow-left" aria-hidden="true"></i> Back to Item
					</a>
				{% else %}
					<a href="{{ page.get_backURL() }}" class="btn btn-primary">
						<i class="fa fa-arrow-left" aria-hidden="true"></i> Back to Item
					</a>
					&nbsp;
					<a href="{{ page.get_printURL() }}" class="btn btn-primary">
						<i class="fa fa-print" aria-hidden="true"></i> Print
					</a>
					&nbsp;
					{% if page.refreshurl %}
						<a href="{{ page.refreshurl }}" class="btn btn-primary">
							<i class="fa fa-refresh" aria-hidden="true"></i> Refresh Data
						</a>
						&nbsp;
						Data Current as of {{ page.lastmodified|date('m/d/Y h:i A') }}
					{% endif %}
				{% endif %}
			</div>
		</div>

	{% endblock %}

	{% block body %}
	{% endblock %}

	{% block footer %}
		<div class="card-footer">
			<div class="d-flex justify-content-between align-items-center">

			</div>
		</div>
	{% endblock %}
</div>
