<h2>Vendors</h2>
{% for id, vendor in json['data']['vendor'] %}
	<div class="mb-3">
		<h4>
			<a data-toggle="collapse" href="#{{ id|attrJS }}" class="link" role="button" aria-expanded="false" aria-controls="{{ id|attrJS }}">{{ vendor['vend id']}}</a>
		</h4>
		<div class="collapse show" id="{{ id|attrJS }}">
			<div class="row">
				<div class="col-sm-6">
					<table class="table table-striped table-sm">
						<tr>
							<td>Vendor</td> <td>{{ vendor['vend name'] }}</td>
						</tr>
						<tr>
							<td>Phone</td> <td>{{ vendor['vend phone'] }}</td>
						</tr>
						<tr>
							<td>Purch UoM</td> <td>{{ vendor['vend uom'] }}</td>
						</tr>
						<tr>
							<td>Case Qty</td> <td>{{ vendor['vend case qty'] }}</td>
						</tr>
						<tr>
							<td>List Price</td> <td>{{ vendor['vend price'] }}</td>
						</tr>
						<tr>
							<td>Change Date</td> <td>{{ vendor['vend chg date'] }}</td>
						</tr>
						<tr>
							<td>PO Order Code</td> <td>{{ vendor['vend po code'] }}</td>
						</tr>
					</table>
				</div>
				<div class="col-sm-6">
					<h5>{{ vendor['vend id']}} Cost breaks</h5>
					<table class="table table-striped table-sm">
						<thead>
							{% for column in json['columns']['vendor'] %}
								<th class="{{ module_json.get_justifyclass(column['headingjustify']) }}">
									{{ column['heading'] }}
								</th>
							{% endfor %}
						</thead>
						<tbody>
							{% for costbreak in vendor['vend cost breaks'] %}
								<tr>
									{% for column, properties in json['columns']['vendor'] %}
										<td class="{{ module_json.get_justifyclass(properties['datajustify']) }}">
											{{ costbreak[column] }}
										</td>
									{% endfor %}
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endfor %}
