{#
	****************************************************
		Fields: itemgroup, pricecode, commissiongroup
	****************************************************

	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	item                   ItemMasterItem
	itm                    module Itm
	recordlocker           module RecordLockerUser
#}
<div class="form-group row">
	<div class="col-sm-3">
		<label for="itemgroup">Item Group</label>
	</div>
	<div class="col-sm-6">
		<select name="itemgroup" class="custom-select custom-select-sm {{ itm.field_has_error('itemgroup') ? 'is-invalid' : ''}}" id="itemgroup">
			{% for itemgroup in itm.get_itemgroups() %}
				<option value="{{ itemgroup.code }}" {{ itemgroup.code == item.itemgroup ? 'selected' : ''}}>{{ itemgroup.code }} - {{ itemgroup.description }}</option>
			{% endfor %}
		</select>
	</div>
</div>
<div class="form-group row">
	<div class="col-sm-3">
		<label for="pricecode">Price Group</label>
	</div>
	<div class="col-sm-6">
		<select name="pricecode" class="custom-select custom-select-sm {{ itm.field_has_error('pricecode') ? 'is-invalid' : ''}}" id="pricecode" {{ itm.configIn().use_pricegroup() ? '' : 'disabled' }}>
			{% for pricecode in itm.get_pricecodes() %}
				<option value="{{ pricecode.code }}" {{ pricecode.code == item.pricecode ? 'selected' : ''}}>{{ pricecode.code }} - {{ pricecode.description }}</option>
			{% endfor %}
		</select>
	</div>
</div>
<div class="form-group row">
	<div class="col-sm-3">
		<label for="commissiongroup">Comm Group</label>
	</div>
	<div class="col-sm-6">
		<select name="commissiongroup" class="custom-select custom-select-sm {{ itm.field_has_error('commissiongroup') ? 'is-invalid' : ''}}" id="commissiongroup" {{ itm.configIn().use_commgroup() ? '' : 'disabled' }}>
			{% for code in itm.get_commissoncodes() %}
				<option value="{{ code.code }}" {{ code.code == item.commissiongroup ? 'selected' : ''}}>{{ code.code }} - {{ code.description }}</option>
			{% endfor %}
		</select>
	</div>
</div>
