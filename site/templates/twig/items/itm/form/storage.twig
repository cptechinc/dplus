{#
	Fields: liters, weight, grams, cubes
#}
{% if m_itm.configs.inventory.use_liters() %}
	<div class="form-group row">
		<div class="col-sm-6">
			<label for="liters">Liters</label>
		</div>
		<div class="col-sm-6">
			<input type="number" name="liters" class="form-control text-right" value="{{ item.liters }}" id="liters">
		</div>
	</div>
{% endif %}
<div class="form-group row">
	<div class="col-sm-6">
		<label for="weight">Weight</label>
	</div>
	<div class="col-sm-6">
		<input type="number" name="weight" class="form-control text-right" value="{{ item.weight }}" id="weight">
	</div>
</div>
{% if m_itm.configs.inventory.use_grams() %}
	<div class="form-group row">
		<div class="col-sm-6">
			<label for="grams">Grams</label>
		</div>
		<div class="col-sm-6">
			<input type="number" name="grams" class="form-control text-right" value="{{ item.grams }}" id="grams">
		</div>
	</div>
{% endif %}
<div class="form-group row">
	<div class="col-sm-6">
		<label for="cubes">Cubes</label>
	</div>
	<div class="col-sm-6">
		<input type="number" name="cubes" class="form-control text-right" value="{{ item.cubes }}" id="cubes">
	</div>
</div>
