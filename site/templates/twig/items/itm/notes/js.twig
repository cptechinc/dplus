$(function() {
	{% if session.get('qnotes_itm') %}
		$('html, body').animate({scrollTop: $('#notes-tab').offset().top,},700,'linear');
		$('#{{ session.get('qnotes_itm') }}-tab').click();
	{% endif %}

	$('#notes-internal-modal').on('shown.bs.modal', function (e) {
		var modal = $(this);
		modal.find('textarea[name=note]').focus();
	});
});
