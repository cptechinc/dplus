class CodeInputs {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new CodeInputs();
		}
		return this.instance;
	}

	constructor() {
		this.id            = 'code-form',
		this.form          = $('#' + this.id),
		this.system        = this.form.find('input[name=system]');
		this.sysop         = this.form.find('input[name=sysop]');
		this.code          = this.form.find('input[name=code]');
		this.description   = this.form.find('.code-description');
		this.descriptionSysop   = this.form.find('.sysop-description');
		this.submit = {
			delete: this.form.find('button[type=submit][value=delete]'),
			update: this.form.find('button[type=submit][value=update]'),
		}
	}
}
