class CodeConfigs {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new CodeConfigs();
		}
		return this.instance;
	}

	constructor() {
		this.fields = {

		};
		this.isMissingRequired = {{ itmOpt.isMissingRequiredCodes(input.get.text('itemID')) ? 'true' : 'false'}};
		this.missingCodes = {
			urls: {{ page.missingRequiredCodesUrls(input.get.text('itemID'))|json_encode|raw }}
		}
	}
}
