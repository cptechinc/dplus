class CostingInputs {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new CostingInputs();
		}
		return this.instance;
	}

	constructor() {
		this.id = 'item-costing-form';
		this.form = $('#' + this.id);
		this.standardcost = this.form.find('input[name=standardcost]');
		this.uom          = this.form.find('select[name=uom_purchase]');
	}
}
