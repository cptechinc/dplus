class CostingConfigs {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new CostingConfigs();
		}
		return this.instance;
	}

	constructor() {
		this.fields = {
			uom: {
				maxlength: {{ costing.getUomCodeLength() }}
			},
			cost: {
				precision: {{ costing.fieldAttribute('cost', 'precision')  }}
			},
			margin: {
				precision: {{ costing.fieldAttribute('margin', 'precision') }}
			},
			qty: {
				precision: {{ costing.fieldAttribute('qty', 'precision') }}
			},
		};
	}
}
