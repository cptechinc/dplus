<div class="form-group row">
	<div class="col-sm-3">
		<label for="tariffcode">Tariff Code</label>
	</div>
	<div class="col-sm-9">
		<div class="row">
			<div class="col-sm-3">
				{% include 'util/bootstrap/form/input-group.twig' with {
						'inputgroup': {
							'type': 'prepend',
							'size': 'sm',
							'input': {
								'name': 'tariffcode',
								'value': item.tariffcode,
								'addclasses': ['ajax-lookup'],
								'attributes': {
									'placeholder': '',
									'aria-label':  'Tariff Code',
									'data-ajaxfields': 'number,description,rate',
									'data-api': 'inv',
									'data-validate': 'tariff-code',
								}
							},
							'button': {
								'colorclass': 'btn-secondary',
								'text': 'fa fa-search'|icon,
								'attributes': {
									'title': 'Search for / Choose Tariff Code',
									'data-toggle': 'modal',
									'data-target': '#ajax-modal',
									'data-lookupurl': page.search_lookupURL('tariff-codes'),
									'data-input': '#tariffcode',
									'data-search': 'tariffcode',
								}
							}
						}
					}
				%}
			</div>
			<div class="col-sm-9">
				{% set tariffcode = item.getCodeTariff() %}
				<div class="row">
					<div class="col-sm-6">
						<p class="form-control-plaintext form-control-sm tariffcode-number">{{ tariffcode.number }}</p>
					</div>
					<div class="col-sm-6">
						<p class="form-control-plaintext form-control-sm tariffcode-rate">{{ tariffcode.duty_rate }} %</p>
					</div>
				</div>
			</div>
		</div>
		<small class="form-text text-muted tariffcode-description">{{ tariffcode.description }}</small>
	</div>
</div>
