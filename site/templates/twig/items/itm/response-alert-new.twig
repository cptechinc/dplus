{# var response is an instance of Dplus\Min\Inmain\Itm\Response #}

{% set type  = response.hasError() ? 'danger' : 'success' %}
{% set size  = response.fields      ? 'fa-3x' : 'fa-2x'%}
{% set icon  = response.hasError() ? 'fa fa-warning' : 'fa fa-floppy-o' %}
{% set iconclass = icon ~ ' ' ~ size %}

{% set title = response.hasError() ? 'Error!' : 'Success!' %}

<div class="mb-3 response-alert">
	{% include 'util/form/alert.twig' with {'type': type, 'iconclass': iconclass, 'title': title, 'message': response.getMessage(), 'fields': response.fields } %}
</div>
