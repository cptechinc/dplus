{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	mxrfe                  module XrefMxrfe
	recordlocker           module RecordLockerUser
	xrefs                  ItemXrefManufacturer[]|ObjectCollection
#}
<table class="table table-sm">
	<thead>
		<tr class="bg-dark text-white p-3">
			<th class="pt-3 pb-3 align-middle">Mf / Cp</th>
			<th class="pt-3 pb-3 align-middle">Mnfr / Comp Name</th>
			<th class="pt-3 pb-3 align-middle">Mnfr/Comp Item ID</th>
			<th class="pt-3 pb-3 text-center">
				<a href="{{ page.xrefUrl('', 'new', item.itemid) }}" class="btn btn-light btn-sm">
					<i class="fa fa-plus" aria-hidden="true"></i> Add New
				</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if xrefs.count() == 0 %}
			<tr class="text-center">
				<td colspan="4">
					No Mnfr X-refs
				</td>
			</tr>
		{% endif %}
		{% if xrefs.count() %}
			{% for xref in xrefs %}
				{% set class = mxrfe.get_recordlocker_key(xref) == page.focus ? 'highlight' : '' %}
				{% set class = (response.key == mxrfe.get_recordlocker_key(xref) and response.has_success()) ? 'bg-success text-white' : class %}
				<tr class="{{ class }}" data-mxrfe="{{ mxrfe.get_recordlocker_key(xref) }}">
					<td>{{ xref.mnfrid }}</td>
					<td>{{ xref.vendor.name }}</td>
					<td>{{ xref.mnfritemid }}</td>
					<td class="text-center">
						{% if mxrfe.recordlocker.isLocked(mxrfe.get_recordlocker_key(xref)) == false or mxrfe.recordlocker.userHasLocked(mxrfe.get_recordlocker_key(xref)) %}
							<a href="{{ page.xrefUrl(xref.vendorid, xref.vendoritemid, xref.itemid) }}" class="btn btn-warning btn-sm">
								<i class="fa fa-pencil" aria-hidden="true"></i> Edit
							</a>
							&nbsp;
							<a href="{{ page.xrefDeleteUrl(xref.vendorid, xref.vendoritemid, xref.itemid) }}" class="btn btn-danger btn-sm delete_button">
								<i class="fa fa-trash" aria-hidden="true"></i> Delete
							</a>
						{% else %}
							<span class="badge badge-secondary">
								<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ mxrfe.recordlocker.getLockingUser(mxrfe.get_recordlocker_key(xref)) }}
							</span>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>
