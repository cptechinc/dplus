{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	cxm                    module XrefCxm
	recordlocker           module RecordLockerUser
	items                  ItemXrefCxm[]|ObjectCollection
#}
<table class="table table-sm">
	<thead>
		<tr class="bg-dark text-white p-3">
			<th class="pt-3 pb-3 align-middle">Customer ID</th>
			<th class="pt-3 pb-3 align-middle">Their ItemID</th>
			<th class="pt-3 pb-3 align-middle">Description</th>
			<th class="pt-3 pb-3 align-middle">UoM</th>
			<th class="pt-3 pb-3 align-middle text-center">
				<a href="{{ page.xrefNewUrl(item.itemid) }}" class="btn btn-light btn-sm">
					<i class="fa fa-plus" aria-hidden="true"></i> Add New
				</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if items.count() == 0 %}
			<tr>
				<td colspan="5" class="bg-gray text-center">No X-refs Found</td>
			</tr>
		{% endif %}

		{% if items.count() %}
			{% for item in items %}
				<tr data-cxm="{{ item.custid ~ '-' ~ item.custitemID }}">
					<td>{{ item.custID }}</td>
					<td>{{ item.custitemID }}</td>
					<td>{{ item.description }}</td>
					<td>{{ item.uom_customer }}</td>
					<td class="text-center">
						{% if cxm.recordlocker.isLocked(cxm.get_recordlocker_key(item)) == false or cxm.recordlocker.userHasLocked(cxm.get_recordlocker_key(item)) %}
							<a href="{{ page.xrefUrl(item.custid, item.custitemid, item.itemid) }}" class="btn btn-warning btn-sm">
								<i class="fa fa-pencil" aria-hidden="true"></i> Edit
							</a>
							&nbsp; &nbsp;
							<a href="{{ page.xrefDeleteUrl(item.itemid, item.custid, item.custitemid) }}" class="btn btn-danger btn-sm remove-cxm-item">
								<i class="fa fa-trash" aria-hidden="true"></i> Delete
							</a>
						{% else %}
							<span class="badge badge-secondary">
								<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ cxm.recordlocker.getLockingUser(cxm.get_recordlocker_key(item)) }}
							</span>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		{% endif %}
	</tbody>
</table>
