$(function() {
	{% if page.focus and page.focus != 'new' %}
		$('tr[data-cxm="{{ page.focus }}"]').addClass('highlight');
		// $('html, body').animate({scrollTop: $('#{{ page.focus }}').offset().top,},700,'linear');
		$('html, body').animate({scrollTop: $('[data-cxm="{{ page.focus }}"]"]').offset().top,},700,'linear');
	{% endif %}

	$("body").on("click", "a.remove-cxm-item", function(e) {
		e.preventDefault();
		var button = $(this);

		swal2.fire({
			title: "Remove CXM Item?",
			text: "Are you sure you want to remove this CXM Item?",
			icon: 'warning',
			showCancelButton: true,
			confirmButtonText: 'Yes!'
		}).then(function (result) {
			if (result.value) {
				window.location.href = button.attr('href');
			}
		});
	});

});
