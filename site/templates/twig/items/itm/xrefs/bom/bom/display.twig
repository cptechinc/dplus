{% extends 'items/itm/display.twig' %}

{% block body %}
	<div class="py-2 px-2 bg-primary">
		<div class="d-flex justify-content-between align-items-center">
			<div></div>
			<h6 class="text-center text-white">Level: 1</h6>
			<button class="btn btn-light btn-sm"  type="button" data-toggle="collapse" data-target="#tree" aria-expanded="false" aria-controls="tree">
				Show Tree
			</button>
		</div>
	</div>
	<div id="tree" class="card-body collapse">
		{# include 'items/itm/xrefs/bom/bom/tree.twig' #}
	</div>
	{% include 'items/itm/xrefs/bom/bom/components.twig' %}

{% endblock %}

{% block footer %}
	<div class="card-footer">
		<div class="d-flex justify-content-between align-items-center">
			<div></div>
			<div>
				<a href="{{ page.bomExitUrl(kit.itemid) }}" class="btn btn-warning btn-sm">
					<i class="fa fa-times" aria-hidden="true"></i> Close
				</a>
			</div>
		</div>
	</div>
{% endblock %}
