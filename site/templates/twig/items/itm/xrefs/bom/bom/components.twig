{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	bmm                    Dplus\Mpm\Pmmain\Bmm
	bomItem                BomItem
#}
<table class="table table-sm">
	<thead>
		<tr class="bg-dark text-white p-3">
			<th>Component</th>
			<th>Description</th>
			<th class="text-right">Usage Rate</th>
			<th class="text-center">
				<a href="{{ page.bomComponentUrl(bomItem.itemid, 'new') }}" class="btn btn-sm btn-light">
					<i class="fa fa-plus" aria-hidden="true"></i> Add
				</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% for component in bomItem.getComponents() %}
			{% set class = component.itemid == page.focus ? 'highlight' : '' %}
			{# set class = (response.key == bomItem.itemid and response.has_success()) ? 'bg-success text-white' : class #}
			<tr class="{{ class }}">
				<td>{{ component.itemid }}</td>
				<td>
					{{ component.item.description }} <br>
					{{ component.item.description2 }}
				</td>
				<td class="text-right">
					{{ component.qty }}
				</td>
				<td class="text-center">
					{% if bmm.recordlocker.isLocked(bomItem.itemid) == false or bmm.recordlocker.userHasLocked(bomItem.itemid) %}
						<a href="{{ page.bomComponentUrl(bomItem.itemid, component.itemid) }}" class="btn btn-sm btn-warning">
							<i class="fa fa-pencil" aria-hidden="true"></i> Edit
						</a>
						&nbsp;
						<a href="{{ page.bomComponentDeleteUrl(bomItem.itemid, component.itemid) }}" class="btn btn-sm btn-danger delete_button" data-component="{{ component.itemid }}">
							<i class="fa fa-trash" aria-hidden="true"></i> Delete
						</a>
					{% else %}
						<span class="badge badge-secondary">
							<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ bmm.recordlocker.getLockingUser(bomItem.itemid) }}
						</span>
					{% endif %}
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
