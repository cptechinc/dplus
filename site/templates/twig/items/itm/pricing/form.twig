{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	item                   ItemMasterItem
	item_pricing           ItemMasterItem
	pricingm               module ItmPricing
	pricingm.configs       WireData
	pricingm.configs.so    ConfigSalesOrder
#}
<form action="{{ page.fullURL.getUrl() }}" method="POST">
	<input type="hidden" name="action" value="update-itm-pricing">
	<input type="hidden" name="itemID" value="{{ item_pricing.itemid }}">

	{% include 'items/itm/description.twig' with {'item': item_pricing.item } %}

	<div class="row mb-3">
		<div class="col-sm-6">
			{% include 'items/itm/pricing/sales.twig' %}
		</div>
		<div class="col-sm-6">
			{% include 'items/itm/pricing/purchasing.twig' %}
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-sm-6">
			{% include 'items/itm/pricing/discount-assortment.twig' %}
		</div>
	</div>
	<button type="submit" class="btn btn-block btn-success">
		<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
	</button>
</form>
