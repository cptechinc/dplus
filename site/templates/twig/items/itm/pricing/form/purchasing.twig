{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	item                   ItemMasterItem
	item_pricing           ItemMasterItem
	pricingm               module ItmPricing
	pricingm.configs       WireData
#}
{% set m_costing = costingm %}
<div class="form-group row">
	<div class="col-sm-4">
		<label>Purchase UoM</label>
	</div>
	<div class="col-sm-8">
		<p class="form-control-plaintext form-control-sm">
			{{ item.unitofmpurchase.code }} - {{ item.unitofmpurchase.description }}
		</p>
		<small class="form-text text-muted">
			Conversion: {{ item.unitofmpurchase.conversion|number_format(pricingm.fieldAttribute('qty', 'precision')) }}
		</small>
	</div>
</div>
<div class="form-group row">
	<div class="col-sm-4">
		<label>Standard Cost</label>
	</div>
	<div class="col-sm-8">
		<div class="row mb-2">
			<div class="col-sm-8">
				{% include 'util/bootstrap/form/input-group.twig' with {
						'inputgroup': {
							'type': 'append',
							'size': 'sm',
							'p': {
								'value': (item.standardcost * item.unitofmpurchase.conversion)|number_format(costingm.getConfigPo().decimal_places_cost),
								'addclasses': ['text-right', 'border-0']
							},
							'span': {
								'text': item.unitofmpurchase.code|spacepad(costingm.getUomCodeLength())|raw,
								'addclasses': ['text-monospace']
							}
						}
					}
				%}
			</div>
			<div class="col-sm-4">
				<p class="form-control-plaintext form-control-sm">{{ item.date_laststandardcost ? item.date_laststandardcost|convertdate : '' }}</p>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-8">
				{% include 'util/bootstrap/form/input-group.twig' with {
						'inputgroup': {
							'type': 'append',
							'size': 'sm',
							'p': {
								'value': item.standardcost|number_format(costingm.getConfigPo().decimal_places_cost),
								'addclasses': ['text-right', 'border-0']
							},
							'span': {
								'text': 'EACH',
								'addclasses': ['text-monospace']
							}
						}
					}
				%}
			</div>
		</div>
	</div>
</div>

<div class="form-group row">
	<div class="col-sm-4">
		<label>Last Cost</label>
	</div>
	<div class="col-sm-8">
		<div class="row">
			<div class="col-sm-8">
				<div class="mb-2">
					{% include 'util/bootstrap/form/input-group.twig' with {
							'inputgroup': {
								'type': 'append',
								'size': 'sm',
								'p': {
									'value': item.lastcost|number_format(costingm.getConfigPo().decimal_places_cost),
									'addclasses': ['text-right', 'border-0']
								},
								'span': {
									'text': item.unitofmpurchase.code|spacepad(costingm.getUomCodeLength())|raw,
									'addclasses': ['text-monospace']
								}
							}
						}
					%}
				</div>

				{% include 'util/bootstrap/form/input-group.twig' with {
						'inputgroup': {
							'type': 'append',
							'size': 'sm',
							'p': {
								'value': (item.lastcost / item.unitofmpurchase.conversion)|number_format(costingm.getConfigPo().decimal_places_cost),
								'addclasses': ['text-right', 'border-0']
							},
							'span': {
								'text': 'EACH'|spacepad(costingm.getUomCodeLength())|raw,
								'addclasses': ['text-monospace']
							}
						}
					}
				%}
			</div>
		</div>
	</div>
</div>
{% include 'items/itm/costing/primary-vendor-item.twig' %}
