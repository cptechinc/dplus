<form action="{{ input.url() }}" method="POST" id="cxm-item-form">
	<input type="hidden" name="action" value="update-cxm">
	<input type="hidden" name="original_custitemID" value="{{ item.custitemID }}">
	<input type="hidden" name="updatepdm" value="false">

	<div class="row">
		<div class="col-sm-6">
			{% include 'items/cxm/xref/form/key.twig' %}
			{% include 'items/cxm/xref/form/details.twig' %}
		</div>
		<div class="col-sm-6">
			{% include 'items/cxm/xref/form/header.twig' %}
			{% include 'items/cxm/xref/form/packaging.twig' %}
		</div>
	</div>
	<div class="d-flex justify-content-between align-items-center">
		{% block edit_buttons %}
			{% include 'items/cxm/xref/form/edit-buttons.twig' %}
		{% endblock %}

		<a href="{{ page.xrefExitUrl(item) }}" class="btn btn-warning">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</a>
	</div>
</form>
