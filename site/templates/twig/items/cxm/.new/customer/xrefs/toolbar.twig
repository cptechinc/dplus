{% set values = input.get %}
{% set segments = input.urlSegments() %}
{% set lastsegment = segments[segments|length] %}


<div class="row">
	<div class="col-sm-3">
		<a href="{{ page.custListUrl(values.text('custID')) }}" class="btn btn-primary">
			<i class="fa fa-undo" aria-hidden="true"></i> Back to {{ input.urlSegmentLast()|upper }}
		</a>
	</div>
	<div class="col-sm-3 text-right">
		{% if input.get.text('q') %}
			<a href="{{ page.custUrl(input.get.text('custID')) }}" class="btn btn-warning">
				<i class="fa fa-times"></i> Clear Search
			</a>
		{% endif %}
	</div>

	<div class="col-sm-6">
		{% include 'items/cxm/.new/customer/xrefs/form.twig' %}
	</div>
</div>