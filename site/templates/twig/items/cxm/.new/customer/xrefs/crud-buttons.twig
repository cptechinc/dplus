{% set key = cxm.getRecordlockerKey(xref) %}

{% if cxm.recordlocker.isLocked(key) == false or cxm.recordlocker.userHasLocked(key) %}
	<a href="{{ page.xrefUrl(xref.custid, xref.custitemid) }}" class="btn btn-warning btn-sm">
		<i class="fa fa-pencil" aria-hidden="true"></i> Edit
	</a>
	&nbsp; &nbsp;
	<a href="{{ page.xrefDeleteUrl(xref.custid, xref.custitemid, xref.itemid) }}" class="btn btn-danger btn-sm delete_button">
		<i class="fa fa-trash" aria-hidden="true"></i> Delete
	</a>
{% else %}
	<span class="badge badge-secondary">
		<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ cxm.recordlocker.getLockingUser(key) }}
	</span>
{% endif %}
