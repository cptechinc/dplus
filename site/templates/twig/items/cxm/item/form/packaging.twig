{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	cxm                    module XrefCxm
	recordlocker           module RecordLockerUser
	item                   ItemXrefCustomer
	item.item              ItemMasterItem
#}
<table class="table table-striped table-sm">
	<thead>
		<tr>
			<th class="col-sm-4">Packaging</th>
			<th class="col-sm-4 text-right">Cust</th>
			<th class="col-sm-4 text-right">Item</th>
		</tr>
	</thead>
	<tbody>
		<tr class="form-group">
			<td>
				<label for="qty_pack_inner">Items per Inner</label>
			</td>
			<td>
				<input type="text" class="form-control form-control-sm w-75 text-right float-right" name="qty_pack_inner" id="qty_pack_inner" value="{{ item.qty_pack_inner }}">
			</td>
			<td>
				<p class="form-control-plaintext form-control-sm text-right">{{ item.item.qty_pack_inner }}</p>
			</td>
			<tr class="form-group">
				<td>
					<label for="qty_pack_outer">Items per Outer</label>
				</td>
				<td>
					<input type="text" class="form-control form-control-sm w-75 text-right float-right" name="qty_pack_outer" id="qty_pack_outer" value="{{ item.qty_pack_outer }}">
				</td>
				<td>
					<p class="form-control-plaintext form-control-sm text-right float-right">{{ item.item.qty_pack_outer }}</p>
				</td>
			</tr>
			<tr class="form-group">
				<td>
					<label for="qty_tare">Items per Tare</label>
				</td>
				<td>
					<input type="text" class="form-control form-control-sm w-75 text-right float-right" name="qty_tare" id="qty_tare" value="{{ item.qty_tare }}">
				</td>
				<td>
					<p class="form-control-plaintext form-control-sm text-right">{{ item.item.qty_tare }}</p>
				</td>
			</tr>
		</tr>
	</tbody>
</table>
