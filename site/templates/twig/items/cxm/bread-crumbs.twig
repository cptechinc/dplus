{% extends 'util/bread-crumbs.twig' %}
{% block current_page %}
	{% set values = page.wire('input').get %}
	{% if page.has('custID') %}
		<li class="breadcrumb-item">
			<a href="{{ page.cxmURL(page.custID) }}">
				<i class="fa fa-arrows" aria-hidden="true"></i> {{ page.has('dplus_function') ? page.dplus_function|upper : page.title }}
			</a>
		</li>
		{% if (values.offsetExists('custitemID')) %}
			<li class="breadcrumb-item">
				<a href="{{ page.cxm_customerURL(page.custID) }}">{{ page.custID }}</a>
			</li>
			{% if page.custitemID == 'new' %}
				<li class="breadcrumb-item active" aria-current="page">Create X-ref</li>
			{% else %}
				<li class="breadcrumb-item active" aria-current="page">X-Ref: {{ page.custitemID }}</li>
			{% endif %}
		{% else %}
			{% if values.offsetExists('custID') %}
				<li class="breadcrumb-item active" aria-current="page">{{ page.custID }}</li>
			{% endif %}
		{% endif %}
	{% elseif page.has('itemID') %}
		<li class="breadcrumb-item">
			<a href="{{ page.url }}">{{ page.title }}</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">Item: {{ page.itemID }}</li>
	{% endif %}
{% endblock %}
