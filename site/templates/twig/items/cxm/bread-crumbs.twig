{% extends 'util/bread-crumbs.twig' %}
{% block current_page %}
	{% if page.has('custID') %}
		<li class="breadcrumb-item">
			<a href="{{ page.url }}">
				{{ page.has('dplus_function') ? page.dplus_function|upper : page.title }}
			</a>
		</li>
		{% if (page.has('custitemID')) %}
			<li class="breadcrumb-item">
				<a href="{{ page.cxm_customerURL(page.custID) }}">Customer: {{ page.custID }}</a>
			</li>
			{% if page.custitemID == 'new' %}
				<li class="breadcrumb-item active" aria-current="page">New Item X-ref</li>
			{% else %}
				<li class="breadcrumb-item active" aria-current="page">X-Ref Item: {{ page.custitemID }}</li>
			{% endif %}

		{% else %}
			{% if page.has('custID') %}
				<li class="breadcrumb-item active" aria-current="page">Customer: {{ page.custID }}</li>
			{% endif %}
		{% endif %}
	{% elseif page.has('itemID') %}
		<li class="breadcrumb-item">
			<a href="{{ page.url }}">{{ page.title }}</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">Item: {{ page.itemID }}</li>
	{% endif %}
{% endblock %}
