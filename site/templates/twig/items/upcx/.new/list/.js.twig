$(function() {
	var uri = URI();
	
	if (uri.hasQuery('focus')) {
		var query = uri.search(true);
		var focus = query.focus;

		if ($('[data-key="'+focus+'"]').length) {
			$('[data-key="'+focus+'"]').addClass('highlight');
			// $('html, body').animate({scrollTop: $('[data-key="'+focus+'"]').offset().top,},700,'linear');
		}
	}
});
