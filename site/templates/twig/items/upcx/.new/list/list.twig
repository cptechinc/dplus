{% set response = upcx.getResponse() %}

<div class="row">
	<div class="col-sm-6">
		<h3>
			{{ upcs.getNbResults() }} UPCs
		</h3>
	</div>
	<div class="col-sm-6 text-right">
		<a href="{{ page.xrefCreateUrl() }}" class="btn btn-secondary">
			<i class="fa fa-plus" aria-hidden="true"></i> Add X-Ref
		</a>
	</div>
</div>

<div class="list-group">
	<div class="list-group-item bg-dark text-white">
		<div class="form-row">
			<div class="col-sm-2">
				<a href="{{ page.get_sortURL('upc') }}" class="link">UPC
					{% if page.orderby_column == 'upc' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</div>
			<div class="col-sm-1">
				Qty Per UPC
			</div>
			<div class="col-sm-4">
				<a href="{{ page.get_sortURL('itemid') }}" class="link">Item ID / Description
					{% if page.orderby_column == 'itemid' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</div>
			<div class="col-sm-1">
				<a href="{{ page.get_sortURL('primary') }}" class="link">Primary
					{% if page.orderby_column == 'primary' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</div>
			<div class="col-sm-1">
				<a href="{{ page.get_sortURL('mastercase') }}" class="link">Master Case
					{% if page.orderby_column == 'mastercase' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</div>
			<div class="col-sm-1">Label</div>
			<div class="col-sm-2"></div>
		</div>
	</div>
	{% if xrefs.count() == 0 %}
		<div class="list-group-item bg-light text-center">
			No UPCs Found
		</div>
	{% endif %}

	{% for xref in xrefs %}
		{% set key = upcx.getRecordlockerKey(xref) %}
		<div class="list-group-item" class="{{ response and response.key == key ? 'bg-success text-white' : '' }}" data-upc="{{ xref.upc }}" data-key="{{ key }}">

			<div class="row">
				<div class="col-sm-2 text-monospace">
					{{ xref.upc|replace({' ': '&nbsp;'})|raw }}
				</div>
				<div class="col-sm-1 text-right">
					{{ xref.qty }}
				</div>
				<div class="col-sm-4 text-monospace">
					{{ xref.itemid|replace({' ': '&nbsp;'})|raw }} <br>
					<small>{{ xref.ItemMasterItem.desc }}</small>
				</div>
				<div class="col-sm-1">
					{{ xref.primary|yesorno|capitalize }}
				</div>
				<div class="col-sm-1">
					{{ xref.is_mastercase()|yesorno|capitalize }}
				</div>
				<div class="col-sm-1">
					{{ xref.needslabel|yesorno|capitalize }}
				</div>
				<div class="col-sm-2 text-center">
					{% if upcx.recordlocker.isLocked(key) == false or upcx.recordlocker.userHasLocked(key) %}
						<a href="{{ page.xrefUrl(xref.upc, xref.itemid) }}" class="btn btn-warning btn-sm">
							<i class="fa fa-pencil" aria-hidden="true"></i> Edit
						</a>
						&nbsp; &nbsp;
						<a href="{{ page.xrefDeleteUrl(xref.upc, xref.itemid)}}" class="btn btn-danger btn-sm delete_button" data-delete="UPC {{ xref.upc }}">
							<i class="fa fa-trash" aria-hidden="true"></i> Delete
						</a>
					{% else %}
						<span class="badge badge-secondary">
							<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ upcx.recordlocker.getLockingUser(upcx.getRecordlockerKey(xref)) }}
						</span>
					{% endif %}
				</div>
			</div>
		</div>
	{% endfor %}
</div>