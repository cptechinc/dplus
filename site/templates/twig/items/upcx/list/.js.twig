$(function() {
	var uri = URI();
	if (uri.hasQuery('focus')) {
		var query = uri.search(true);
		var focus = query.focus;

		if ($('tr[data-upc="'+focus+'"]').length) {
			$('tr[data-upc="'+focus+'"]').addClass('highlight');
			$('html, body').animate({scrollTop: $('[data-upc="'+focus+'"]').offset().top,},700,'linear');
		}
	}
});
