{% block header %}
	<div class="row">
		<div class="col-sm-6">
			<h3>
				{% if itemID %}
					{{ upcs.getNbResults() }} UPCs for {{ itemID }}
				{% else %}
					{{ upcs.getNbResults() }} UPCs
				{% endif %}
			</h3>
		</div>
		<div class="col-sm-6 text-right">

		</div>
	</div>
{% endblock %}

<table class="table table-sm">
	<thead>
		<tr class="bg-dark text-white p-3">
			<th class="pt-3 pb-3">
				<a href="{{ page.get_sortURL('upc') }}" class="link">UPC
					{% if page.orderby_column == 'upc' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th class="pt-3 pb-3">Eaches</th>
			{% if itemID == false %}
				<th class="pt-3 pb-3">
					<a href="{{ page.get_sortURL('itemid') }}" class="link">Item ID / Desription
						{% if page.orderby_column == 'itemid' %}
							<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
						{% endif %}
					</a>
				</th>
			{% endif %}
			<th class="pt-3 pb-3">UoM</th>
			<th class="pt-3 pb-3">
				<a href="{{ page.get_sortURL('primary') }}" class="link">Primary
					{% if page.orderby_column == 'primary' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th class="pt-3 pb-3">
				<a href="{{ page.get_sortURL('mastercase') }}" class="link">Master Carton
					{% if page.orderby_column == 'mastercase' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th class="pt-3 pb-3">Label</th>
			<th class="pt-3 pb-3 text-center">
				{% if itemID %}
					<a href="{{ page.upc_create_itemidURL(itemID) }}" class="btn btn-secondary btn-sm">
						<i class="fa fa-plus" aria-hidden="true"></i> Add UPC
					</a>
				{% else %}
					<a href="{{ page.upc_createURL() }}" class="btn btn-secondary btn-sm">
						<i class="fa fa-plus" aria-hidden="true"></i> Add UPC
					</a>
				{% endif %}
			</th>
		</tr>
	</thead>
	<tbody>
		{% if upcs.count() == 0 %}
			<tr>
				<td colspan="8" class="text-center bg-light">
					<strong>No UPCs Found</strong>
				</td>
			</tr>
		{% endif %}
		{% for upc in upcs %}
			<tr class="{{ upc.is_primary() and upc.itemid == itemID ? 'highlight'  : '' }}">
				<td>
					{{ upc.upc }}
				</td>
				<td>
					{{ upc.qty }}
				</td>
				{% if itemID == false %}
					<td>
						{{ upc.itemid }} <br>
						<small>{{ upc.ItemMasterItem.desc }}</small>
					</td>
				{% endif %}
				<td>
					{{ upc.uom }}
				</td>
				<td>
					{{ upc.primary|yesorno|capitalize }}
				</td>
				<td>
					{{ upc.mastercarton|yesorno|capitalize }}
				</td>
				<td>
					{{ upc.needslabel|yesorno|capitalize }}
				</td>
				<td class="text-center">
					{% if upcx.recordlocker.function_locked(upc.upc) == false or upcx.recordlocker.function_locked_by_user( upc.upc) %}
						<a href="{{ page.upcURL(upc.upc) }}" class="btn btn-warning btn-sm">
							<i class="fa fa-pencil" aria-hidden="true"></i> Edit
						</a>
						&nbsp; &nbsp;
						<a href="{{ page.upc_deleteURL(upc.upc)}}" class="btn btn-danger btn-sm delete_button" data-delete="UPC {{ upc.upc }}">
							<i class="fa fa-trash" aria-hidden="true"></i> Delete
						</a>
					{% else %}
						<span class="badge badge-secondary">
							<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ upcx.recordlocker.get_locked_user(upc.upc) }}
						</span>
					{% endif %}
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
