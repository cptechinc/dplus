<table id="vendor-index" class="table table-bordered table-smd">
	<thead>
		<tr>
			<th scope="col">
				<a href="{{ page.get_sortURL('vendorID') }}" class="link">ID</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('name') }}" class="link">Name</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('address') }}" class="link">Address</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('city') }}" class="link">City</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('state') }}" class="link">State</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('zip') }}" class="link">Zip</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if vendors.count() %}
			{% for vendor in vendors %}
				<tr data-vendorid="{{ vendor.id }}">
					<td scope="row">
						<a href="{{ page.mnfrUrl(vendor.id) }}" class="link vendor-link text-monospace" data-vendorid="{{ vendor.id }}" data-name="{{ vendor.name }}">
							<strong>{{ vendor.id|replace({' ': '&nbsp;'})|raw }}</strong>
						</a>
					</td>
					<td>{{ vendor.name }}</td>
					<td>{{ vendor.address }}</td>
					<td>{{ vendor.city }}</td>
					<td>{{ vendor.state }}</td>
					<td>{{ vendor.zip }}</td>
				</tr>
			{% endfor %}
		{% else %}
			<tr>
				<td colspan="6" class="bg-secondary text-white text-center">
					No Results found
				</td>
			</tr>
		{% endif %}
	</tbody>
</table>
