{% set values = input.get %}
{% set segments = input.urlSegments() %}
{% set lastsegment = segments[segments|length] %}


<div class="row">
	<div class="col-sm-3">
		<a href="{{ page.url }}" class="btn btn-primary">
			<i class="fa fa-undo" aria-hidden="true"></i> Back to Maintenance
		</a>
	</div>
	<div class="col-sm-3 text-right">
		{% if input.get.text('q') %}
			<a href="{{ input.url() }}" class="btn btn-warning">
				<i class="fa fa-times"></i> Clear Search
			</a>
		{% endif %}
	</div>

	<div class="col-sm-6">
		<form action="{{ input.paginateUrl(1, {'includeQueryString': false}) }}" method="GET" class="allow-enterkey-submit">
			<div class="input-group">
				<input class="form-control inline" type="text" name="q" value="{{ input.get.text('q') }}" placeholder="Search Manufacturers by ID, Name, Address, City, State, Zip" autofocus>
				<span class="input-group-btn">
					<button type="submit" class="btn btn-light">
						<i class="fa fa-search"></i> <span class="sr-only">Search</span>
					</button>
				</span>
			</div>
		</form>
	</div>
</div>