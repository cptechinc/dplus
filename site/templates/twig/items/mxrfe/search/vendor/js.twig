$(function() {
	{% if input.get.offsetExists('focus') and input.get.text('focus') != 'new' %}
		$('tr[data-vendorid="{{ input.get.text('focus') }}"]').addClass('highlight');
		// $('html, body').animate({scrollTop: $('[data-vendorid="{{ input.get.text('focus') }}"]').offset().top,},700,'linear');
	{% endif %}

	$("body").on('change', 'input[name=mnfrID]', function(e) {
		e.preventDefault();
		var input = $(this);
		
		var ajax = new AjaxRequest('{{ page.jsonApiUrl('map/validate/mxrfe/vendorid/') }}');
		ajax.setData({mnfrID: input.val()});
		ajax.request(function(exists) {
			if (exists) {
				swal2.fire({
					title: "Manufacturer " + input.val() + " exists",
					text: 'Edit X-Ref Items?',
					icon: 'question',
					showCancelButton: true,
					confirmButtonText: 'Yes',
					cancelButtonText: 'No',
				}).then((result) => {
					if (result.value) {
						var uri = new URI();
						uri.addQuery('mnfrID', input.val());
						window.location.href = uri.toString();
					} else {
						input.val('');
					}
				});
			}
		});
	});

/* =============================================================
	Lookup Modal Functions
============================================================= */
	var modal_ajax = $('#ajax-modal');

	modal_ajax.on('show.bs.modal', function (event) {
		var modal = $(this);
		var button = $(event.relatedTarget); // Button that triggered the modal
		if (button.closest('form').length) {
			button.closest('form').find('input[name=mnfrID]').val('');
			button.closest('form').validate().resetForm();
		}
		var url = button.data('lookupurl');
		modal.attr('data-input', button.data('input'));

		modal.find('.modal-title').text(button.attr('title'));
		modal.resizeModal('xl');
		modal.find('.modal-body').loadin(url, function() {});
	});

	$("body").on('click', '#ajax-modal .vendor-link', function(e) {
		e.preventDefault();
		var button = $(this);
		var vendorID = button.data('vendorid');
		var modal = button.closest('.modal');
		var input = $(modal.attr('data-input'));
		input.val(vendorID);
		input.change();
		modal.modal('hide');
	});

	$("body").on('submit', '#ajax-modal form', function(e) {
		e.preventDefault();
		var form = $(this);
		var query = form.serialize();
		var action = form.attr('action');
		var search = form.find('input[name=q]').val();
		search = search.length ? search : 'Manufacturers';
		var url = action + '?' + query;
		{# form.closest('.modal').find('.modal-title').text('Searching for ' + search); #}
		form.closest('.modal').find('.modal-body').loadin(url, function() {});
	});

	$("body").on('click', '#ajax-modal .paginator-link', function(e) {
		e.preventDefault();
		var href = $(this).attr('href');
		modal_ajax.find('.modal-body').load(href);
	});

	$("body").on('click', '#ajax-modal a.sort', function(e) {
		e.preventDefault();
		var button = $(this);
		var modal  = button.closest('.modal');
		modal.find('.modal-body').load(button.attr('href'));
	});

	$("body").on('click', '#ajax-modal a.clear-search', function(e) {
		e.preventDefault();
		var button = $(this);
		var modal  = button.closest('.modal');
		modal.find('.modal-body').load(button.attr('href'));
	});

/* =============================================================
	New X-ref Modal Functions
============================================================= */
	var modal_new = $('#new-xref-modal');

	modal_new.on('show.bs.modal', function (event) {
		var modal = $(this);
		modal.find('input[name=vendorID]').val('');
		modal.find('form').validate().resetForm();
	});

	modal_new.on('shown.bs.modal', function (event) {
		var modal = $(this);
		modal.find('input[name=mnfrID]').focus();
		modal.find('form').validate().resetForm();
	});

	var validator = $('#new-xref-form').validate({
		errorClass: "is-invalid",
		validClass: "is-valid",
		errorPlacement: function(error, element) {
			error.insertAfter(element).addClass('invalid-feedback');
		},
		rules: {
			mnfrID: {
				required: true,
				remote: {
					url: '{{ page.jsonApiUrl('map/validate/vendorid/') }}',
					type: "get",
					data: {
						vendorID: function() {
							return $('input[name=mnfrID]').val();
						}
					}
				}
			},
		},
		messages: {
			mnfrID: "Use a valid Manufacturer ID",
		},
		submitHandler: function(form) {
			form.submit();
		}
	});
});
