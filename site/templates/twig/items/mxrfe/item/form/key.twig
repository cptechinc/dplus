<div class="row form-group">
	<div class="col-sm-3">
		<label for="vendorID">Vendor ID</label>
	</div>
	<div class="col-sm-8">
		{% include 'util/form/input-with-modal-lookup.twig' with {
				'name': 'mnfrID', 'value': xref.vendorid,
				'attributes': {
					'readonly': xref.vendorid ? true : false,
					'tabindex': xref.vendorid ? '-1' : ''
				},
				'modaltarget': '#ajax-modal',
				'modaldescription': 'Search for / Choose Vendor',
				'attributes_button': {
					'data-search': 'vendor'
				}
			}
		%}
	</div>
</div>

<div class="row form-group">
	<div class="col-sm-3">
		<label for="mnfritemID"><b>Vendor Item ID</b></label>
	</div>
	<div class="col-sm-8">
		{% include 'util/form/input.twig' with {
				'name': 'mnfritemID', 'value': xref.vendoritemid,
				'attributes': {
					'data-vendoritemid': xref.vendoritemid,
					'data-new': xref.isNew() ? 'true' : 'false',
					'readonly': xref.vendoritemid ? true : false,
					'tabindex': xref.vendoritemid ? '-1' : '',
				}
			}
		%}
	</div>
</div>
<div class="row form-group">
	<div class="col-sm-3">
		<b>Our Item ID</b>
	</div>
	<div class="col-sm-8 item-col">
		{% include 'util/form/input-with-modal-lookup.twig' with {
				'name': 'itemID', 'value': xref.itemid,
				'attributes': {
					'readonly': xref.itemid ? true : false,
					'tabindex': xref.itemid ? '-1' : '',
				},
				'modaltarget': '#ajax-modal',
				'modaldescription': 'Search for / Choose Item',
				'attributes_button': {
					'data-search': 'item'
				}
			}
		%}
		<small class="form-text text-muted description">{{ xref.imitem.description }}</small>
		<small class="form-text text-muted description2">{{ xref.imitem.description2 }}</small>
	</div>
</div>
