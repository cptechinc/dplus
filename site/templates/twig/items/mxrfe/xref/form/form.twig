{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	mxrfe                  module XrefMxrfe
	xref                   ItemXrefManufacturer
	vendor                 Vendor
#}
<form action="{{ page.fullURL.getURL() }}" method="POST" id="mxrfe-xref-form">
	<input type="hidden" name="action" value="update-xref">

	<div class="row mb-3">
		<div class="col-sm-8">
			{% include 'items/mxrfe/xref/form/key.twig' %}
			{% include 'items/mxrfe/xref/form/details.twig' %}
			{% include 'items/mxrfe/xref/form/notes.twig' %}
		</div>
	</div>

	<div class="d-flex justify-content-between align-xrefs-center">
		{% block edit_actions %}
			{% include 'items/mxrfe/xref/form/edit-buttons.twig' %}
		{% endblock %}
		
		<a href="{{ page.xrefExitUrl(xref) }}" class="btn btn-warning">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</a>
	</div>
</form>
