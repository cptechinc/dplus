{% if mxrfe.recordlocker.isLocked(mxrfe.get_recordlocker_key(xref)) == false or mxrfe.recordlocker.userHasLocked(mxrfe.get_recordlocker_key(xref)) %}
	<a href="{{ page.xrefUrl(xref.vendorid, xref.vendoritemid, xref.itemid) }}" class="btn btn-warning btn-sm">
		<i class="fa fa-pencil" aria-hidden="true"></i> Edit
	</a>
	&nbsp;
	<a href="{{ page.xrefDeleteUrl(xref.vendorid, xref.vendoritemid, xref.itemid) }}" class="btn btn-danger btn-sm delete_button">
		<i class="fa fa-trash" aria-hidden="true"></i> Delete
	</a>
{% else %}
	<span class="badge badge-secondary">
		<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ mxrfe.recordlocker.getLockingUser(mxrfe.get_recordlocker_key(xref)) }}
	</span>
{% endif %}
