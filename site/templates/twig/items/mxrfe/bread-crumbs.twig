{% extends 'util/bread-crumbs.twig' %}
{% block current_page %}
	{% if page.wire('input').get.offsetExists('mnfrID') %}
		<li class="breadcrumb-item">
			<a href="{{ page.url }}">
				<i class="fa fa-arrows" aria-hidden="true"></i> {{ page.has('dplus_function') ? page.dplus_function|upper : page.title }}
			</a>
		</li>
		{% if (page.wire('input').get.offsetExists('mnfritemID')) %}
			<li class="breadcrumb-item">
				<a href="{{ page.manufacturerURL(page.mnfrID) }}">Mnfr / Comp: {{ page.mnfrID }}</a>
			</li>
			{% if page.mnfritemID == 'new' %}
				<li class="breadcrumb-item active" aria-current="page">New Item X-ref</li>
			{% else %}
				<li class="breadcrumb-item active" aria-current="page">X-Ref Item: {{ page.mnfritemID }}</li>
			{% endif %}
		{% else %}
			{% if page.wire('input').get.offsetExists('mnfrID') and page.mnfrID %}
				<li class="breadcrumb-item active" aria-current="page">
					<i class="fa fa-user" aria-hidden="true"></i> Mnfr / Comp: {{ page.mnfrID }}
				</li>
			{% endif %}
		{% endif %}
	{% elseif page.wire('input').get.offsetExists('itemID') %}
		<li class="breadcrumb-item">
			<a href="{{ page.url }}">{{ page.title }}</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">Item: {{ page.itemID }}</li>
	{% endif %}
{% endblock %}
