{#
	Twig file for Generated Labels Rows for a section

	Variable              Notes                                            Example
	--------------------------------------------------------------------------------------
	var module_formatter  Formatter Module example                         SfCiSaleHistory
	var blueprint         Blueprint array generated by Formatter Module
	var section           section of blueprint                             detail
	var record            Row Data for (detail line, etc.)
	var trclass           Optional HTML Class to apply to tr               collapse, show, etc.
#}

{% for x in 1..blueprint[section]['rowcount'] %}
	<tr class="{{ trclass }}">
		{% set columncount = 0 %}
		{% for i in 1..blueprint['cols'] + 1 %}
			{% set colspan = 0 %}
			{% if blueprint[section]['rows'][x]['columns'][i] %}
				{% set column = blueprint[section]['rows'][x]['columns'][i] %}
				{% set colspan = column['col-length'] %}
				<td colspan="{{ colspan }}" class="{{ module_formatter.get_justifyclass(column['data-justify']) }}">
					{{ module_formatter.format_celldata(record, column) }}
				</td>
			{% else %}
				{% if columncount < blueprint['cols'] %}
					{% set colspan = 1 %}
					<td></td>
				{% endif %}
			{% endif %}
			{% set columncount = columncount + colspan %}
		{% endfor %}
	</tr>
{% endfor %}
