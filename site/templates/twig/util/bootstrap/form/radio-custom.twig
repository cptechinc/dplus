{% set tinput = twiginput(input) %}

<div class="custom-control custom-radio">
	<input type="radio" id="{{ tinput.id() }}" name="{{ tinput.name }}" class="custom-control-input" value="{{ tinput.value }}" {{ tinput.attributes()|raw }}>
	<label class="custom-control-label" for="{{ tinput.id() }}">{{ input.label }}</label>
</div>
