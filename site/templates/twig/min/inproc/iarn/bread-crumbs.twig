{% extends 'util/bread-crumbs.twig' %}

{% set values = input.get %}

{% block current_page %}
	<li class="breadcrumb-item">
		<a href="{{ page.url }}">
			<i class="fa fa-list" aria-hidden="true"></i> {{ page.has('dplus_function') ? page.dplus_function|upper : page.title }}
		</a>
	</li>

	{% if values.offsetExists('id') and values.text('id') != 'new' %}
		<li class="breadcrumb-item">
			<a href="{{ page.codeListUrl(values.text('id')) }}">
				IARN
			</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">{{ values.text('id') }}</li>
	{% else %}
		<li class="breadcrumb-item active" aria-current="page">IARN</li>
	{% endif %}
{% endblock %}
