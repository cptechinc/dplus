<div class="table-responsive">
	<table class="table table-sm">
		<thead>
			<tr class="bg-dark text-white">
				<th class="py-2">
					<a href="{{ page.get_sortURL('code') }}" class="link">Code
						{% if page.orderby_column == 'code' %}
							<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
						{% endif %}
					</a>
				</th>
				<th class="py-2">
					<a href="{{ page.get_sortURL('description') }}" class="link">Description
						{% if page.orderby_column == 'description' %}
							<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
						{% endif %}
					</a>
				</th>
				<th class="py-2">Sys</th>
				<th class="py-2 text-center">
					<a href="{{ page.codeNewUrl() }}" class="btn btn-light btn-sm">
						<i class="fa fa-plus" aria-hidden="true"></i> Add
					</a>
				</th>
			</tr>
		</thead>
		<tbody>
			{% for reason in reasons %}
				<tr data-id="{{ reason.id }}">
					<td>{{ reason.id }}</td>
					<td>{{ reason.description }}</td>
					<td>{{ reason.sys_defined|yesorno|capitalize }}</td>
					<td class="text-center">
						{% if iarn.recordlocker.isLocked(reason.id) == false or iarn.recordlocker.userHasLocked(reason.id) %}
							<a href="{{ page.codeUrl(reason.id) }}" class="btn btn-warning btn-sm">
								<i class="fa fa-pencil" aria-hidden="true"></i> Edit
							</a>
							{% if reason.isSysDefined() == false %}
								&nbsp; &nbsp;
								<a href="{{ page.codeDeleteUrl(reason.id) }}" class="btn btn-danger btn-sm delete_button" data-delete="Reason Code {{ reason.id }}">
									<i class="fa fa-trash" aria-hidden="true"></i> Delete
								</a>
							{% endif %}
						{% else %}
							<span class="badge badge-secondary">
								<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ iarn.recordlocker.getLockingUser(reason.id) }}
							</span>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
