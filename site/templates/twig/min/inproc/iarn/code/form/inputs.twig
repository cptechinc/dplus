<div class="form-group row">
	<div class="col-sm-4">
		<label for="code">Code</label>
	</div>
	<div class="col-sm-8">
		{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'code',
					'value': reason.id,
					'size': 'sm',
					'attributes': {
						'readonly': reason.isNew() == false,
						'tabindex': reason.isNew() ? '-1' : '',
					}
				}
			}
		%}
	</div>
</div>
<div class="form-group row">
	<div class="col-sm-4">
		<label for="description">Description</label>
	</div>
	<div class="col-sm-8">
		{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'description',
					'value': reason.description,
					'size': 'sm'
				}
			}
		%}
	</div>
</div>
<div class="form-group row">
	<div class="col-sm-4">
		<label for="sysdefined">System Defined</label>
	</div>
	<div class="col-sm-8">
		<p class="form-control-plaintext" id="sysdefined">{{ reason.isSysDefined()|yesorno|capitalize }}</p>
	</div>
</div>
