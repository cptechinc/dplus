class AddmAlerts extends Alerts {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new AddmAlerts();
		}
		return this.instance;
	}

	xrefExists(itemID, addonID, callback) {
		swal2.fire({
			title: 'Add-On Item Exists',
			text: 'Edit ' + itemID + ' - '+ addonID +'?',
			icon: 'question',
			showCancelButton: true,
			confirmButtonText: 'Yes'
		}).then(function (result) {
			if (result.value) {
				callback(true);
				return true;
			}
			callback(false);
			return false
		});
	}
}
