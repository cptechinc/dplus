class AddmAlerts {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new AddmAlerts();
		}
		return this.instance;
	}

	xrefExists(itemID, addonID, callback) {
		swal2.fire({
			title: 'Add-on Item Exists',
			text: 'Edit ' + itemID + ' - '+ addonID +'?',
			icon: 'question',
			showCancelButton: true,
			confirmButtonText: 'Yes'
		}).then(function (result) {
			if (result.value) {
				callback(true);
				return true;
			}
			callback(false);
			return false
		});
	}

	unsavedChanges(callback) {
		swal2.fire({
			title: 'Changes have occurred!',
			text: 'Do you want to save?',
			icon: 'warning',
			showCancelButton: true,
			confirmButtonText: '<i class="fa fa-floppy-o" aria-hidden="true"></i> Yes',
			cancelButtonText: 'No',
		}).then((result) => { // Return True for save, false for dismiss
			if (result.value) {
				callback(true)
			} else if (result.dismiss === Swal.DismissReason.cancel) {
				callback(false);
			}
		});
	}

}
