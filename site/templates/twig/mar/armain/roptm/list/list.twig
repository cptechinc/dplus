<table class="table table-sm">
	<thead>
		<tr class="bg-dark text-white p-3">
			<th class="pt-3 pb-3">Code</th>
			<th class="pt-3 pb-3">Description</th>
			<th class="pt-3 pb-3">Validate</th>
			<th class="pt-3 pb-3">Force</th>
			<th class="pt-3 pb-3">Note Seq</th>
			<th class="pt-3 pb-3 text-center">
				<a href="{{ page.codeAddUrl() }}" class="btn btn-light btn-sm">
					<i class="fa fa-plus" aria-hidden="true"></i> Add
				</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if codes.count() == 0 %}
			<tr>
				<td colspan="6" class="text-center bg-light">
					<strong>No Codes Found</strong>
				</td>
			</tr>
		{% endif %}

		{% for code in codes %}
			<tr data-id="{{ code.id }}">
				<td>{{ code.id }}</td>
				<td>{{ code.description }}</td>
				<td>{{ code.validate|yesorno|capitalize }}</td>
				<td>{{ code.force|yesorno|capitalize }}</td>
				<td>{{ code.notecode }}</td>
				<td class="text-center">
					{% if sysop.recordlocker.isLocked(sysop.getRecordlockerKey(code)) == false or sysop.recordlocker.userHasLocked(sysop.getRecordlockerKey(code)) %}
						<a href="{{ page.codeEditUrl(code.id) }}" class="btn btn-warning btn-sm">
							<i class="fa fa-pencil" aria-hidden="true"></i> Edit
						</a>
						&nbsp; &nbsp;
						<a href="{{ page.codeDeleteUrl(code.id) }}" class="btn btn-danger btn-sm delete_button" data-delete="Code {{ code.id }}">
							<i class="fa fa-trash" aria-hidden="true"></i> Delete
						</a>
					{% else %}
						<span class="badge badge-secondary">
							<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ sysop.recordlocker.getLockingUser(sysop.getRecordlockerKey(code)) }}
						</span>
					{% endif %}
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
