<table class="table table-sm">
	<thead>
		<tr class="bg-dark text-white p-3">
			<th class="pt-3 pb-3">
				<a href="{{ page.get_sortURL('id') }}" class="link"> ID
					{% if page.orderby_column == 'id' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th class="pt-3 pb-3">
				<a href="{{ page.get_sortURL('name') }}" class="link"> Name
					{% if page.orderby_column == 'name' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th class="pt-3 pb-3">
				<a href="{{ page.get_sortURL('group') }}" class="link">Group
					{% if page.orderby_column == 'group' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th class="pt-3 pb-3">
				<a href="{{ page.get_sortURL('lastsale') }}" class="link">Last Sale
					{% if page.orderby_column == 'lastsale' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th class="pt-3 pb-3">
				<a href="{{ page.get_sortURL('userid') }}" class="link">Login ID
					{% if page.orderby_column == 'userid' %}
						<i class="fa fa-sort-alpha-{{ page.orderby_sort|lower }}" aria-hidden="true"></i>
					{% endif %}
				</a>
			</th>
			<th class="pt-3 pb-3 text-center">
				<a href="{{ page.add_salespersonURL() }}" class="btn btn-light btn-sm">
					<i class="fa fa-plus" aria-hidden="true"></i> Add
				</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if people.count() == 0 %}
			<tr>
				<td colspan="6" class="text-center bg-light">
					<strong>Sales People Found</strong>
				</td>
			</tr>
		{% endif %}

		{% for person in people %}
			<tr data-id="{{ person.id }}">
				<td>
					{{ person.id }}
				</td>
				<td>
					{{ person.name }}
				</td>
				<td>
					{{ person.groupid }}
				</td>
				<td>
					{{ person.lastsaledate|convertdate }}
				</td>
				<td>
					{{ person.userid }}
				</td>
				<td class="text-center">
					{% if spm.recordlocker.function_locked(person.id) == false or spm.recordlocker.function_locked_by_user(person.id) %}
						<a href="{{ page.edit_salespersonURL(person.id) }}" class="btn btn-warning btn-sm">
							<i class="fa fa-pencil" aria-hidden="true"></i> Edit
						</a>
						&nbsp; &nbsp;
						<a href="{{ page.delete_salespersonURL(person.id) }}" class="btn btn-danger btn-sm delete_button" data-delete="UPC {{ person.id }}">
							<i class="fa fa-trash" aria-hidden="true"></i> Delete
						</a>
					{% else %}
						<span class="badge badge-secondary">
							<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ spm.recordlocker.get_locked_user(person.id) }}
						</span>
					{% endif %}
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
