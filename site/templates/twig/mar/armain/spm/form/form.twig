<form action="{{ page.fullURL.getURL() }}" method="POST" id="spm-form" data-new="{{ person.isNew() ? 'true' : 'false'}}">
	<input type="hidden" name="action" value="update">
	<div class="mb-3">
		<div class="row">
			<div class="col-sm-8">
				{% include 'mar/armain/spm/form/fields.twig' %}
			</div>
		</div>
	</div>
	<div class="d-flex justify-content-between align-items-center">
		{#
			Only show Edit Actions if the Item is
			1. Locked for editing by the User
			2. Is a new Item
			NOTE: Only show delete if item already exists.
		#}
		{% if spm.recordlocker.function_locked_by_user(person.id) or person.isNew() %}
			<button type="submit" class="btn btn-success">
				<i class="fa fa-floppy-o" aria-hidden="true"></i> Save
			</button>

			{% if item.isNew() == false %}
				<a href="{{ page.delete_salespersonURL(person.id) }}" class="btn btn-danger delete_button">
					<i class="fa fa-trash" aria-hidden="true"></i> Delete
				</a>
			{% endif %}
		{% endif %}

		<a href="{{ page.spmURL(person.id) }}" class="btn btn-warning">
			<i class="fa fa-times" aria-hidden="true"></i> Close
		</a>
	</div>
</form>
