			<input type="text" name="phoneintl" class="form-control form-control-sm phone-input-intl" id="phoneintl">
		</div>
		<div class="col-sm-6 form-group">
			<label for="extensionintl">Extension</label>
			<input type="text" name="extensionintl" class="form-control form-control-sm" id="extensionintl" maxlength="{{ manager.fieldAttribute('extensionintl', 'maxlength') }}">
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6 form-group">
			<label for="faxintl">Fax Number</label>
			<input type="text" name="faxintl" class="form-control form-control-sm phone-input-intl" id="faxintl">
		</div>
	</div>
</div>