<div class="mb-2">
	{% include 'mar/armain/cmm/edit/form/ar-code.twig' with {
			'label': 'Terms Code',
			'name': 'termscode',
			'value': customer.termscode,
			'description': cmm.descriptionTermscode(customer.termscode),
			'searchTitleDescription': 'Terms Codes',
			'ajaxLookupPath': 'mar/trm'
		}
	%}
</div>

