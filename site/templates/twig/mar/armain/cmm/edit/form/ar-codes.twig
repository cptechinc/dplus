	{% include 'mar/armain/cmm/edit/form/ar-code.twig' with {
			'label': 'Ship Via',
			'name': 'shipviacode',
			'value': customer.shipviacode,
			'description': cmm.descriptionShipvia(customer.shipviacode),
			'searchTitleDescription': 'Ship Vias',
			'ajaxLookupPath': 'mar/csv'
		}
	%}
</div>

<div class="mb-2">
	{% include 'mar/armain/cmm/edit/form/ar-code.twig' with {
