<div class="mb-2">
	<div class="row">
		<div class="col-sm-3">
			<label for="stmtcode">Stmnt Code</label>
		</div>
		<div class="col-sm-3">
			<select name="stmtcode" class="form-control form-control-sm validate-ignore selectpicker" data-style="" data-styleBase="form-control" id="state">
				{% for value, label in cmm.fieldAttribute('stmtcode', 'options') %}
					<option value="{{ value }}" title="{{ label }}" {{ customer.stmtcode == value ? 'selected' : ''}}>
						{{ value }} - {{ label }}
					</option>
				{% endfor %}
			</select>
		</div>
	</div>
</div>
