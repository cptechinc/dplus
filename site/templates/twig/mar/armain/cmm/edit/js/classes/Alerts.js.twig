class CmmAlerts extends Alerts {
	static instance = null;

	static getInstance() {
		if (this.instance === null) {
			this.instance = new CmmAlerts();
		}
		return this.instance;
	}

	custExists(id, callback) {
		swal2.fire({
			title: 'Customer Exists',
			text: 'Edit Cmm ' + id + '?',
			icon: 'question',
			showCancelButton: true,
			confirmButtonText: 'Yes'
		}).then(function (result) {
			if (result.value) {
				callback(true);
				return true;
			}
			callback(false);
			return false;
		});
	}
}
