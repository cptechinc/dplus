{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	cmm                    Dplus\Mar\Cmm
#}
<table class="table table-sm table-bordered">
	<thead>
		<tr class="bg-dark text-white">
			<th>ID</th>
			<th>Name</th>
			<th>Address</th>
			<th>City</th>
			<th>State</th>
			<th>Zip</th>
			<th class="text-center">
				{% if page.is_print() == false %}
					<a href="{{ page.custAddUrl() }}" class="btn btn-light btn-sm">
						<i class="fa fa-plus" aria-hidden="true"></i> Add Customer
					</a>
				{% endif %}
			</th>
		</tr>
	</thead>
	<tbody>
		{% for customer in customers %}
			<tr data-id="{{ customer.id }}">
				<td>{{ customer.id }}</td>
				<td>{{ customer.name }}</td>
				<td>{{ customer.address1 }}</td>
				<td>{{ customer.city }}</td>
				<td>{{ customer.state }}</td>
				<td>{{ customer.zip }}</td>
				<td class="text-center">
					{% if cmm.recordlocker.isLocked(cmm.getRecordlockerKey(customer)) == false or cmm.recordlocker.userHasLocked(cmm.getRecordlockerKey(customer)) %}
						<a href="{{ page.custEditUrl(customer.id) }}" class="btn btn-warning btn-sm">
							<i class="fa fa-pencil" aria-hidden="true"></i> Edit
						</a>
						&nbsp;
						<a href="{{ page.custDeleteUrl(customer.id) }}" class="btn btn-danger btn-sm delete_button">
							<i class="fa fa-trash" aria-hidden="true"></i> Delete
						</a>
					{% else %}
						<span class="badge badge-secondary">
							<i class="fa fa-lock" aria-hidden="true"></i> Locked By {{ cmm.recordlocker.getLockingUser(cmm.getRecordlockerKey(customer)) }}
						</span>
					{% endif %}
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
