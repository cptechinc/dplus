{% extends 'customers/ci/display.twig' %}

{% block links %}
	<div class="p-2 px-3 card-toolbar">
		<div class="d-flex justify-content-between align-items-center">
			<div></div>
			<div></div>
			<a href="{{ page.ciUrl(customer.id) }}" class="btn btn-primary {{ page.is_print() ? 'd-print-none' : ''}}">
				<i class="fa fa-undo" aria-hidden="true"></i> {{ customer.id }}
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-sm-6">
			{% include 'customers/ci/contact/edit/readonly.twig' %}
		</div>
		<div class="col-sm-6">
			{% include 'customers/ci/contact/edit/form.twig' %}
		</div>
	</div>
{% endblock %}

{% block footer %}
	<div class="card-footer">
		<div class="d-flex justify-content-between align-items-center">
			<div></div>
			<div></div>
			<a href="{{ page.ciUrl(customer.id) }}" class="btn btn-warning btn-sm">
				<i class="fa fa-times" aria-hidden="true"></i> Close
			</a>
		</div>
	</div>
{% endblock %}
