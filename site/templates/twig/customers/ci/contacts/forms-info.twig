<h3>Forms Information</h3>

<table class="table table-striped table-sm">
	<thead>
		<tr>
			{% for column in json['columns']['forms'] %}
				<th class="{{ module_json.get_justifyclass(column['headingjustify']) }}">
					{{ column['heading']}}
				</th>
			{% endfor %}
		</tr>
	</thead>
	<tbody>
		{% for form in json['data']['forms'] %}
			<tr>
				{% for key, column in json['columns']['forms'] %}
					<td class="{{ module_json.get_justifyclass(column['datajustify']) }}">
						{{ form[key]}}
					</td>
				{% endfor %}
			</tr>
		{% endfor %}
	</tbody>
</table>
