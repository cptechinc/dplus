<table id="cust-index" class="table table-bordered">
	<thead>
		<tr>
			<th scope="col">
				<a href="{{ page.get_sortURL('shiptoid') }}" class="link">Ship-To</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('contact') }}" class="link">Contact Name</a>
			</th>
			<th scope="col">Address</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('city') }}" class="link">City</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('state') }}" class="link">State</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('zip') }}" class="link">Zip</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if contacts.count() %}
			{% for contact in contacts %}
				<tr>
					<td scope="row">
						<strong>{{ contact.shiptoid }}</strong>
					</td>
					<td>{{ contact.contact }}</td>
					<td>{{ contact.addr1 }}</td>
					<td>{{ contact.city }}</td>
					<td>{{ contact.state }}</td>
					<td>{{ contact.zip }}</td>
				</tr>
			{% endfor %}
		{% else %}
			<tr>
				<td colspan="7" class="bg-secondary text-white text-center">
					No Results found
				</td>
			</tr>
		{% endif %}
	</tbody>
</table>
