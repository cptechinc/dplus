<h3>Customer Credit</h3>

<div class="row">
	<div class="col-sm-6">
		<table class="table table-striped table-bordered table-sm">
			{% for key, column in json['columns']['left'] %}
				<tr>
					<td class="font-weight-bold {{ module_json.get_justifyclass(column['headingjustify']) }}">{{ column['heading']}}</td>
					<td class="{{ module_json.get_justifyclass(column['datajustify']) }}">{{ json['data']['left'][key] }}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
	<div class="col-sm-6">
		<table class="table table-striped table-bordered table-sm">
			{% for key, column in json['columns']['right'] %}
				<tr>
					<td class="font-weight-bold {{ module_json.get_justifyclass(column['headingjustify']) }}">{{ column['heading']}}</td>
					<td class="{{ module_json.get_justifyclass(column['datajustify']) }}">{{ json['data']['right'][key] }}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
</div>
<div class="row">
	<div class="col-sm-6">
		<table class="table table-striped table-bordered table-sm">
			{% for key, column in json['columns']['notes'] %}
				<tr>
					<td class="font-weight-bold {{ module_json.get_justifyclass(column['headingjustify']) }}">{{ column['heading']}}</td>
					<td class="{{ module_json.get_justifyclass(column['datajustify']) }}">{{ json['data']['notes'][key] }}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
</div>
