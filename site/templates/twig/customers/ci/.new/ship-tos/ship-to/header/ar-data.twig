<div class="card">
	<div class="card-header">
		<span class="h5">AR</span>
	</div>
	<ul class="list-group list-group-flush">
		<li class="list-group-item p-1">
			<div class="row">
				<div class="col-sm-10 text-bold">
					Warehouse:
				</div>
				<div class="col-sm-2">
					{{ shipto.warehouse }}
				</div>
			</div>
		</li>
		<li class="list-group-item p-1">
			<div class="row">
				<div class="col-sm-10 text-bold">
					Ship Via:
				</div>
				<div class="col-sm-2">
					{{ shipto.shipvia }}
				</div>
			</div>
		</li>
		<li class="list-group-item p-1">
			<div class="row">
				<div class="col-sm-10 text-bold">
					Current Finance Charge:
				</div>
				<div class="col-sm-2">
					{{ shipto.taxcode }}
				</div>
			</div>
		</li>
		<li class="list-group-item p-1">
			<div class="row">
				<div class="col-sm-10 text-bold">
					Type:
				</div>
				<div class="col-sm-2">
					{{ shipto.type }}
				</div>
			</div>
		</li>
		<li class="list-group-item p-1">
			<div class="row">
				<div class="col-sm-10 text-bold">
					Price Code:
				</div>
				<div class="col-sm-2">
					{{ shipto.pricecode }}
				</div>
			</div>
		</li>
		<li class="list-group-item p-1">
			<div class="row">
				<div class="col-sm-10 text-bold">
					Credit Hold:
				</div>
				<div class="col-sm-2">
					{{ shipto.credithold|yesorno|capitalize }}
				</div>
			</div>
		</li>
		<li class="list-group-item p-1">
			<div class="row">
				<div class="col-sm-10 text-bold">
					Tax Exempt:
				</div>
				<div class="col-sm-2">
					{{ shipto.is_taxexempt() ? shipto.taxexemptcode : 'N/A' }}
				</div>
			</div>
		</li>
	</ul>
</div>
