<div class="card">
	<div class="card-header">
		<span class="h5">Customer AR</span>
	</div>
	<ul class="list-group list-group-flush">
		<li class="list-group-item">
			<div class="row">
				<div class="col-sm-10">
					Warehouse:
				</div>
				<div class="col-sm-2">
					{{ customer.warehouse }}
				</div>
			</div>
		</li>
		<li class="list-group-item">
			<div class="row">
				<div class="col-sm-10">
					Ship Via:
				</div>
				<div class="col-sm-2">
					{{ customer.shipvia }}
				</div>
			</div>
		</li>
		<li class="list-group-item">
			<div class="row">
				<div class="col-sm-10">
					Current Finance Charge:
				</div>
				<div class="col-sm-2">
					{{ customer.taxcode }}
				</div>
			</div>
		</li>
		<li class="list-group-item">
			<div class="row">
				<div class="col-sm-10">
					Type:
				</div>
				<div class="col-sm-2">
					{{ customer.type }}
				</div>
			</div>
		</li>
		<li class="list-group-item">
			<div class="row">
				<div class="col-sm-10">
					Terms Code:
				</div>
				<div class="col-sm-2">
					{{ customer.termscode }}
				</div>
			</div>
		</li>
		<li class="list-group-item">
			<div class="row">
				<div class="col-sm-10">
					Price Code:
				</div>
				<div class="col-sm-2">
					{{ customer.pricecode }}
				</div>
			</div>
		</li>
		<li class="list-group-item">
			<div class="row">
				<div class="col-sm-10">
					Credit Hold:
				</div>
				<div class="col-sm-2">
					{{ yesorno(customer.credithold)|capitalize }}
				</div>
			</div>
		</li>
		<li class="list-group-item">
			<div class="row">
				<div class="col-sm-10">
					Tax Exempt:
				</div>
				<div class="col-sm-2">
					{{ customer.is_taxexempt() ? customer.taxexemptcode : 'N/A' }}
				</div>
			</div>
		</li>
	</ul>
</div>
