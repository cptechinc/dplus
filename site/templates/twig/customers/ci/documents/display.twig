{% extends 'customers/ci/display.twig' %}

{#
	var                    Description / Instance of
	-------------------------------------------------
	list                   WireData
	list.title             string(HTML)
	list.documents         Document[]
	list.returnUrl         string(HTML)
	list.returnTitle       string(HTML)
#}

{% block links %}
	<div class="p-2 px-3 card-toolbar">
		<div class="d-flex w-100 justify-content-between">
			<h3>{{ list.title }}</h3>
			<a href="{{ list.returnUrl }}" class="btn btn-primary d-print-none">
				<i class="fa fa-undo"></i> {{ list.returnTitle }}
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	{% include 'customers/ci/documents/list.twig' %}
{% endblock %}

{% block footer %}
	<div class="card-footer">
		<div class="d-flex justify-content-between align-items-center">
			<div></div>
			<div></div>
			<a href="{{ page.ciUrl(customer.id) }}" class="btn btn-warning btn-sm">
				<i class="fa fa-times" aria-hidden="true"></i> Close
			</a>
		</div>
	</div>
{% endblock %}
