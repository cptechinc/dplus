<form action="{{ input.url() }}" method="GET" class="allow-enterkey-submit" id="vendor-contact-form">
	<input type="hidden" name="vendorID" value="{{ input.get.text('vendorID') }}">

	<div class="form row">
		<div class="col-sm-4 text-right">
			{% if input.get.offsetExists('q') %}
				<a href="{{ input.paginateUrl(1, {'removeFromQueryString': ['q']}) }}" class="btn btn-warning clear-search">
					<i class="fa fa-times" aria-hidden="true"></i> Clear Search
				</a>
			{% endif %}
		</div>
		<div class="col-sm-8">
			<div class="input-group form-group">
				<input class="form-control" type="text" name="q" value="{{ input.get.text('q') }}" placeholder="Search ID, Name, Contact, Email, Phone, Fax">
				<span class="input-group-btn">
					<button type="submit" class="btn btn-light"> <i class="fa fa-search"></i> <span class="sr-only">Search</span> </button>
				</span>
			</div>
		</div>
	</div>
</form>
