<table class="table table-striped" id="countries-table">
	<thead>
		<tr class="bg-dark text-white">
			<th class="text-center">Code</th>
			<th>Tariff Number</th>
			<th>Description</th>
			<th class="text-right">Tariff %</th>
		</tr>
	</thead>
	{% for code in codes %}
		<tr>
			<td>
				<a href="#" class="link tariff-link" data-code="{{ tariff.code }}">
					{{ tariff.code }}
				</a>
			</td>
			<td>{{ tariff.number }}</td>
			<td>{{ tariff.description }}</td>
			<td class="text-right">{{ tariff.duty_rate }}</td>
			<td>{{ tariff.exchange_rate }}</td>
		</tr>
	{% endfor %}
</table>

<div class="list-group">
	<div class="list-group-item bg-dark text-white">
		<div class="row align-items-center">
			<div class="col-2">
				Code
			</div>
			<div class="col-2">
				Tariff Number
			</div>
			<div class="col-3">
				Description
			</div>
			<div class="col-2">
				Tariff %
			</div>
			<div class="col-3 text-center">
				{% if page.is_print() == false %}
					<a href="{{ page.url ~ '?code=new' }}" class="btn btn-light">
						<i class="fa fa-plus" aria-hidden="true"></i> Add Code
					</a>
				{% endif %}
			</div>
		</div>
	</div>
	{% for code in codes %}
		{# data-code attribute and class code is for the highlight on close #}
		<div id="{{ tariff.code|urlencode }}" data-code="{{ tariff.code|urlencode }}" class="list-group-item code pb-1 pt-1 {{ (response.key == tariff.code and response.has_success() ) ? 'bg-success text-white' : ''}}">
			<div class="row align-items-center">
				<div class="col-2">
					{{ tariff.code }}
				</div>
				<div class="col-2">
					{{ tariff.number }}
				</div>
				<div class="col-3">
					{{ tariff.description }}
				</div>
				<div class="col-2">
					{{ tariff.duty_rate }}
				</div>
				<div class="col-3 text-center">
					{% if recordlocker.function_locked(page.name, tariff.code) == false or recordlocker.function_locked_by_user(page.name, tariff.code) %}
						{% if page.is_print() == false %}
							<a href="{{ page.get_codetable_code_editURL(page.codetable, tariff.code) }}" class="btn btn-warning">
								<i class="fa fa-pencil" aria-hidden="true"></i> Edit
							</a>
							&nbsp;
							<a href="{{ page.get_codetable_code_deleteURL(page.codetable, tariff.code) }}" class="btn btn-danger delete_button">
								<i class="fa fa-trash" aria-hidden="true"></i> Delete
							</a>
						{% endif %}
					{% else %}
						<span class="badge badge-secondary">
							<i class="fa fa-lock" aria-hidden="true"></i> Code Locked By {{ recordlocker.get_locked_user(page.name, tariff.code) }}
						</span>
					{% endif %}
				</div>
			</div>
		</div>
	{% endfor %}
</div>
