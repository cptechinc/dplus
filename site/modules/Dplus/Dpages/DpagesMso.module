/* =============================================================
	URL Functions
============================================================= */
	/**
	 * Returns URL to view Sales Order
	 * @param  string $ordn Sales Order Number
	 * @return string
	 */
	public function get_salesorder_viewURL($ordn) {
		$url = new Url($this->wire('pages')->get('pw_template=sales-order-view')->url);
		$url->query->set('ordn', $ordn);
		return $url->getUrl();
	}


