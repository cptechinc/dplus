	/**
	 * Lock Record, validate User is locking Record
	 * @param  string $itemID ItemID
	 * @return bool
	 */
	public function lockrecord($itemID) {
		if ($this->recordlocker->function_locked($itemID) === false) {
			$this->recordlocker->create_lock($itemID);
		}
		return $this->recordlocker->function_locked_by_user($itemID);
	}
