	public function itmListURL($itemID = '') {
		$page = $this->wire('pages')->get("pw_template=itm");
		if (empty($itemID)) {
			return $page->url;
		}
		return $this->itmListFocus($itemID);
	}

	public function itmListFocus($itemID = '') {
		$page = $this->wire('pages')->get("pw_template=itm");
		$url = new Url($page->url);
		if ($this->exists($itemID) == false) {
			return $url->getUrl();
		}
		$filter = new ItemMasterFilter();
		$offset = $filter->position($this->get_item($itemID));
		$pagenbr = ceil($offset / $this->wire('session')->display);
		$url = $this->wire('modules')->get('Dpurl')->paginate($url, $page->name, $pagenbr);
		$url->query->set('focus', $itemID);
		return $url->getUrl();
	}

