	}

	/**
	 * Return Stock Codes
	 * @return InvStockCode[]|ObjectCollection
	 */
	public function get_stockcodes() {
		return InvStockCodeQuery::create()->find();
	}

	/**
	 * Return Stock Codes
	 * @return InvSpecialCode[]|ObjectCollection
	 */
